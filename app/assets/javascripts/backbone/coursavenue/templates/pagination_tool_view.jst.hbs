<ul class="pagination">
    {{#if buttons }}
    {{!-- make a previous button --}}
    <li class="btn {{#if is_first_page}}disabled{{/if}}">
	<a {{#unless is_first_page}}rel="prev" {{/unless}}><i class="fa-chevron-left"></i></a>
    </li>
    {{#each buttons}}
    <li class="btn {{#if active}}btn--active current{{/if}} {{#if disabled}}disabled{{/if}}">
        <a rel="page" href="{{ query }}">{{ label }}</a>
    </li>
    {{/each}}
    </li>
    {{!-- make a next button --}}
    <li class="btn" {{#if is_last_page}}disabled{{/if}}>
	<a {{#unless is_last_page}}rel="next"{{/unless}}><i class="fa-chevron-right"></i></a>
    </li>
    {{/if}}
</ul>

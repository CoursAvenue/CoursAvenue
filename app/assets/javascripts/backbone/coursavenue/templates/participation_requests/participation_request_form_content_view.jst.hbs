<div class="bordered--ends f-weight-500">
    <div class="grid--full">
        <div class="grid__item v-middle three-twelfths soft--sides soft-half--ends bordered--right">
            <label class="label--large nowrap" for="participation_request_courses_select">Cours</label>
        </div>{{!--
    --}}<div class="grid__item v-middle nine-twelfths soft--sides">
            <select name="participation_request[course_id]" class="one-whole" id="participation_request_courses_select">
                <option>Quel cours vous intéresse ?</option>
                {{#if courses_open_for_trial}}
                    <optgroup label="Cours avec essai gratuit ({{trial_courses_policy}})">
                        {{#each courses_open_for_trial}}
                            <option data-collection-type="courses" value="{{this.id}}" {{#ifIncludeString ../course_ids this.id}}selected{{/ifIncludeString}}>{{this.name}}</option>
                        {{/each}}
                    </optgroup>
                {{/if}}
                {{#if courses_without_open_for_trials}}
                    <optgroup label="Cours réguliers sans essai gratuit">
                        {{#each courses_without_open_for_trials}}
                            <option data-collection-type="courses" value="{{this.id}}" {{#ifIncludeString ../course_ids this.id}}selected{{/ifIncludeString}}>{{this.name}}</option>
                        {{/each}}
                    </optgroup>
                {{/if}}
                {{#if trainings_without_open_for_trials}}
                    <optgroup label="Stages & Ateliers">
                      {{#each trainings_without_open_for_trials}}
                          <option data-collection-type="trainings" value="{{this.id}}" {{#ifIncludeString ../course_ids this.id}}selected{{/ifIncludeString}}>{{this.name}}</option>
                      {{/each}}
                    </optgroup>
                {{/if}}
            </select>
        </div>
    </div>
    <div data-error="course_id" class="{{#unless errors.course_id}}hidden{{/unless}} input_field_error red f-weight-bold text--right">{{errors.course_id}}</div>
    <div class="grid--full bordered--top" data-element="planning-select-wrapper" style="display: none">
        <div class="grid__item v-middle three-twelfths soft--sides soft-half--ends bordered--right">
            <label class="label--large nowrap" for="participation_request_plannings_select">Date</label>
        </div>{{!--
    --}}<div class="grid__item v-middle nine-twelfths soft--sides">
            <select name="participation_request[planning_id]" class="one-whole" id="participation_request_plannings_select">
                <option>Quelle séance souhaitez-vous ?</option>
            </select>
        </div>
    </div>
    <div data-error="planning_id" class="{{#unless errors.planning_id}}hidden{{/unless}} input_field_error red f-weight-bold text--right">{{errors.planning_id}}</div>
    <div class="grid--full bordered--top" data-element="address-info-wrapper" style="display: none">
        <div class="grid__item v-middle three-twelfths soft--sides soft-half--ends bordered--right">
            <label class="label--large nowrap">Lieu</label>
        </div>{{!--
    --}}<div class="grid__item v-middle nine-twelfths epsilon text-ellipsis soft--sides">
            <span data-element="address-info"></span>
        </div>
    </div>
    <div class="grid--full  bordered--top" data-element="datepicker-wrapper" style="display: none">
        <div class="grid__item v-middle three-twelfths soft--sides soft-half--ends bordered--right">
            <label class="label--large nowrap" for="request-date">Jour</label>
        </div>{{!--
     --}}<div class="grid__item v-middle nine-twelfths soft--sides">
              <input type="text" data-behavior="datepicker" name="participation_request[date]" id="request-date" class="datepicker-input input--medium">
              <div class="flexbox__item text--left nowrap">
                  <div data-element="time-wrapper">
                      <select class="input--large" name="participation_request[start_hour]" data-element="start-hour-select"></select>
                      <label class="label--large inline-block">h</label>
                  <select class="input--large" name="participation_request[start_min]" data-element="start-minute-select">
                      <option value="00">00</option>
                      <option value="15">15</option>
                      <option value="30">30</option>
                      <option value="45">45</option>
                  </select>
              </div>
            </div>
        </div>
    </div>
</div>

{{#if logged_in}}
    <div class="drop-down__wrapper grid__item width-auto v-middle hard--left" data-behavior='drop-down' data-el='> .drop-down__el' data-position='right'>
        <a href="{{dashboard_user_path}}">
            {{#if avatar_url}}
            <div class="grid">
                <div class="grid__item v-middle width-auto">
                    <strong>{{ first_name }}</strong>
                </div>
                <div class="grid__item v-middle width-auto soft-half--left">
                  <img src="{{avatar_url}}" alt="" height="40" class="block">
                </div>
            </div>
            {{else}}
                <strong>{{ first_name }}</strong>
            {{/if}}
        </a>
        <ul class="drop-down__el text--left">
            <li class="nowrap">
                <a href="{{ dashboard_user_path }}">
                    <i class="fa fa-user"></i>
                    Mon profil
                </a>
            </li>
            <li class="nowrap">
                <a href="{{ user_comments_path }}">
                    <i class="fa fa-comment"></i>
                    Mes avis
                </a>
            </li>
            <li class="nowrap">
                <a href="{{ user_conversations_path }}">
                    <i class="fa fa-envelope-o"></i>
                    Mes messages
                </a>
            </li>
            <li class="nowrap">
                <a href="{{ user_participations_path }}">
                    <i class="fa fa-list"></i>
                    Mes cours
                </a>
            </li>
            <li class="nowrap">
              <a href="{{ destroy_user_session_path }}" data-method="delete">
                <i class="fa fa-sign-out"></i>
                Se déconnecter
              </a>
            </li>
        </ul>
    </div>
{{else}}
<div class="inline-block">
    <div class="inline-block drop-down__wrapper soft--right">
        <a href="#" data-behavior="sign-up">Inscription</a>
    </div>
    <div class="inline-block drop-down__wrapper soft--right">
        <a href="#" data-behavior="sign-in">Connexion</a>
    </div>
    <div class="inline-block soft-half--sides drop-down__wrapper" data-behavior='drop-down' data-el='> .drop-down__el' data-position='right'>
      <a href="{{ pages_faq_users_url }}" target='_blank'>
        Aide
        <i class="fa fa-caret-down"></i>
      </a>
      <ul class="drop-down__el text--left on-top">
        <li class="nowrap">
            <a href="{{ pages_faq_users_url }}#about-creating-profile" target='_blank'>
                Comment trouver puis s'inscrire à un cours de loisir ?
            </a>
        </li>
        <li class="nowrap">
            <a href="{{ pages_faq_users_url }}#about-creating-profile" target='_blank'>
                Comment contacter un professeur, une association ou une école ?
            </a>
        </li>
        <li class="nowrap">
            <a href="{{ pages_faq_users_url }}#about-creating-profile" target='_blank'>
                Je n'ai pas reçu mon mail d'activation : comment faire ?
            </a>
        </li>
        <li class="nowrap">
            <a href="{{ pages_faq_users_url }}#about-creating-profile" target='_blank'>
                Pourquoi créer un compte élève ?
            </a>
        </li>
        <li class="nowrap">
            <a href="{{ pages_faq_users_url }}#about-creating-profile" target='_blank'>
                Comment déposer une recommandation ?
            </a>
        </li>
      </ul>
    </div>

    <div class="inline-block soft--sides">
        {{#if on_sleeping_page}}
            <a href="{{ take_control_url }}" class="btn btn--orange">Gérer ce profil</a>
        {{else}}
            <a href="{{ inscription_pro_structures_url }}" class="btn btn--orange">Publiez vos cours</a>
        {{/if}}
    </div>
</div>
{{/if}}

<header class="header print--hidden">
  <div class="very-soft soft-half--sides flexbox expanded">
    <div class="flexbox__item palm-one-whole v-middle relative nowrap">
      <a href="https://www.coursavenue.com" class="v-middle coursavenue-header-logo mixpanel-tracker" title="CoursAvenue | Tous les cours autour de vous"></a>
      <div data-type="input-subject-filter" class="inline-block v-middle"></div>
      <div data-type="location-filter" class="inline-block v-middle"></div>
    </div>
      <nav class="text--right flexbox__item v-middle nowrap visuallyhidden--palm print--hidden">
        <div id="user-nav" class="inline-block v-middle"></div>
      </nav>
  </div>
</header>

<div data-type="loader" class="filtered-search__loader" style="display: none;">
  <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="center-block" height="10">
</div>
<div class="flexbox">
  <section id="widgets-container" class="fixed one-whole filtered-search__map-wrapper east flexbox__item relative visuallyhidden--palm" data-type="google-maps">
      {{#each widget}}
          <div id="{{ id }}" data-type="widget"></div>
      {{/each}}
  </section>
  <section class="filtered-search__list-wrapper west fixed flexbox__item palm-one-whole">
      <div class="soft bordered--bottom push--bottom bg-white" data-behavior="sticky">
          <div class="visuallyhidden--lap-and-up soft-half--sides">
              <div class="text--center"><strong>Lieux</strong></div>
              <div id="mobile-location-filter"></div>
              <hr class="push--ends" />
          </div>
          <div>
            <strong class="epsilon v-middle">Filtres : </strong>
            <div class="inline-block v-middle" data-type="subjects-collection"></div>
            <div class="inline-block v-middle" data-type="audience-filter"></div>
            <!-- <div class="inline-block v-middle" data-type="keyword-filter"></div> -->
            <div class="inline-block v-middle" data-type="level-filter"></div>
            <div class="inline-block v-middle" data-type="price-filter"></div>
            <div class="inline-block v-middle" data-type="course-type-filter"></div>
            <div class="inline-block v-middle" data-type="date-filter"></div>
            <div class="inline-block v-middle" data-type="discount-filter"></div>
          </div>
          <div data-type="subjects-collection-wrapper"></div>
          <ol data-type="subjects-breadcrumb" class="hidden nav breadcrumb epsilon push--top flush--bottom" itemprop='breadcrumb'></ol>
          <div class="epsilon push--top" data-type="results-summary"></div>
      </div>

      <div id="search-results" data-tab="search-results"></div>
      <hr class="push--sides">
      <footer class="push-half--bottom">
          <div class="one-whole" data-type="pagination-bottom"></div>
      </footer>
  </section>
</div>

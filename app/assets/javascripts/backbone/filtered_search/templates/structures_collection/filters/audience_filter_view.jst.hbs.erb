<div class="drop-down__wrapper">
    <div class="btn btn--gray btn--full text-transform-none btn--small soft-half--sides" data-behavior="clear-filter">
      Âge
      <i class="fa fa-times hidden" data-el="clearer"></i>
    </div>
    <div class="drop-down__el on-top">
        <div class="drop-down__el-inner-box soft-half">
            <div class="btn-group inline-block v-middle" data-toggle="buttons">
              <% Audience.all.each do |audience| %>
                    <label class="btn btn--gray text-transform-none soft--sides">
                        <input type="checkbox" name="audience_ids[]" value="<%= audience.id %>"><%= I18n.t(audience.name) %>
                    </label>
              <% end %>
            </div>
            <div data-behavior="age-picker" class="push-half--top">
                De <select id="min-age"></select>
                à <select id="max-age"></select> ans.
            </div>
        </div>
    </div>
</div>

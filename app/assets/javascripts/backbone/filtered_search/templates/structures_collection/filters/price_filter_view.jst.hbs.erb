<div class="grid--full">
    <div class="grid__item v-middle one-fifth">
        <strong class="gray">Prix</strong>
    </div><!--
 --><div class="grid__item v-middle four-fifths">
        <select data-type="price" class="inline-block v-middle">
            <% Price::TYPES.each do |price| %>
                <option value="<%= price %>" data-range="<%= Price::RANGES[price][:min] %>,<%= Price::RANGES[price][:max] %>"><%= I18n.t(price).split(" ").last %></option>
            <% end %>
        </select>
        <div class="one-half soft--left inline-block v-middle" style="padding-left: 10px;">
            <div data-behavior="slider"></div>
        </div>
    </div>
</div>


<div class="grid--full relative visuallyhidden--palm">
    <div class="grid__item v-middle one-fifth palm-one-whole palm-text--center ">
        <strong class="gray">Mot clé</strong>
        <i class="push-half--left pointer fa fa-question-circle" data-toggle="popover" data-trigger="hover" data-placement="right" data-content="Indiquez le mot clé correspondant à votre recherche : il peut s'agir d'une discipline précise, mais également du nom d'un profil"></i>
    </div><!--
  --><div class="grid__item v-middle four-fifths palm-one-whole" data-type="search-input-wrapper">
        <div class="search-input-wrapper relative" style="display:block;">
            <input id="search-input" size="50" placeholder="Renseignez une discipline précise ou le nom d'une structure" type="search" name="name" autocomplete="off" class="one-whole"></input>
        </div>
    </div>
    <div data-type="menu" class="hidden four-fifths bordered bordered--orange bg-orange absolute east z-index-3 rounded--double">
        <div class="keyword-subjects push-half--top push--left relative">
            {{#each subjects}}
                {{#ifCond slug '==' 'other'}}
                    <a href="#tab-{{slug}}" class="v-middle inline-block white push--right push-half--bottom" data-type="button" data-value="{{slug}}" data-toggle="tab" title="{{name}}">{{name}}</a>
                {{else}}
                    <a href="#tab-{{slug}}" class="{{#if is_first}}active{{/if}} inline-block white push--right push-half--bottom subject_icon subject_icon__{{slug}} v-middle" data-type="button" data-value="{{slug}}" data-toggle="tab" title="{{name}}">
                    </a>
                {{/ifCond}}
            {{/each}}
        </div>

        <div class="grid__item one-whole soft-half b-white tab-content rounded--double"></div>
    </div>
</div>


<div class="flexbox white-box structure-item" data-el="structure-view">
    <div class="flexbox__item v-top structure-item__logo">
        <div class="relative">
            <a href="{{ query_url }}" class="block">
                <img src="{{ logo_thumb_url }}" class="block one-whole" alt="Cours de {{ parent_subjects_text }} à {{ name }}">
            </a>
        </div>
    </div><!--
 --><article class="flexbox__item six-tenths palm-eight-tenths v-top structure-item__see-all-wrapper structure-item__button line-height-1-7">
        <div class="relative full-height soft-half hard--right">
            <div class="epsilon flush v-top line-height-1-7">
                <a href="{{ query_url }}">{{ name }}</a>
                {{#if premium}}
                    <div class="inline-block lbl lbl--green">Offres découvertes</div>
                {{/if}}
            </div>
            <div>
                {{#if structure_type}}
                    {{ structure_type }}
                {{else}}
                    Structure
                {{/if}}
                proposant des
                {{ given_course_types }}
            </div>
            <div>
                {{#if has_plannings}}
                <div>
                    {{ plannings_count }} {{ pluralize plannings_count 'créneau horaire' 'créneaux horaires' }}
                    {{#if has_price_range }}
                        /
                        de
                        <span class="pointer" data-behavior="tooltip" title="{{ min_price_libelle }}">{{ min_price_amount }}€</span>
                        à
                        <span class="pointer" data-behavior="tooltip" title="{{ max_price_libelle }}">{{ max_price_amount }}€</span>
                    {{else}}
                        /
                        {{#if min_price_amount}}
                            à partir de
                            <span class="pointer" data-behavior="tooltip" title="{{ min_price_libelle }}">{{ min_price_amount }}€</span>
                        {{/if}}
                    {{/if}}
                </div>
                <div>
                    <strong>
                        <i class="fa fa-comments"></i> {{ comments_count }}
                        {{#if last_comment_title}}<i class="quoted milli">{{{truncate last_comment_title 60}}}</i>{{/if}}
                    </strong>
                </div>
                {{/if}}

            </div>
            <a href="javascritp:void(0);" class="structure-item__see-all btn btn--blue btn--full btn--small" data-behavior="accordion-control" data-model="course" data-attributes="data_url" data-wrapper=".structure-item__see-all-wrapper">
                {{#if plannings_count}}
                    <span>Voir les séances</span>
                {{else}}
                    <span>Pas de séance, contactez le professeur</span>
                {{/if}}
            </a>
        </div>
    </article><!--
 --><div class="flexbox__item visuallyhidden--palm two-eighths v-middle text--center rslides-wrapper structure-item__see-all-wrapper">
        {{#if preloaded_medias}}
        <div class="relative full-height">
            <a class="structure-item__see-all rslides_nav rslides_nav--bottom" data-behavior="accordion-control" data-wrapper=".structure-item__see-all-wrapper" data-model="media" data-attributes="data_url">
                <span>Voir la galerie ({{medias_count}})</span>
            </a>
            <ul class="rslides hidden">
                {{#each preloaded_medias}}
                    <li>
                        <a rel="slideshow-{{mediable_id}}" href="{{{this.url}}}" class="rslides_nav rslides_nav--icon {{#if this.is_video}}visible{{/if}}" data-behavior="fancy">
                            <i class="fa {{#if this.is_video}}fa-youtube-play{{else}}fa-eye{{/if}}"></i>
                        </a>
                        <div class="media__item media__item--slides">
                            <a class="break-all" title="{{this.caption}}" href="{{this.url}}">
                                <img src="{{this.thumbnail_url}}" />
                            </a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
        {{else}}
        <div class="text--center gray-light">
            <i class="fa fa-picture-o fa-3x gray-light"></i>
            <br />
            0 photo / vidéo
        </div>
        {{/if}}
    </div>
</div>



<div class="flexbox white-box structure-item" data-el="structure-view">
    <div class="flexbox__item v-top structure-item__logo" style="width: 150px;">
        <div class="relative">
            <a href="{{ query_url }}" class="block">
                <img src="{{ logo_thumb_url }}" class="block one-whole" alt="Cours de {{ parent_subjects_text }} à {{ name }}">
            </a>
        </div>
    </div><!--
 --><article class="flexbox__item v-top structure-item__see-all-wrapper structure-item__button line-height-1-7">
        <div class="relative full-height soft-half hard--right">
            <h4 class="flush v-top">
                <a class="v-middle" href="{{ query_url }}">{{ name }}</a>
                {{#if premium}}
                    <div class="inline-block lbl lbl--yellow milli v-middle"><i class="fa fa-tag"></i> Offres promotionnelles</div>
                {{/if}}
            </h4>
            <div>
                {{#if structure_type}}
                    {{ structure_type }}
                {{else}}
                    Structure
                {{/if}}
                proposant des
                {{ given_course_types }}
            </div>
            <div>
                {{#if has_plannings}}
                <div>
                    {{ plannings_count }} {{ pluralize plannings_count 'créneau horaire' 'créneaux horaires' }}
                    {{#if has_price_range }}
                        de
                        <span class="pointer" data-behavior="tooltip" title="{{ min_price_libelle }}">{{ min_price_amount }}€</span>
                        à
                        <span class="pointer" data-behavior="tooltip" title="{{ max_price_libelle }}">{{ max_price_amount }}€</span>
                    {{else}}
                        {{#if min_price_amount}}
                            à partir de
                            <span class="pointer" data-behavior="tooltip" title="{{ min_price_libelle }}">{{ min_price_amount }}€</span>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
                {{#ifCond comments_count '>' 0 }}
                    <div>
                        <strong>
                            <i class="fa fa-comments"></i> {{ comments_count }}
                            {{#if highlighted_comment_title}}<i class="quoted milli">{{{truncate highlighted_comment_title 60}}}</i>{{/if}}
                        </strong>
                    </div>
                {{/ifCond}}

            </div>
        </div>
    </article>
</div>

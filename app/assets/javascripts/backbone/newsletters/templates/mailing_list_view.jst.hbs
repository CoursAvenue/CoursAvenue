<input type='radio' id='mailing_list_all_profiles_{{ id }}' name='mailing_list' value='{{ id }}' class='input--large one--whole' />
<label for='mailing_list_all_profiles_{{ id }}'>{{ name }}</label>
<a href='javascript:void(0)' data-toggle-filters='true'>Afficher / cacher les filtres</a>


<ul class='hidden' data-filters-list="true">
  {{#each filters}}
  <li>
    {{ predicate }} -> {{ tag }}
  </li>
  {{/each}}
</ul>

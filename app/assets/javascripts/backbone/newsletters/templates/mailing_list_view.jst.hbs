    {{#each filters}}
    <select name='{{@index}}_predicate'>
      <option value='is'          {{isSelected 'is' predicate          }}>est</option>
      <option value='isnot'       {{isSelected 'isnot' predicate       }}>n'est pas</option>
      <option value='contains'    {{isSelected 'contains' predicate    }}>contient</option>
      <option value='containsnot' {{isSelected 'containsnot' predicate }}>ne contient pas</option>
    </select>

    <select name='{{@index}}_tag'>
      {{#each ../allTags}}
        <option value='{{ this }}' {{ isSelected this tag }}>{{ this }}</option>
      {{/each}}
    </select>
    {{/each}}
  </ul>
{{/unless}}

<div data-type="loader" class="filtered-search__loader" style="display: none;">
  <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="center-block" height="10">
</div>
<section id="widgets-container" class="filtered-search__map-wrapper relative" data-type="google-maps">
    {{#each widget}}
        <div id="{{ id }}" data-type="widget"></div>
    {{/each}}
</section>

<section class="filtered-search__list-wrapper one-whole">
    <div class="white-box soft-half hard--top">

        <div data-type="subject-filter"></div>
        <hr class="push-half--ends" />
        <div data-type="keyword-filter"></div>

        <div data-type="filters-results">
            <div class="hard--top collapse" id="advanced-filters">
                <hr class="push-half--ends" />
                <div data-type="audience-filter"></div>
                <hr class="push-half--ends" />
                <div data-type="level-filter"></div>
                <hr class="push-half--ends" />
                <div class="one-whole" data-type="date-filter"></div>
                <hr class="push-half--ends" />
                <button class="btn btn--blue btn--full text--center" data-toggle="collapse" data-target="#advanced-filters">Voir les r√©sultats</button>
            </div>
        </div>
        <hr class="push-half--ends" />
        <div class="flexbox">
            <div class="flexbox__item v-middle" data-type="filter-breadcrumbs">
            </div>
            <div class="flexbox__item v-middle" data-type="results-summary">
            </div>
        </div>
    </div>

    <div class="active tab-pane" id="search-results" data-tab="search-results"></div>

    <div class="filtered-search__infinite-scroll text--center" data-type="infinite-scroll-button"></div>

</section>

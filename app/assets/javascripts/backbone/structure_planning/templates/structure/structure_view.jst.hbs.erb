<div class="bordered--top" id="stages-ateliers" data-wrapper>
    <div class="soft gamma line-height-1-7">
        <strong>Stages et ateliers</strong>
    </div>
    <div class="panel__body soft--bottom soft--sides">
        <article>
            <div class="one-whole text--center">
                <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="push--ends" height="10" data-trainings-loader style="display: none;">
            </div>
            <div data-summary-container class="text--left epsilon rounded--none">
                <div data-type="trainings-summary"></div>
            </div>
            <div data-type="trainings-collection"></div>
        </article>
    </div>
</div>


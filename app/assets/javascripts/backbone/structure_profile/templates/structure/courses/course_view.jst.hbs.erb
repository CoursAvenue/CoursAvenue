<h3 class="epsilon push-half--bottom">{{ name }}</h3>
<div class="flexbox push--bottom">
    <div class="flexbox__item v-top one-quarter">
        <strong class="gray-light">Description</strong>
    </div>
    <div class="flexbox__item v-top three-quarters">
        {{#if description}}
            {{#ifCond description '!=' description_short}}
            <div id="course-{{id}}-description-short" class="gray">
                {{{ simple_format_hide_contacts description_short }}}
            </div>
            <a href="#" data-behavior="show-long-version" data-short-version="#course-{{id}}-description-short" data-long-version="#course-{{id}}-description-long">
            + Plus
            </a>
            <div id="course-{{id}}-description-long" class="gray hidden" itemprop="description">
                {{{ simple_format_hide_contacts description }}}
            </div>
            {{else}}
            <div class="gray" itemprop="description">
                {{{ simple_format_hide_contacts description }}}
            </div>
            {{/ifCond}}
        {{else}}
            <div class="gray" itemprop="description">
                Pas de description
            </div>
        {{/if}}
    </div>
</div>
{{#if on_appointment}}
    {{#if course_location}}
      <div class="flexbox push--bottom">
          <div class="flexbox__item v-top one-quarter">
              <strong class="gray-light text--right">Lieux</strong>
          </div>
          <div class="flexbox__item v-top three-quarters">
              {{ course_location }}
          </div>
      </div>
    {{/if}}
{{/if}}
<div class="flexbox push--bottom">
    <div class="flexbox__item v-top one-quarter">
        <strong class="gray-light">Détails</strong>
    </div>
    <div class="flexbox__item v-top three-quarters">
        <div><!--
         -->{{#each details}}<!--
          --><div class="inline-block one-half v-middle push-half--bottom soft-half--right {{#ifCond @index '>' 1}}course-{{../../id}}-details-long hidden{{/ifCond}}">
                <div class="flexbox">
                    <div class="flexbox__item v-middle two-twelfths text--center">
                        <img src="{{this.icon}}" height="15" class="v-middle">
                    </div>
                    <div class="flexbox__item v-middle ten-twelfths">
                        {{this.text}}
                    </div>
                </div>
            </div><!--
         -->{{#ifCond @index '==' 2}}<!--
             --><a href="#" data-behavior="show-long-version" data-long-version=".course-{{../../id}}-details-long">
                    + Plus
                </a><!--
         -->{{/ifCond}}<!--
         -->{{/each}}<!--
      --></div>
    </div>
</div>
<div class="flexbox push--bottom">
    <div class="flexbox__item v-top one-quarter">
        <strong class="gray-light">Planning</strong>
    </div>
    <div class="flexbox__item v-top three-quarters">
        <table class="table--striped table--data-small {{#if on_appointment}}hidden{{/if}}">
            <thead>
                <tr>
                    <th>Jour</th>
                    <th>Horaires</th>
                    <th>Niveau</th>
                    <th>Public</th>
                    <th>Lieu</th>
                </tr>
            </thead>
            <tbody data-type="plannings-container"></tbody>
        </table>
    </div>
</div>

<div class="flexbox push--bottom">
    <div class="flexbox__item v-top one-quarter">
        <strong class="gray-light">Tarifs</strong>
    </div>
    <div class="flexbox__item v-top three-quarters">
        <table class="table--striped table--data-small">
            <thead>
                <tr>
                    <th class="three-twelfths">Formule</th>
                    <th class="one-twelfth  text--center">Prix</th>
                    {{#if premium}}
                        <th class="one-twelfth  text--center">Promotion</th>
                    {{/if}}
                    <th class="{{#if premium}}six-twelfths{{else}}eight-twelfths{{/if}}">Info</th>
                </tr>
            </thead>
            <tbody>
                {{#if premium}}
                {{#if premium_prices}}
                {{#each premium_prices}}
                    <tr>
                        <td class="nowrap">
                            <img src="<%= asset_path('icons/icon-star-yellow-full-bordered.png') %>" height="14" class="v-middle" data-toggle="tooltip" data-title="{{this.libelle_type}}">
                            <span class="v-middle">{{this.libelle}}</span>
                        </td>
                        <td class="text--right">
                            <strong class="green">{{this.amount}}</strong>
                        </td>
                        <td class="text--center">
                            <strong class="green">{{this.promo_amount}}</strong>
                        </td>
                        <td>{{{ hide_contacts this.info }}}</td>
                    </tr>
                {{/each}}
                {{/if}}
                {{/if}}
                {{#each prices}}
                    {{#ifCond @index '==' 2}}
                        <tr data-behavior="show-long-version" data-long-version=".course-{{id}}-prices-long">
                          <td colspan="4">
                              <a href="#" class="block">
                              + Plus
                              </a>
                          </td>
                        </tr>
                    {{/ifCond}}
                    <tr class="{{#ifCond @index '==' 0}}bordered--top{{/ifCond}}{{#ifCond @index '>' 1}}course-{{id}}-prices-long hidden{{/ifCond}}">
                        <td>
                            {{this.libelle}}
                        </td>
                        <td class="text--right {{#if this.promo_amount}}line-through{{/if}}">
                            {{this.amount}}
                        </td>
                        <td class="text--center">
                            {{#if ../premium}}
                              {{#if this.promo_amount}}
                                <img src="<%= asset_path('icons/icon-star-yellow-full-bordered.png') %>" height="14" class="v-middle" data-toggle="tooltip" data-title="Offre spéciale CoursAvenue">
                                <strong class="green">{{this.promo_amount}}</strong>
                              {{/if}}
                            {{/if}}
                        </td>
                        <td>{{{ hide_contacts this.info }}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="flexbox push--bottom">
    <div class="flexbox__item v-top one-quarter">
        <strong class="gray-light">Disciplines concernées</strong>
    </div>
    <div class="flexbox__item v-top three-quarters">
        <div>
            {{#each subjects}}
            <div class="push-half--bottom {{#ifCond @index '>' 0}}course-{{id}}-subjects-long hidden{{/ifCond}}">
                <img src="{{this.icon}}" alt="Disciplines pratiquées : {{this.icon}}" height="16" class="v-middle">
                <strong class="v-middle">{{this.root_name}}</strong>
                <br>
                {{this.child_names}}
            </div>
            {{#ifCond @index '==' 1}}
                <div>
                    <a href="#" data-behavior="show-long-version" data-long-version="#course-{{id}}-subjects-long">
                    + Plus
                    </a>
                </div>
            {{/ifCond}}
            {{/each}}
        </div>
    </div>
</div>
<hr class="push--ends">

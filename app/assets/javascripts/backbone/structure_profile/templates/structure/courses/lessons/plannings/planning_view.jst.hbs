<td data-th="Jour">
    <div>
        <meta itemprop="summary" content="{{course.name}}">
        {{#if is_open_for_trial}}
        <div class="absolute" style="margin-left: -120px;">
            <div class="yellow--dark nowrap v-middle push-half--left"><i class="fa-ticket"></i> Essai gratuit</div>
        </div>
        {{/if}}
        {{ date }}
    </div>
</td>
<td data-th="Horaire" class="nowrap text--center">
    <div>
        <time itemprop="startDate" datetime="{{start_date_datetime}}">{{ time_slot }}</time>
        <time itemprop="endDate" datetime="{{end_date_datetime}}"></time>
    </div>
</td>
<td data-th="Niveau"><div>{{ levels }}</div></td>
<td data-th="Public">
    <div>{{ audiences }}</div>
</td>
<td data-th="Lieu" style="min-width: 80px;" itemprop="location" itemscope itemtype="http://data-vocabulary.org/Organization">
    <div>
        {{#if address_name }}
            <div itemprop="name" class="gray" data-toggle="popover" data-html="true" data-trigger="hover" data-content="{{ hide_contacts_and_escape address_with_info }}">{{address_name}}</div>{{!--
         --}}<span itemprop="address" itemscope itemtype="http://data-vocabulary.org/Address">{{!--
             --}}<meta itemprop="street-address" content="{{address}}">
             </span>{{!--
          --}}<span itemprop="geo" itemscope itemtype="http://data-vocabulary.org/Geo">{{!--
            --}}<meta itemprop="latitude" content="{{latitude}}"><meta itemprop="longitude" content="{{longitude}}">{{!--
         --}}</span>{{!--
     --}}{{/if}}
    </div>
</td>
<td data-th="Infos">
    {{#if info}}
    <div data-content="{{ hide_contacts_and_escape info }}" data-toggle="popover" data-trigger="hover" data-html="true">
        <i class='fa-info'></i>
    </div>
    {{/if}}
</td>

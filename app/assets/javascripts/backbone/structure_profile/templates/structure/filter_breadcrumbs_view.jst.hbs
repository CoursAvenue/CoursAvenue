{{#unlessEmpty breadcrumbs}}
    <div>
        <span class="v-middle label--large">:</span>
        {{#each breadcrumbs}}
          <span class="lbl f-color-black v-middle pointer" data-type="clear" data-target="{{target}}" {{#if title}} data-behavior="tooltip" title="{{ title }}"{{/if}}>
            <i class="fa fa-times soft-half--right"></i>{{name}}
          </span>
        {{/each}}
    </div>
{{/unlessEmpty}}

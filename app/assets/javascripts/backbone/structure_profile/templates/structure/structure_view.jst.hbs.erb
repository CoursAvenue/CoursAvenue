<article id="presentation">
    <div class="soft">
        <div class="flexbox push-half--bottom">
          {{#if logo_thumb_url}}
          <div class="flexbox__item v-top">
              <div class="float--left push--right push-half--bottom text--center">
                  <div class="media-photo">
                      <img src="{{ logo_thumb_url }}" alt="Image de profil de {{ name }}" height="150" width="150" class="block">
                  </div>
              </div>
          </div>
          {{/if}}
          <div class="flexbox__item v-top">
              <h1 class="beta gray push-half--bottom">{{ name }}</h1>
              <div class="delta f-weight-500 push-half--bottom gray">
                {{ structure_type }} - {{ cities_text }}
              </div>
              {{#each subjects}}
              <div class="{{#ifCond @index '>' 1}}description-more-long hidden{{/ifCond}}">
                  <h3 class="flush f-weight-normal inline-block inherit-font-size">
                    <img src="{{this.icon}}" alt="Disciplines pratiquées : {{this.icon}}" height="16" class="v-middle">
                    <strong>{{this.root_name}} : </strong>{{this.child_names}}
                  </h3>
              </div>
              {{/each}}
          </div>
        </div>
        <div class="push-half--bottom">
            {{#if description}}
              {{#ifCond description '!=' description_short}}
              <div id="description-short" class="gray last-p-push-half--bottom">
                  {{{ simple_format_hide_contacts description_short }}}
                  <a href="#" data-behavior="show-long-version" data-short-version="#description-short" data-long-version=".show-more-description-more-info-long">+ Plus</a>
              </div>
              {{else}}
              <div class="gray" itemprop="description">
                  {{{ simple_format_hide_contacts description }}}
                  <a href="#" data-behavior="show-long-version" data-long-version=".show-more-description-more-info-long">+ Plus</a>
              </div>
              {{/ifCond}}
            {{else}}
              <div class="gray">
                  {{ capitalize about }} n'a pas ajouté sa description :
                  <a href="#" data-behavior="show-long-version" data-long-version=".show-more-description-more-info-long">+ Plus</a>
              </div>
            {{/if}}
            <div class="show-more-description-more-info-long hidden">
                <div class="gray" itemprop="description">
                    {{{ simple_format_hide_contacts description }}}
                </div>
                <div>
                    <hr class="push--bottom push-half--top">
                    <div class="flexbox">
                        <div class="flexbox__item v-top one-quarter">
                            <strong class="gray-light">Plus d'infos</strong>
                        </div>
                        <div class="flexbox__item v-top three-quarters">
                            <table class="table--data table--striped table--striped-reversed bordered push-half--bottom">
                                <tbody>
                                    {{#if given_funding_type}}
                                    <tr>
                                        <td class="one-third">Financements acceptés</td>
                                        <td class="two-thirds"><strong>{{given_funding_type}}</strong></td>
                                    </tr>
                                    {{/if}}
                                    {{#if audience}}
                                    <tr class="{{#if given_funding_type}}description-more-info-long hidden{{/if}}">
                                        <td class="one-third">Public</td>
                                        <td class="two-thirds"><strong>{{audience}}</strong></td>
                                    </tr>
                                    {{/if}}
                                    {{#if structure_type}}
                                    <tr class="{{#if given_funding_type}}description-more-info-long hidden{{/if}}{{#if audience}}description-more-info-long hidden{{/if}}">
                                        <td class="one-third">Type de structure</td>
                                        <td class="two-thirds"><strong>{{structure_type}}</strong></td>
                                    </tr>
                                    {{/if}}
                                    {{#if given_course_types}}
                                    <tr class="{{#unless has_only_one_more_info}}description-more-info-long hidden{{/unless}}">
                                        <td class="one-third">Cours proposés</td>
                                        <td class="two-thirds"><strong>{{given_course_types}}</strong></td>
                                    </tr>
                                    {{/if}}
                                </tbody>
                            </table>
                            {{#unless has_only_one_more_info}}{{#if given_course_types}}
                            <div>
                                <a href="#" data-behavior="show-long-version" data-long-version=".description-more-info-long">
                                + Plus
                                </a>
                            </div>
                            {{/if}}{{/unless}}
                        </div>
                    </div>
                </div>
                {{#if has_teachers}}
                <hr class="push--ends">
                <div class="flexbox">
                    <div class="flexbox__item v-top one-quarter">
                        <strong class="gray-light">Professeurs</strong>
                    </div>
                    <div data-type="teachers-collection" class="flexbox__item v-top three-quarters">
                        <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="center-block push--ends" height="10" data-teachers-loader style="display: none;">
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</article>

<div class="push--bottom bordered--top" id="cours-reguliers" data-wrapper>
    <div class="soft-half--ends soft--sides">
        <div class="flush gamma line-height-1-7"><strong>Cours réguliers</strong></div>
    </div>
    <div class="panel__body soft--bottom soft--sides">
        <article>
            <div class="one-whole text--center">
                <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="push--ends" height="10" data-courses-loader style="display: none;">
            </div>
            <div data-summary-container class="text--left epsilon rounded--none">
                <div data-type="courses-summary"></div>
            </div>
            <div data-type="courses-collection"></div>
        </article>
    </div>
</div>

<div class="push--bottom bordered--top" id="stages-ateliers" data-wrapper>
    <div class="soft-half--ends soft--sides">
        <div class="flush gamma line-height-1-7"><strong>Stages et ateliers</strong></div>
    </div>
    <div class="panel__body soft--bottom soft--sides">
        <article>
            <div class="one-whole text--center">
                <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="push--ends" height="10" data-trainings-loader style="display: none;">
            </div>
            <div data-summary-container class="text--left epsilon rounded--none">
                <div data-type="trainings-summary"></div>
            </div>
            <div data-type="trainings-collection"></div>
        </article>
    </div>
    </div>
</div>

    {{#if title }}
        <h6 class="brand flush--bottom" content="Dans la joie et la bonne humeur" itemprop="headline">{{ title }}</h6>
        <span class="gray quoted read-more push-half--bottom read-more" data-behavior="read-more" itemprop="reviewBody" style="max-height: 50px;">
          {{{ content }}}
        </span>
    {{else}}
        <span class="gray quoted read-more push-half--bottom read-more" data-behavior="read-more" itemprop="reviewBody" style="max-height: 50px;">
          {{{ content }}}
        </span>
    {{/if}}

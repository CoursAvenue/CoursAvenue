<article data-url="{{ comment_url }}" class="structure-item__button soft-half">
    {{#if title }}
        <h6 class="brand flush--bottom quoted" content="Dans la joie et la bonne humeur" itemprop="headline">{{ title }}</h6>
        <div class="gray" itemprop="reviewBody">
          <span>{{{ content }}}</span>
    {{else}}
        <div class="gray" itemprop="reviewBody">
          <span>{{{ content }}}</span>
    {{/if}}
      <i class="semi-muted structure-item__comment-author" content="{{localizeDate created_at null}}" itemprop="datePublished">Par {{author_name}} il y a {{ distance_of_time }}</i>
    </div>
</article>

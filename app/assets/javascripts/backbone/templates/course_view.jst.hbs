<thead>
    <tr class="bold">
        <td colspan="3" class="text--left">
            <a href="{{data_url}}" title="{{ name }}">{{ name }}</a>
        </td>
        {{!-- <td>{{ start_date }} à {{ end_date }}</td> --}}
        <td colspan="2" class="text--right">
        {{#if min_price_amount}}
            à partir de {{ min_price_amount }}€ ({{ min_price_libelle }})
        {{/if}}
        </td>
    </tr>
<tbody>
    {{#each plannings }}
    <tr>
        <td class="four-twelfths">{{ week_day }}</td>
        <td class="three-twelfths">{{ time_slot }}</td>
        <td class="one-twelfth">{{ duration }}</td>
        <td class="three-twelfths">{{ levels }}</td>
        <td class="one-twelfth">
            {{#if is_individual}}
                <i class="fa fa-user"></i>
            {{else}}
                <i class="fa fa-group"></i>
            {{/if}}
            {{#if teaches_at_home}}
                <i class="fa fa-home"></i>
            {{/if}}
        </td>
    </tr>
    {{/each}}
</tbody>

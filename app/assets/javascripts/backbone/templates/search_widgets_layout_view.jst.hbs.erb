<div data-type="loader" class="filtered-search__loader" style="display: none;">
  <img src="<%= asset_path 'gifs/loading-indicator.gif' %>"/ class="center-block" height="10">
</div>
<section id="widgets-container" class="filtered-search__map-wrapper relative">
    {{#each widget}}
        <div id="{{ id }}" data-type="widget"></div>
    {{/each}}
</section>

<section class="filtered-search__list-wrapper">
    <header class="flexbox page-entries-wrapper soft-half">
        <div class="one-whole" data-type="subject-filter"></div>
        <div class="one-whole" data-type="categorical-filter"></div>
        <div class="flexbox">
            <div class="flexbox__item palm-one-whole" data-type="results-summary"></div>
            <div class="flexbox__item visuallyhidden--palm text--right" data-type="top-pagination"></div>
        </div>
    </header>

    <div id="search-results"></div>

    <div class="text--center" data-type="bottom-pagination">
    </div>
</section>

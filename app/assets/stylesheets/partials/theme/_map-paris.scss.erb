.map-marker:after {
    content         : '';
    display         : inline-block;
    border-left     : 4px solid transparent;
    border-right    : 4px solid transparent;
    border-top      : 6px solid $btnPrimaryBackground;
    position        : absolute;
    bottom          : -6px;
    left            : 50%;
    margin-left     : -4px;
}

.map-marker:before {
    content         : '';
    display         : inline-block;
    border-left     : 5px solid transparent;
    border-right    : 5px solid transparent;
    border-top      : 7px solid darken($brand-color, 10%);
    position        : absolute;
    bottom          : -7px;
    left            : 50%;
    margin-left     : -5px;
}
.map-marker {
    display         : inline-block;
    padding         : 2px 5px;
    background-color: $brand-color;
    border          : solid 1px darken($brand-color, 10%);
    text-align      : center;
    min-width       : 1.3em;
    text-shadow     : -1px -1px 0 #a34c30;
    font-size       : 12px;
    @include border-radius($brand-round);
    @include background-image(linear-gradient(top, $btnPrimaryBackgroundHighlight, $btnPrimaryBackground));
    &, a {color: white;}
}
.map-paris {
    position        : relative;
    max-width       : 485px;
    max-height      : 408px;
    display         : block;
    .map-marker {
        position: absolute;
    }
}


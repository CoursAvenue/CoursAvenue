%table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
  %tr{ valign: 'top' }
    %td.content-block{ width: '600', colspan: '4' }
      .title Profils similaires complets
  - @structures.in_groups_of(2, false) do |structure_group|
    %tr{valign: 'top'}
      - structure_group.each do |structure|
        %td.soft-half.v-top.content-block{ width: 80 }
          = link_to structure_url(structure, subdomain: CoursAvenue::Application::WWW_SUBDOMAIN) do
            = image_tag structure.logo.url(:thumb), width: 80, height: 80
        %td.v-top.content-block{ width: '250' }
          .p.hard--bottom
            %strong= truncate("#{structure.name} (#{structure.city.name})", length: 25)
            %br
            %i= "#{truncate(structure.subjects.at_depth(0).map(&:name).join(', '), length: 25)}".html_safe
            %br
            = truncate "#{structure.comments.first.try(:title)}", length: 25

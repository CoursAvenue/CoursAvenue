%table{align: 'center', border: '0', cellpadding: '15', cellspacing: '0', width: '600'}
  %tr{valign: 'top'}
    %td.soft-half.flush--bottom.hard--bottom.content-block{width: '600', colspan: '4', style: 'padding-bottom: 0'}
      %h4.flush Profils similaires complets
  - @structures.in_groups_of(2, false) do |structure_group|
    %tr{valign: 'top'}
      - structure_group.each do |structure|
        %td.soft-half.v-middle.content-block.push--bottom{width: '50'}
          = link_to structure_url(structure, subdomain: 'www'), class: 'push-half--bottom' do
            = image_tag structure.logo.url(:thumb), width: 50, height: 50, style: 'width: 50px; height: 50px;'
        %td.soft-half.v-middle.content-block.push--bottom{width: '250', style: 'padding-right: 0; padding-left: 0;'}
          %p.flush--bottom
            %strong= "#{structure.name} (#{structure.city.name})"
          %p.flush--bottom.milli
            %i= "#{truncate(structure.subjects.at_depth(0).map(&:name).join(', '), length: 30)}".html_safe
          %p.flush--bottom.milli
            "#{structure.comments.first.try(:title)}"
          %p.flush--bottom.milli
            = link_to "Lire les #{structure.comments_count} avis", structure_url(structure, subdomain: 'www')

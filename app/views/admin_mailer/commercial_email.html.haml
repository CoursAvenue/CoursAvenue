- content_for :no_yield do
  &nbsp;

- content_for :under_content_no_box do
  %table.promo-table{ border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr
      %td.content-block
        = image_tag 'emails_logo/premium/commercial_header_50percents.jpg', alt: "N’attendez pas la fin de l’été", width: 600, height: 189

- content_for :under_content do
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr{ valign: 'top' }
      %td.v-middle.content-block{ width: 250 }
        .soft--right
          .delta.text--right{ style: 'line-height: 25px;' }
            %i Passez au Premium
            %br
            %i maintenant pour
            %br
            %i économiser
      %td.v-middle.content-block{ width: 100 }
        = image_tag 'emails_logo/premium/50percents.png', height: 100, width: 100
      %td.v-middle.content-block{ width: 250 }
        .soft--left
          .delta{ style: 'line-height: 25px;' }
            %i jusqu’à la fin
            %br
            %i de l’année
          .epsilon
            %i soit
            %i.line-through 34€
            %span.delta
              %i 17€/mois
    %tr{ valign: 'top' }
      %td.content-block{ colspan: 3 }
        .p.text--center.soft--top.soft-half--bottom
          Offre réservée à nos premiers partenaires. Valable jusqu'au 31 juillet.
        .action
          = link_to "J'en profite", premium_pro_structure_url(@structure, subdomain: CoursAvenue::Application::PRO_SUBDOMAIN), class: 'btn btn--yellow', style: 'padding-left: 30px; padding-right: 30px;'


- content_for :under_content_no_box do
  %table.promo-table{ border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr
      %td.content-block
        = link_to 'https://www.coursavenue.com/etablissements?utf8=%E2%9C%93&subject_id=&address_name=Paris&lat=48.8592&lng=2.3417&page=1&course_types[]=training&start_date=05%2F07%2F2014&end_date=31%2F08%2F2014', class: 'muted-link block' do

          %tr{valign: 'top'}
            %td.soft-half--top.text--center{width: '300'}
              = image_tag 'emails_logo/eye.png', alt: 'CoursAvenue', height: '80', width: '80', style: 'width: 80px; height: 80px;'
          %tr{valign: 'top'}
            %td.content-block.push--bottom{width: '300', style: 'padding-right: 0; padding-left: 0;'}

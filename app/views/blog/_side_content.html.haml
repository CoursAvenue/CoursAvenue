%ul.no-bullet-list.push--bottom.text--center
  - Blog::Category::UserCategory.find_each do |category|
    %li.delta.line-height-1-7.ff-droid.f-style-italic.line-height-1-7.bordered--bottom.soft-half--ends
      = link_to category.name, category_blog_articles_path(category_id: category.slug), class: 'link-colored-on-hover'

- cache 'blog/side_bottom_content/V1' do
  .text--center
    = link_to 'https://www.facebook.com/CoursAvenue', class: 'push--right link-colored-on-hover', target: :_blank, rel: :nofollow do
      %i.fa.fa-facebook.fa-2x
    = link_to 'https://www.twitter.com/CoursAvenue', class: 'push--right link-colored-on-hover', target: :_blank, rel: :nofollow do
      %i.fa.fa-twitter.fa-2x
    = link_to 'https://instagram.com/coursavenue', class: 'link-colored-on-hover', target: :_blank, rel: :nofollow do
      %i.fa.fa-instagram.fa-2x

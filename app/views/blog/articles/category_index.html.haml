= content_for :title do
  = @category.page_title
= content_for :meta_description do
  = @category.page_description

= content_for :above_content do
  .relative.height-35vh.bg-position-top.flexbox.home-screen-promotion-wrapper.soft.bg-cover.white{ style: "background-image: url('#{asset_path('pages/colored_pencils.jpg')}')", data: { behavior: 'parallax' } }
    .black-curtain.north.west.one-whole.absolute
    .flexbox__item.v-middle.text--center.relative
      %h1.f-size-really-big.flush
        = @category.name

%ol.nav.breadcrumb.epsilon.push-half--bottom
  %li{ itemscope: true, itemtype: 'http://data-vocabulary.org/Breadcrumb' }
    = link_to blog_articles_path do
      %span{ itemprop: 'title' } Le Blog CoursAvenue
  %li{ itemscope: true, itemtype: 'http://data-vocabulary.org/Breadcrumb' }
    %span{ itemprop: 'title' }
      = @category.name

- if @category.description.present?
  %p.epsilon
    = @category.description.html_safe

- @articles.each_with_index do |article, index|
  = render partial: 'blog/articles/article', locals: { article: article }
  %hr
.text--center.push-half--ends= paginate @articles, window: 1, outer_window: 3

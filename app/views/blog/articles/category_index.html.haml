= content_for :title do
  = @category.page_title
= content_for :meta_description do
  = @category.page_description

= content_for :above_content do
  .relative.height-35vh.bg-position-top.flexbox.home-screen-promotion-wrapper.soft.bg-cover.white{ style: "background-image: url('#{asset_path(@category.image.url(:large))}')", data: { behavior: 'parallax' } }
    .black-curtain.north.west.one-whole.absolute
    .flexbox__item.v-middle.text--center.relative
      %h1.ff-droid.f-style-italic.f-weight-400.f-size-really-big.flush= @category.subtitle
  - if @category.description.present?
    .blog-article__show-wrapper.soft--top.gamma.text--center.ff-droid.f-style-italic.line-height-1-7
      = @category.description.html_safe

- @articles.each_with_index do |article, index|
  = render partial: 'blog/articles/article', locals: { article: article, horizontal: (index > 1), index: index }
.text--center.push-half--ends= paginate @articles, window: 1, outer_window: 3

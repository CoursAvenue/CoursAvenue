- last_message = conversation.messages.last

- recipient = conversation.recipients.reject{|recipient| recipient == ((@admin || current_pro_admin) || current_user) }.first

.grid.conversation
  .grid__item.one-twelfth.v-top.text--right>
    = image_tag recipient.avatar_url(:thumb), class: 'message__avatar'
  .grid__item.eleven-twelfths.soft-half--left>
    .white-box.grid--full.islet
      .grid__item.two-tenths>
        %p
          = truncate((recipient.name || recipient.email), length: 18)
          %br
          = "#{l(last_message.created_at.to_date, format: :short)} Ã  #{l(last_message.created_at, format: :short)}"
      .grid__item.eight-tenths.hard>
        %p.flush
          %strong= conversation.subject
          = "(#{pluralize conversation.messages.count, 'message'})"
          %br
          = truncate(last_message.body, length: 80)


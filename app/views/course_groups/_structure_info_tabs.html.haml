%ul.tab-titles{data: {behavior: 'tabs'}}
  %li.active{data: { el: 'tab-opinion' }}= t('.opinions')
  %li{data: { el: 'tab-description' }}= t('.description')
  %li{data: { el: 'tab-structure-info' }}= t('.structure')

.tab-content
  %article#tab-opinion.tab-pane.active
    %header
      %h4= t('.last_students_opinion')
      %h5 Espace en cours de lancement

  %article#tab-description.tab-pane
    %h4= t('.course_description')
    // Description de la discipline
    %h4= t('.more_information')
    %ul
      - unless @course_group.courses.first.course_info_1.blank?
        %li= @course_group.courses.first.course_info_1
      - unless @course_group.courses.first.course_info_2.blank?
        %li= @course_group.courses.first.course_info_2
      - unless @structure.registration_info.blank?
        %li= @structure.registration_info

  %article#tab-structure-info.tab-pane
    %h4= @structure.name
    %ul
      %li= readable_address @structure
      - unless @structure.adress_info.blank?
        %li= @structure.adress_info
      %li= t('.number_of_room', count: @structure.nb_room)
      %li
        = t('.website')
        = link_to @structure.website, @structure.website, target: '_blank'
      - unless @structure.has_registration_form.blank?
        %li= t('.has_registration_form')
      - if @structure.needs_payment_on_place_for_registration
        %li= t('.payment_on_place')
      %li
        = t('.required_documents_for_registration')
        %ul
          - if @structure.needs_photo_id_for_registration
            %li= t('.photo_id')
          - if @structure.needs_id_copy_for_registration
            %li= t('.id_copy')
          - if @structure.needs_medical_certificate_for_registration
            %li= t('.medical_certificate')
          - if @structure.needs_insurance_attestation_for_registration
            %li= t('.insurance_attestation_')
      - unless @structure.info.blank?
        %li
          = t('.other_info')
          = @structure.info

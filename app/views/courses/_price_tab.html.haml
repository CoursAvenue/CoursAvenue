%article#tab-prices.tab-pane
  %table.table--striped.table--data#planning-schedule
    %thead
      %tr
        %th= t('.formule_type')
        - if @has_promotion
          %th.text--center= t('.without_promo')
          %th.text--center= t('.with_promo')
        - else
          %th.text--center= t('.price')
    %tbody
      = render partial: 'prices/price'            , collection: @course.prices,       locals: {with_promo: @has_promotion}
      = render partial: 'book_tickets/book_ticket', collection: @course.book_tickets, locals: {with_promo: @has_promotion}
  %footer
    %h4= t('infos')
    %ul
      - if @course.price_details
        %li= @course.price_details
      - if @course.price_info
        %li= @course.price_info.html_safe
      - if @structure.registration_info
        %li= @structure.registration_info
      - unless @course.registration_fees.empty?
        - @course.registration_fees.each do |registration_fee|
          %li
            - if registration_fee.for_kid
              = RegistrationFee.human_attribute_name(:kid_registration_fee)
            - else
              = RegistrationFee.human_attribute_name(:registration_fee)
            = "#{registration_fee.price}â‚¬"
    / # Mettre un lien pour CIF, DIF etc.
    - if @structure.accepts_holiday_vouchers or @structure.accepts_ancv_sports_coupon or @structure.accepts_leisure_tickets or @structure.accepts_afdas_funding or @structure.accepts_dif_funding or @structure.accepts_cif_funding
      %p.flush--bottom= t('.possible_funding')
    %ul
      - if @structure.accepts_holiday_vouchers
        %li= t('.holiday_vouchers')
      - if @structure.accepts_ancv_sports_coupon
        %li= t('.sport_coupons')
      - if @structure.accepts_leisure_tickets
        %li= t('.leisure_coupons')
      - if @structure.accepts_afdas_funding
        %li= t('.afdas_html')
      - if @structure.accepts_dif_funding
        %li= t('.dif_html')
      - if @structure.accepts_cif_funding
        %li= t('.cif_html')


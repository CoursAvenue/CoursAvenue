.side-search-panel
  .search-panel
    %h5.search-panel-header Public
    .search-panel-content
      %ul.search-list
        - @audiences.each_with_index do |audience, i|
          %li
            = check_box_tag 'search[audiences][]', audience.name, params[:search][:audiences].include?(audience.name), id: "search_audience_#{i}", data: {behavior: 'input-update', update: ''}
            = label_tag "search_audience_#{i}", audience.name

  .search-panel
    %h5.search-panel-header Niveaux
    .search-panel-content
      %ul.search-list
        - @levels.each_with_index do |level, i|
          %li
            = check_box_tag 'search[levels][]', level.name, params[:search][:levels].include?(level.name), id: "search_level_#{level.name}", data: {behavior: 'input-update', update: ''}
            = label_tag "search_level_#{level.name}", level.name

  .search-panel
    %h5.search-panel-header Créneaux horaire
    .search-panel-content
      %ul.search-list
        - LeBonCours::Application::TIME_SLOTS.each do |slot_symbole, slot|
          %li
            = check_box_tag 'search[time_slots][]', slot_symbole, params[:search][:time_slots].include?(slot_symbole.to_s), id: "search_time_slot_#{slot_symbole.to_s}", data: {behavior: 'input-update', update: ''}
            = label_tag "search_time_slot_#{slot_symbole.to_s}", slot[:name]
  .search-panel
    %h5.search-panel-header Prix
    .search-panel-content
      .input-range
        %div
          = label_tag 'search_price_range_min_price', 'De'
          = number_field_tag 'search[price_range][min]', params[:search][:price_range][:min], min: 0, step: 1, data: {behavior: 'input-update', update: ''}
          €
        %div
          = label_tag 'search_price_range_max_price', 'À'
          = number_field_tag 'search[price_range][max]', params[:search][:price_range][:max], min: 0, step: 1, data: {behavior: 'input-update', update: ''}
          €

  .search-panel-footer
    %button.btn{type: 'submit'}
      %i.icon-search
      Actualiser

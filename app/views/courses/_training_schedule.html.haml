- @plannings.each do |levels, plannings|
  %h5 Niveau : #{join_levels Level.find(levels)}
  %table.table--striped.table--data
    %thead
      %tr
        %th Dates
        %th.text--center Dur√©e
        %th.text--center Public
        %th.text--center
          %i.lbc-icon-info i
    %tbody
      - plannings.each do |planning|
        %tr
          %td= training_dates planning
          %td.text--center= "#{pluralize(planning.length, 'jour')}"
          %td.text--center= join_audiences planning.audiences
          %td.text--center
            - if planning.info.present?
              .lbc-brand-icon{data: {behavior: 'popover', content: planning.info}}
  %hr

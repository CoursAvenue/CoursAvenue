.gw
  = render 'search_form'
  %section.g.three-tenths
    = render 'side_search_form'
  %section.g.seven-tenths
    .flexbox.page-entries-wrapper
      %p.page-entries.flexbox__item
        = page_entries_info html: false
      .flexbox__item= will_paginate @courses, renderer: PaginationListLinkRenderer, class: 'nav pagination proceed', inner_window: 1, outer_window: 0
    %ul.block-list.course-list
      = render partial: 'course', :collection => @courses

    %footer.g.one-whole
      = will_paginate @courses, renderer: PaginationListLinkRenderer, class: 'nav pagination', inner_window: 2

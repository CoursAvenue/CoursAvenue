    -# %source{ type: "video/mp4", src: asset_path('coursavenue_homepage_video.webm') }

  .relative.full-screen-item.white
    .grid--full.one-whole.homescreen-header.homescreen-header--transparent.fixed.one-whole.on-top
      .grid__item.one-half.v-middle>
        = image_tag 'logos/logo_white.png', width: 190, alt: 'CoursAvenue.com - Les meilleurs cours de loisirs de votre ville', data: { src2x: asset_path('logos/logo_white@2x.png') }, class: 'v-middle push--left push-half--top absolute', style: 'left: 3px; top: 3px;'
        = image_tag 'logos/logo.png', width: 200, alt: 'CoursAvenue.com - Les meilleurs cours de loisirs de votre ville', data: { src2x: asset_path('logos/logo@2x.png') }, class: 'v-middle push--left push-half--top west north absolute hidden', id: 'home-logo-dark'
      .grid__item.one-half.v-middle.soft>
        .white.text--right.one-whole.soft--right#user-nav.inline-block.v-middle.epsilon
    .text--center.absolute.one-whole{ style: ' top: 30vh;', data: { behavior: 'block-parallax' } }
      %h1.f-size-really-big.palm-text--center.soft--top.soft-black-text-shadow.flush--bottom
        ARTS. SPORTS. BIEN-ÊTRE.
      %h3.palm-text--center.push--bottom.soft-black-text-shadow
        Trouvez votre cours de loisir idéal.
      .push--bottom.soft--bottom
        .text--center
          = render partial: 'shared/home_page_search_form', locals: { form_class: 'header-search-bar center-block' }
    .text--center.absolute.one-whole{ style: ' top: 90%;' }
      %a.block.not-outlined.white{ href: '#vivez-passionnement', data: { behavior: 'scroll-to', duration: 900 } }
        %i.fa.fa-chevron-down.fa-3x.smooth-black-text-shadow.animated-arrow-1.block
        %i.fa.fa-chevron-down.fa-3x.smooth-black-text-shadow.animated-arrow-2.block

- content_for :scripts do
  :javascript
      $(function() {
          $(window).scroll(function() {
              var $this = $(this);
              if ($this.scrollTop() > window.innerHeight) {
                  $('.homescreen-header').removeClass('homescreen-header--transparent');
                  $('#home-logo-dark').fadeIn();
              } else {//} if ($this.scrollTop() < window.innerHeight) {
                  $('.homescreen-header').addClass('homescreen-header--transparent');
                  $('#home-logo-dark').fadeOut();
              }
          });
      });

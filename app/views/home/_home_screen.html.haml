= content_for :above_container do
  .home-screen
    .main-container.home-screen__item.very-soft
      .grid.home-screen-comment
        .grid__item.one-eighth>
          = link_to "http://www.coursavenue.com/etablissements/soraya#recommandation-907", class: 'muted-link block' do
            = image_tag 'home-page/user-picture.png', class: 'block'
        .grid__item.seven-eighths>
          %p.flush.quoted.epsilon.quoted--large
            = link_to "Elle nous transmet à chaque cours toute sa passion et son amour de la danse orientale qu'elle maîtrise à la perfection avec beaucoup d'enthousiasme !", "http://www.coursavenue.com/etablissements/soraya#recommandation-907", class: 'muted-link'
          .milli
            = link_to 'Avis écrit par Sanaâ Sultana sur les cours de danse orientale de Soraya', "http://www.coursavenue.com/etablissements/soraya#recommandation-907", class: 'muted-link'
    %h1.text--center.home-screen-title.push--bottom
      Les élèves vous guident vers les meilleurs cours
    = render 'shared/home_page_search_form'

    - cache "home_screen_#{ENV["ETAG_VERSION_ID"]}" do
      .slideshow.home-slideshow
        %div
          = image_tag 'home-page/dance.jpg', alt: 'Cours de danse'

  .home-screen-gallery.text--center.flexbox.main-container>
    -# .flexbox__item.one-quarter.home-screen-gallery__link.home-screen-gallery__link-paris
    -#   = link_to city_path('paris'), class: 'relative block', title: "Guide des cours à Paris" do
    -#     .home-screen-gallery__title Guide des cours à Paris
    .flexbox__item.one-quarter.home-screen-gallery__link.home-screen-gallery__link-trial
      = link_to structures_path(trial_course_amount: 0), class: 'relative block', title: "Cours d'essai gratuits" do
        .home-screen-gallery__title Cours d'essai gratuits
    .flexbox__item.one-quarter.home-screen-gallery__link.home-screen-gallery__link-kids
      = link_to structures_path(audience_ids: [Audience::KID.id]), class: 'relative block', title: "Cours pour enfants" do
        .home-screen-gallery__title Cours pour enfants
    .flexbox__item.one-quarter.home-screen-gallery__link.home-screen-gallery__link-weekend
      = link_to structures_path(week_days: [0, 6]), class: 'relative block', title: "Cours le week-end" do
        .home-screen-gallery__title Cours le week-end
    .flexbox__item.one-quarter.home-screen-gallery__link.home-screen-gallery__link-night
      = link_to structures_path(start_hour: 18), class: 'relative block', title: "Cours du soir" do
        .home-screen-gallery__title Cours du soir

:css
  #video {
      position: absolute;
      left: 50%;
      top: 50%;
      /* The following will size the video to fit the full container. Not necessary, just nice.*/
      min-width: 100%;
      min-height: 100%;
      -webkit-transform: translate(-50%,-50%);
      -moz-transform: translate(-50%,-50%);
      -ms-transform: translate(-50%,-50%);
      transform: translate(-50%,-50%);
      z-index: 0;
  }


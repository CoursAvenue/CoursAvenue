.full-screen-item.one-whole.relative.overflow-hidden
  -# poster attribute: first image of the video
  %video#video{ preload: 'auto', loop: 'loop', autoplay: true, poster: 'http://coursavenue-public.s3.amazonaws.com/public_assets/videos/coursavenue_homepage_cover.jpg' }
    %source{ type: "video/mp4", src: 'http://coursavenue-public.s3.amazonaws.com/public_assets/videos/coursavenue_homepage_video.mp4' }

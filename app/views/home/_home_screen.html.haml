- if @last_comment
  - slug = @last_comment.structure.subjects.at_depth(0).first.slug
  - slug = 'musique-chant'
  - url = asset_path "home_backgrounds/#{slug}.jpg"
- else
  - url = asset_path "pro/home_background#{[2,3,4,5,6,7].sample}.jpg"
.home-screen.soft--top.white.bg-cover{ style: "background-image: url(#{url})" }
  .main-container.soft-half--bottom
    %h1.soft--top.soft-black-text-shadow.flush
      Trouvez votre cours de loisir idéal.
    %h4.push--bottom.soft-black-text-shadow
      Parmi plus de 10 000 cours recommandés par les élèves.
    = render 'shared/home_page_search_form'

    .relative.bg-cover{style: "background-image: url('#{asset_path('home-page/video_thumbnail.jpg')}'); width: 175px; height: 120px;"}>
      = link_to 'https://www.youtube.com/watch?v=t7-PIg-YsHg', class: 'block show-on-hover__wrapper', data: { behavior: 'fancy', height: 560, width: 1000 } do
        .home-screen-gallery__title.text--center.push-half--top.soft--top
          .show-on-hover__child.milli Voir la vidéo
    .push-half--bottom
      = link_to 'Comment ça marche', 'javascript:void(0);', class: 'btn btn--small btn--full', style: 'width: 175px;', data: { behavior: 'toggleable', el: '#comment-ca-marche' }

  - if @last_comment
    .home-screen-comment.visuallyhidden--palm.soft-black-text-shadow
      .grid
        .grid__item.two-twelfths.v-middle>
          = link_to structure_path(@last_comment.structure), class: 'muted-link block' do
            = image_tag @last_comment.structure.logo.url(:thumb), class: 'block white-circle'
        .grid__item.ten-twelfths.v-middle>
          .quoted.epsilon.quoted--large<
            = link_to @last_comment.title, structure_path(@last_comment.structure), class: 'muted-link'
          %p.flush
            = link_to structure_path(@last_comment.structure), class: 'muted-link' do
              = truncate(@last_comment.content, length: 65)
          .milli
            = link_to "Avis rédigé par #{@last_comment.author_name} il y a #{distance_of_time_in_words_to_now(@last_comment.created_at)}", structure_path(@last_comment.structure), class: 'muted-link'
          %strong
            = @last_comment.course_name.capitalize

.main-container.main-container--medium.hidden#comment-ca-marche
  .soft.push
    .grid
      .grid__item.one-third>
        .flexbox
          .flexbox__item.one-fifth.v-middle.soft--right>
            = image_tag 'icons/icon-search-circle.png', width: 70
          .flexbox__item.four-fifths.v-middle>
            %h3.push-half--bottom.f-weight-300 Repérez
            %p.epsilon les associations, écoles et professeurs près de vous.
      .grid__item.one-third>
        .flexbox
          .flexbox__item.one-fifth.v-middle.soft--right>
            = image_tag 'icons/icon-user-circle.png', width: 70
          .flexbox__item.four-fifths.v-middle>
            %h3.push-half--bottom.f-weight-300 Choisissez
            %p.epsilon
              les cours de votre choix.
              %br
              %br
      .grid__item.one-third>
        .flexbox
          .flexbox__item.one-fifth.v-middle.soft--right>
            = image_tag 'icons/icon-check-circle.png', width: 70
          .flexbox__item.four-fifths.v-middle>
            %h3.push-half--bottom.f-weight-300 Contactez
            %p.epsilon gratuitement pour une première séance.
    .text--center.epsilon
      = link_to 'En savoir plus', '#'

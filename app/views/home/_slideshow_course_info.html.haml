.slideshow-caption
  = link_to course_path(course) do
    %span
      %b= course.name
    %span
      %i.icon-map-marker
      = short_address course.place
    %span
      %i.icon-calendar
      = week_day_for course.plannings.first
    %span
      %i.icon-time
      - if course.is_lesson?
        = readable_time_slot course.plannings.first.start_time, course.plannings.first.end_time
      - else
        = training_dates course.plannings.first
    %span
      %i.icon-user
      = course.audiences.map{|a| t(a.name)}.join(', ')
    %span
      = "#{course.best_price.readable_amount}â‚¬"

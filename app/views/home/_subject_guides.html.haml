- cache "home_subjects_guide_#{ENV["ETAG_VERSION_ID"]}", public: true do
  - arts    = Subject.find('dessin-peinture-arts-plastiques')
  - dance   = Subject.find('danse')
  - theatre = Subject.find('theatre-scene')
  - music   = Subject.find('musique-chant')
  - yoga    = Subject.find('yoga-bien-etre-sante')
  .beta.push--bottom.soft--bottom.f-weight-300 Toutes vos passions
  .relative{ style: 'height: 600px;'}
    .absolute.bg-cover.west.north{style: "background-image: url('#{dance.image.url(:small)}'); width: 49.5%; height: 200px;" }>
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper.show-on-hover__wrapper--black-curtain{ href: root_vertical_page_path(dance, dance.vertical_pages.first || 'danse'), title: "Cours de danse" }>
          %h2.home-screen-gallery__title.text--center.f-weight-normal
            Danse
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.east.north{style: "background-image: url('#{music.image.url(:small)}'); width: 49.5%; height: 298px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper.show-on-hover__wrapper--black-curtain{ href: root_vertical_page_path(music, music.vertical_pages.first || 'danse'), title: "Cours de musique et chant" }>
          %h2.home-screen-gallery__title.text--center.f-weight-normal
            Musique & Chant
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.east.south{style: "background-image: url('#{theatre.image.url(:small)}'); width: 49.5%; height: 298px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper.show-on-hover__wrapper--black-curtain{ href: root_vertical_page_path(theatre, theatre.vertical_pages.first || 'danse'), title: "Cours de théâtre et scène" }>
          %h2.home-screen-gallery__title.text--center.f-weight-normal
            Théâtre & Scène
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.west{style: "background-image: url('#{arts.image.url(:small)}'); width: 49.5%; height: 194px; top: 203px" }>
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper.show-on-hover__wrapper--black-curtain{ href: root_vertical_page_path(arts, arts.vertical_pages.first || 'danse'), title: "Cours de dessin, peinture et arts" }>
          %h2.home-screen-gallery__title.text--center.f-weight-normal
            Dessin, Peinture
            %br
            & Arts
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.west.south{style: "background-image: url('#{yoga.image.url(:small)}'); width: 49.5%; height: 200px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper.show-on-hover__wrapper--black-curtain{ href: root_vertical_page_path(yoga, yoga.vertical_pages.first || 'danse'), title: "Cours de yoga, bien-être et santé" }>
          %h2.home-screen-gallery__title.text--center.f-weight-normal
            Yoga, Bien-être
            %br
            & Santé
            .milli.show-on-hover__child Découvrir


- cache "home_subjects_guide_#{ENV["ETAG_VERSION_ID"]}", public: true do
  - arts    = Subject.find('dessin-peinture-arts-plastiques')
  - dance   = Subject.find('danse')
  - theatre = Subject.find('theatre-scene')
  - music   = Subject.find('musique-chant')
  - yoga    = Subject.find('yoga-bien-etre-sante')
  - paris   = City.find('paris')
  %h2.soft--bottom.f-weight-300 Toutes vos passions
  .relative{ style: 'height: 600px;'}
    .absolute.bg-cover.west.north{style: "background-image: url('#{dance.image.url(:small)}'); background-image: url('https://s3-eu-west-1.amazonaws.com/coursavenue/subjects/images/000/001/455/small/Danse.jpg?1389782775'); width: 49.5%; height: 200px;"}>
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper{href: vertical_page_url_for(dance, paris), title: "Cours de danse à Paris"}>
          .home-screen-gallery__title.text--center
            Danse
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.east.north{style: "background-image: url('#{music.image.url(:small)}'); background-image: url('https://s3-eu-west-1.amazonaws.com/coursavenue/subjects/images/000/001/591/small/Th%C3%A9%C3%A2tre_et_sc%C3%A8ne.jpg?1389960275'); width: 49.5%; height: 298px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper{href: vertical_page_url_for(music, paris), title: "Cours de danse à Paris"}>
          .home-screen-gallery__title.text--center
            Musique & Chant
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.east.south{style: "background-image: url('#{theatre.image.url(:small)}'); background-image: url('https://s3-eu-west-1.amazonaws.com/coursavenue/subjects/images/000/001/006/small/Yoga_BienEtre.jpg?1389960325'); width: 49.5%; height: 298px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper{href: vertical_page_url_for(theatre, paris), title: "Cours de théâtre et scène à Paris"}>
          .home-screen-gallery__title.text--center
            Théâtre & Scène
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.west{style: "background-image: url('#{arts.image.url(:small)}'); background-image: url('https://s3-eu-west-1.amazonaws.com/coursavenue/subjects/images/000/000/252/small/Musique___Chant.jpg?1389785618'); width: 49.5%; height: 194px; top: 203px"}>
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper{href: vertical_page_url_for(arts, paris), title: "Cours de danse à Paris"}>
          .home-screen-gallery__title.text--center
            Dessin, Peinture
            %br
            & Arts
            .milli.show-on-hover__child Découvrir
    .absolute.bg-cover.west.south{style: "background-image: url('#{yoga.image.url(:small)}'); background-image: url('https://s3-eu-west-1.amazonaws.com/coursavenue/subjects/images/000/001/591/small/Th%C3%A9%C3%A2tre_et_sc%C3%A8ne.jpg?1389960275'); width: 49.5%; height: 200px;"}
      .relative.one-whole.height-whole
        %a.block.show-on-hover__wrapper{href: vertical_page_url_for(yoga, paris), title: "Cours de danse à Paris"}>
          .home-screen-gallery__title.text--center
            Yoga, Bien-être
            %br
            & Santé
            .milli.show-on-hover__child Découvrir

  %div
    = link_to 'Découvrir toutes les disciplines', city_path('paris'), class: 'btn btn--full'

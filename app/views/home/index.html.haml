= content_for :scripts do
  :javascript
    // ---------------- Comments slideshow
    $(function() {
        $('#comments-slideshow').cycle({
            timeout: 5000,
        });
        base_url = "#{structure_path('__id__')}";
        Gmaps.map.callback = function() {
            for (var i = 0; i <  this.markers.length; ++i) {
                google.maps.event.addListener(Gmaps.map.markers[i].serviceObject, 'click', function() {
                    window.location = base_url.replace('__id__', this.id);
                }.bind(Gmaps.map.markers[i]));
            }
        };
    });

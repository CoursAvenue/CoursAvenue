= content_for :title do
  CoursAvenue | Les élèves vous guident vers les meilleurs cours

= render 'home_screen'
.home-screen-promotion-wrapper
  = render 'guide'

%section.main-container.main-container--medium.home-screen-promotion.soft.push--ends
  .grid--full
    .grid__item.palm-one-whole.one-half>
      .beta.push--bottom.soft--bottom.f-weight-300 Derniers avis des élèves
      - @comments.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
    .grid__item.palm-one-whole.one-half.soft--left{style: 'min-height: 35em;'}
      = render 'subject_guides'

.home-screen-promotion-wrapper
  .main-container.main-container--medium.soft.push--ends
    - blog_articles = Blog::Article.published.order('published_at DESC').limit(3)
    - cache blog_articles do
      %div
        .beta.push--bottom.f-weight-300 Le Blog
        %ul.flush
          - blog_articles.each do |article|
            %li.white-box.island{ itemscope: true, itemtype: 'http://schema.org/Article' }
              .flexbox
                .flexbox__item.v-top.two-twelfths
                  - if article.cover_image.present?
                    = link_to blog_article_path(article), class: 'muted-link push-half--bottom block' do
                      = image_tag article.cover_image.url(:very_small), class: 'block blog-article__image', alt: article.title, title: article.title
                .flexbox__item.v-top.ten-twelfths.soft--left
                  %h3.delta.flush
                    = link_to article.title, blog_article_path(article), class: 'muted-link'
                  %p.flush
                    %time.blog-feed__date{ datetime: l(article.published_at, format: :iso_date) }= l(article.published_at.to_date, format: :long)
                    %br
                    = article.description
                    = link_to 'Lire la suite →', blog_article_path(article)
        .push--bottom
          = link_to blog_articles_path, target: '_blank', class: 'btn btn--blue' do
            %i.fa.fa-align-left
            &nbsp;Accéder au blog

%section.main-container.main-container--medium.home-screen-promotion.soft.push--ends
  .grid--full
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de danse
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'danse').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de danse', root_search_page_path('danse', 'paris'), title: 'Cours de Danse à Paris'
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de théâtre & scène
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'theatre-scene').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de théâtre & scène', root_search_page_path('theatre-scene', 'paris'), title: 'Cours de Théâtre & Scène à Paris'
  %hr.push--ends
  .grid--full
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de musique & chant
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'musique-chant').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de yoga, bien-être & santé', root_search_page_path('yoga-bien-etre-sante', 'paris'), title: 'Cours de Yoga, Bien-être & Santé à Paris'
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de yoga, bien-être & sante
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'yoga-bien-etre-sante').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de musique & chant', root_search_page_path('musique-chant', 'paris'), title: 'Cours de Musique & Chant à Paris'
  %hr.push--ends
  .grid--full
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de dessin, peinture & arts
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'dessin-peinture-arts-plastiques').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de dessin, peinture & arts', root_search_page_path('dessin-peinture-arts-plastiques', 'paris'), title: 'Cours de Dessin, Peinture & Arts à Paris'
    .grid__item.palm-one-whole.one-half>
      %h2.push--bottom.soft--bottom.f-weight-300 Cours de sports & arts martiaux
      - CommentSearch.search(per_page: 2, has_title: true, subject_slug: 'sports-arts-martiaux').results.each do |comment|
        = render partial: 'comments/home_comment', locals: { comment: comment }
      .text--right= link_to 'Voir tous les cours de sports & arts martiaux', root_search_page_path('sports-arts-martiaux', 'paris'), title: 'Cours de Sports & Arts martiaux à Paris'

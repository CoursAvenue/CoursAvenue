- city = City.find('paris')
= content_for :above_container do
  = render 'home_screen'

  = render 'share_links'
  - @comments = Comment.order('created_at DESC').limit(15)
  .home-screen-promotion-wrapper
    %section.main-container.home-screen-promotion
      .ilb-wrapper
        .palm-one-whole.lap-one-whole.one-half.islet
          %h3.home-title Paris
          = render 'map_paris'
        .palm-one-whole.lap-one-whole.one-half.islet{style: 'min-height: 35em;'}
          %div
            %h3.home-title Les derniers avis
            %ul.comment-list#comments-slideshow{style: 'height: 80px; widht: 100%;'}
              - @comments.in_groups_of(4, false).each do |comment_group|
                %li.slideshow--element
                  - comment_group.each do |comment|
                    %article.comment-list__el
                      .flexbox
                        .flexbox__item.one-half.comment__header
                          %div{itemprop: 'reviews', itemscope: true, itemtype:'http://schema.org/Review'}
                            .float--right.muted{itemprop: 'datePublished', content: l(comment.created_at, format: :iso_date)}
                              = distance_of_time_in_words_to_now comment.created_at
                              %i.icon-time
                            %b{itemprop: 'author'}= comment.author_name
                            %br
                            %div{title: comment_rating_title(comment.rating), itemprop: 'reviewRating', itemscope: true, itemtype: 'http://schema.org/Rating'}
                              = rating_stars comment.rating
                              %meta{itemprop: 'ratingValue', content: comment.rating}
                              %meta{itemprop: 'bestRating', content: 5}
                            = link_to truncate(comment.commentable.name, length: 40), commentable_path(comment), class: 'blue'
                        .flexbox__item.one-half.comment__content
                          %p.flush--bottom{itemprop: 'reviewBody'}= truncate(comment.content, length: 140)

  .text--center
    .newsletter-form
      %p.inline-paragraph
        <b>Inscrivez vous</b> à la newsletter et découvrez des classes uniques dans votre ville
      = simple_form_for NewsletterUser.new, html: {class: 'inline-form'} do |f|
        = f.email_field :email, placeholder: t('newsletter_users.email'), size: 25
        = f.text_field  :city , placeholder: t('newsletter_users.city') , size: 17
        = f.button :submit, t('.validate'), class: 'btn btn__primary'

.main-container
  .ilb-wrapper
    .lap-one-whole.palm-one-whole.one-half.islet
      %h3.home-title À découvrir ce mois-ci
      .ilb-wrapper
        .course-block-wrapper.one-half.palm-one-whole
          = link_to subject_courses_path('cuisine-oenologie'), class: 'course-block' do
            .course-block-image
              = image_tag 'home-page/cooking.jpg'
            %h6.course-block-title
              Réveillez vos papilles
            %p.course-block-caption
              Cours de cuisine et d’œnologie pour tous

        .course-block-wrapper.one-half.palm-one-whole
          = link_to subject_courses_path('relaxation-fitness', time_slots: ['evening']), class: 'course-block' do
            .course-block-image
              = image_tag 'home-page/after_work.jpg'
            %h6.course-block-title
              Détendez-vous après le boulot
            %p.course-block-caption
              Cours de fitness / relaxation après 18h

        .course-block-wrapper.one-half.palm-one-whole
          = link_to subject_courses_path('insolite'), class: 'course-block' do
            .course-block-image
              = image_tag 'home-page/insolite.jpg'
            %h6.course-block-title
              Cours insolites
            %p.course-block-caption
              Laissez-vous surprendre !

        .course-block-wrapper.one-half.palm-one-whole
          = link_to courses_path(audiences: [Audience.kid], 'age[min]' => 0, 'age[max]' => 5), class: 'course-block' do
            .course-block-image
              = image_tag 'home-page/child-courses.jpg'
            %h6.course-block-title
              Eveillons nos tout petits
            %p.course-block-caption
              Cours & stages pour les 0 à 5 ans
    .lap-one-whole.palm-one-whole.one-half.islet
      %h3.home-title Le Blog
      = blog_feed
      = link_to 'http://blog.coursavenue.com', target: '_blank' do
        %i.icon-align-left
        &nbsp;Accéder au blog
  %hr
  .ilb-wrapper
    .one-third.palm-one-whole
      .ilb-wrapper.align-middle
        .one-fifth.text--center= image_tag 'icons/ico_piggy_bank.png'
        .four-fifths
          %h4.flush--bottom.hard--bottom.islet.green Des prix attractifs
          %p.islet CoursAvenue vous garantit les prix les plus bas et la réservation est gratuite. Bénéficiez également des tarifs promotionnels négociés directement auprès de nos Partenaires.

    .one-third.palm-one-whole
      .ilb-wrapper.align-middle
        .one-fifth.text--center= image_tag 'icons/ico_qualitee.png'
        .four-fifths
          %h4.flush--bottom.hard--bottom.islet.green Une qualité assurée
          %p.islet Chaque élève a la possibilité de s’exprimer sur la qualité du cours suivi et de vous partager son expérience. Plus de mauvaises surprises, le meilleur bouche-à-oreille !

    .one-third.palm-one-whole
      .ilb-wrapper.align-middle
        .one-fifth.text--center= image_tag 'icons/ico_geoloc.png', style: 'height: 75px;'
        .four-fifths
          %h4.flush--bottom.hard--bottom.islet.green Votre passion autour de vous
          %p.islet Notre moteur de recherche avancé, qui inclut la géolocalisation, permettra de réveiller votre passion à deux pas de chez vous. Exprimez votre talent dans votre quartier !

= content_for :scripts do
  :javascript
    // ---------------- Comments slideshow
    window.addEvent('domready', function() {
        new SlideShow('comments-slideshow', {
            transition: 'crossFade',
            delay: 5000,
            duration: 500,
            autoplay: true
        });
    });

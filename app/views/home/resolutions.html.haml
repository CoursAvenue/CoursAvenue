            %h4.alpha.relative.inline-block.flush Sexy
            %input#question_1_value_1.visuallyhidden{ type: 'radio', name: 'resolutions_questions[1]', value: 'whatever2', data: { behavior: 'move-section-down' } }
          %label.bg-cover.relative.text--center.white.flexbox__item.one-third{ style: 'background-image: url("https://gp1.wac.edgecastcdn.net/806614/photos/photos.500px.net/10819147/00060a54ffe81a46d1ebe0ea7157110cc60df878/2048.jpg"); height: 40vh;'}>
            .black-curtain.black-curtain__fading-on-hover.north.west.one-whole.absolute
            %h4.alpha.relative.inline-block.flush Artiste
            %input.visuallyhidden{ type: 'radio', name: 'resolutions_questions[1]', value: 'whatever3', data: { behavior: 'move-section-down' } }
          %label.bg-cover.relative.text--center.white.flexbox__item.one-third{ style: 'background-image: url("https://unsplash.imgix.net/uploads/14128853230824cc16f3e/c38fccbd?fit=crop&fm=jpg&h=700&q=75&w=1050"); height: 40vh;' }>
            .black-curtain.black-curtain__fading-on-hover.north.west.one-whole.absolute
            %h4.alpha.relative.inline-block.flush Cascadeur
            %input.visuallyhidden{ type: 'radio', name: 'resolutions_questions[1]', value: 'whatever4', data: { behavior: 'move-section-down' } }

  %div.section.one-whole.full-screen-item.bg-cover{ style: 'background-image: url("https://ununsplash.imgix.net/photo-1415045384817-2f9cf7f2ed79?q=75&fm=jpg&s=a0d8ebf44a449c7855ca4128e914a7c5")'}
    .push--top.soft--top.one-whole
      .v-middle.text--center
        %a.btn--yellow.btn.btn--enormous{ href: '#', data: { behavior: 'move-section-down' } } Faire le test

  %div.section.one-whole.full-screen-item.bg-cover{ style: 'background-image: url("https://ununsplash.imgix.net/photo-1415045384817-2f9cf7f2ed79?q=75&fm=jpg&s=a0d8ebf44a449c7855ca4128e914a7c5")'}
    .push--top.soft--top.one-whole
      .v-middle
        %h2.alpha.text--center.white.orange-box.soft JE SUIS FAIT POUR VIVRE DANS LE :
        .text--center
          %a.btn--yellow.btn.btn--enormous
            %i.fa.fa-facebook
            Facebook
          %a.btn--yellow.btn.btn--enormous
            %i.fa.fa-twitter
            Twitter
        .text--center.orange-box.soft.push--top
          %h2.white Inscrivez-vous à notre newsletter !
          = simple_form_for User.new, html: { class: 'newsletter-form' }, remote: true do |f|
            = f.input :subscription_from, as: :hidden, input_html: { value: 'newsletter' }
            = f.input :email, label: false, input_html: { placeholder: 'Adresse e-mail', class: 'input--large one-whole' }, wrapper_html: { class: 'flush inline-block v-middle' }
            = f.input :zip_code, label: false, input_html: { placeholder: 'Code postal', class: 'input--large one-whole' }, wrapper_html: { class: 'flush inline-block v-middle', style: 'width: 110px;' }
            = f.submit "Je m'inscris !", class: 'btn btn--yellow btn--large'


= content_for :right_after_head do
  %link{ href: 'https://fonts.googleapis.com/css?family=Pacifico', rel: 'stylesheet', type: 'text/css' }
  %link{ href: 'https://fonts.googleapis.com/css?family=Kameron', rel: 'stylesheet', type: 'text/css' }

= content_for :scripts do
  = javascript_include_tag 'libs/jquery.fullPage' # MUST BE In the Head and before CSS
  = stylesheet_link_tag 'libs/jquery.fullPage', media: 'all'

  :javascript
    $(function() {
        $('#fullpage').fullpage();
        $('[data-behavior="move-section-down"]').click(function() {
            $.fn.fullpage.moveSectionDown();
        })
    });

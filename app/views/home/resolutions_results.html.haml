- profile = profiles[params[:id]] || profiles['a']

.bg-position-top.section.relative.one-whole.relative.white.full-screen-item.bg-cover{ style: "background-image: url('https://coursavenue-public.s3.amazonaws.com/public_assets/#{profile[:bg]}')"}
  .flexbox.full-screen-item
    .black-curtain.north.west.one-whole.absolute
    %div.section.one-whole.full-screen-item
      .push--top.soft--top.one-whole.relative
        .push--bottom
          = link_to root_path, target: :_blank, class: 'inline-block v-middle' do
            = image_tag 'logos/logo.png', width: 250, alt: 'CoursAvenue.com - Les meilleurs cours de loisirs de votre ville', data: { src2x: asset_path('logos/logo@2x.png') }, class: 'relative'
          .push-half--left.relative.v-middle.fb-like{ data: { href: home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), layout: 'button_count', action: 'like', 'show-faces' => 'false', share: "false" } }
          %a.push-half--left.v-middle{ href: "https://twitter.com/share", class: "twitter-share-button", data: { text: "Quelles seront vos résolutions 2015 ? @CoursAvenue", lang: "fr" }} Tweeter
        .v-middle
          %h2.alpha.text--center.white.orange-transparent-box.soft
            C'EST DÉCIDÉ, EN 2015 JE ME METS AU :
          .main-container
            .grid
              .grid__item.v-middle.two-thirds.f-weight-bold.line-height-1-5>
                %h4.beta= profile[:title]
                .gamma= profile[:content]
            %div
              = link_to media_share_url(home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), :facebook), class: 'btn--yellow btn btn--bigger', target: :_blank do
                %i.fa.fa-facebook
                Facebook
              = link_to media_share_url(home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), :twitter), class: 'btn--yellow btn btn--bigger push-half--left' do
                %i.fa.fa-twitter
                Twitter
              = link_to 'Recommencer le test', home_resolutions_path, class: 'btn btn--yellow btn--bigger push-half--left'
          .orange-transparent-box.soft.push--top
            .grid.main-container
              .grid__item.one-half.v-middle>
                %h4.white.flush Cours insolites, exclusivités, promotions, laissez-vous tenter par des milliers de loisir recommandé par des élèves qui sont près de chez vous :&nbsp;
              .grid__item.one-half.v-middle>
                = simple_form_for User.new, html: { class: '' } do |f|
                  %input{ type: 'hidden', name: 'redirect_to', value: profile[:url] }
                  = f.input :subscription_from, as: :hidden, input_html: { value: 'quizz' }
                  = f.input :email, label: false, input_html: { placeholder: 'Adresse e-mail', class: 'input--large one-whole' }, wrapper_html: { class: 'flush inline-block v-middle' }
                  = f.submit "Trouver un cours", class: 'btn btn--yellow btn--bigger soft-half--ends'



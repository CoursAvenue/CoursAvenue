- profile = profiles[params[:id]] || profiles['a']


.bg-position-top.section.relative.one-whole.relative.white.full-screen-item.bg-cover{ style: "background-image: url('https://coursavenue-public.s3.amazonaws.com/public_assets/#{profile[:bg]}')"}
  .flexbox.full-screen-item
    .black-curtain.north.west.one-whole.absolute
    %div.section.one-whole.full-screen-item
      .push.on-top.relative
        = link_to root_path, target: :_blank, class: 'inline-block v-middle' do
          = image_tag 'logos/logo.png', width: 250, alt: 'CoursAvenue.com - Les meilleurs cours de loisirs de votre ville', data: { src2x: asset_path('logos/logo@2x.png') }, class: 'v-middle'
        .push-half--left.relative.v-middle.fb-share-button{ data: { href: home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), layout: 'button_count' } }
        %a.push-half--left.v-middle{ href: "https://twitter.com/share", class: "twitter-share-button", data: { text: "Quelles sont vos résolutions 2015 ? @CoursAvenue", lang: "fr", url: home_resolutions_url(subdomain: 'www') } } Tweeter
      .push--top.soft--top.one-whole.relative
        .v-middle
          .orange-transparent-box.soft.push--bottom
            %h2.alpha.text--center.white
              %span.f-weight-400 C'EST DÉCIDÉ, EN 2015 JE ME METS AU
              #{profile[:answer]} !
            .grid.main-container.main-container--medium
              .grid__item.one-half.v-middle>
                %h4.white.flush.text--right Trouvez le cours de #{profile[:answer_small]} idéal à
              .grid__item.one-half.v-middle.soft-half--left>
                = form_tag profile[:url], method: :get, authenticity_token: false, data: { behavior: 'coursavenue-search' }, id: 'home-page-form' do
                  .flexbox
                    .flexbox__item.v-middle.search-input-wrapper.very-soft.hard--ends.palm-hard{ style: 'width: 140px;' }
                      .input-with-icon
                        %input.palm-one-whole.input--large.one-whole.soft-half--left{ size: 19, placeholder:'Ville', type:'text', autocomplete: 'off', name:'address_name', value: 'Paris', data: { type:'address', lng:'#address-lng', lat: '#address-lat', city: '#address-city' , address_name: '#address-name' } }
                        %i.fa.fa-map-marker.delta.black
                      %input#address-lat{ type: 'hidden', value: '48.8592', name: 'lat' }
                      %input#address-lng{ type: 'hidden', value: '2.3417', name: 'lng' }
                      %input#address-name{ type: 'hidden', value: 'Paris', name: 'address_name' }
                      %input#address-city{ type: 'hidden', value: 'Paris', name: 'city' }

                    .flexbox__item.v-middle.palm-text--center
                      %button.nowrap.btn.btn--yellow.input--large{type: 'submit', id: 'submit_search_form'}
                        %i.fa.fa-search
                        Trouver


          .main-container.main-container--medium
            .two-thirds.f-weight-bold.line-height-1-5.push--bottom
              %h4.beta= profile[:title]
              .gamma= profile[:content]
            %div
              = link_to media_share_url(home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), :facebook), class: 'btn--yellow btn btn--bigger', target: :_blank do
                %i.fa.fa-facebook
                Facebook
              = link_to media_share_url(home_resolutions_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), :twitter), class: 'btn--yellow btn btn--bigger push-half--left' do
                %i.fa.fa-twitter
                Twitter
              = link_to 'Recommencer le test', home_resolutions_path, class: 'btn btn--yellow btn--bigger push-half--left'
          .orange-transparent-box.soft.push--top
            .grid.main-container.main-container--medium
              .grid__item.one-half.v-middle>
                %h4.white.flush Cours d'essai gratuits, exclusivités, promotions : une fois par mois, vous recevrez un e-mail avec les meilleurs cours de loisirs de votre ville :
              .grid__item.one-half.v-middle>
                = simple_form_for User.new, html: { class: '' } do |f|
                  %input{ type: 'hidden', name: 'redirect_to', value: profile[:url] }
                  .grid
                    .grid__item.v-middle.one-half>
                      = f.input :subscription_from, as: :hidden, input_html: { value: 'quizz' }
                      = f.input :email, label: false, input_html: { placeholder: 'Adresse e-mail', class: 'input--large one-whole' }, wrapper_html: { class: 'flush--top inline-block v-middle push-half--bottom one-whole' }
                      %br
                      = f.input :zip_code, label: false, input_html: { placeholder: 'Code postal', class: 'input--large one-whole' }, wrapper_html: { class: 'flush inline-block v-middle one-whole' }
                    .grid__item.v-middle.one-half.text--center>
                      = f.submit "M'inscrire", class: 'btn btn--yellow btn--bigger btn--full'
                      CoursAvenue est garanti sans spam.



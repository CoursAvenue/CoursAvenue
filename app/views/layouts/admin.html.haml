= content_for :header do
  = render 'shared/headers/pro'

= content_for :content do
  - if @structure
    .darkgray-box
      .v-middle.inline-block.soft-half--left
        - if @structure.logo?
          = link_to edit_pro_structure_path(@structure), class: 'block push-half--right' do
            = image_tag @structure.logo.url(:thumb), width: 40, class: 'block'
        - else
          = link_to 'Ajouter mon logo', edit_pro_structure_path(@structure), style: 'width: 110px; height: 110px; background-color: #555; padding-top: 30px; color: white; display: block;'
      %h5.inline-block.v-middle.flush.white= @structure.name

  .grid
    - if content_for? :side_menu
      %nav.grid__item.v-top.side-menu.white-box
        = yield :side_menu
    .grid__item.v-top.soft-half--left.small-container
      = yield :breadcrumb
      = content_for?(:admins_content) ? yield(:admins_content) : yield
    .grid__item.relative.wizard-container

= render :template => 'layouts/application'

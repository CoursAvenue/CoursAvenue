%html.no-js{lang: 'fr', 'xmlns:og' => "http://opengraphprotocol.org/schema", 'xmlns:fb' => "http://www.facebook.com/2008/fbml"}
  %head
    = yield :right_after_head

    = render 'shared/meta_information'

    %link{href: 'http://fonts.googleapis.com/css?family=Lato:100,300,400,700,400italic,700italic', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'http://fonts.googleapis.com/css?family=Open+Sans:300,300italic,400,600,600italic', rel: 'stylesheet', type: 'text/css'}

    - if Rails.env.production?
      - if request.subdomain == 'pro'
        = render 'layouts/pro_g_analytics'
      - else
        = render 'layouts/g_analytics'
      = yield :after_ga
    = yield :head
    = favicon_link_tag 'favicon.png'
    = javascript_include_tag "modernizr" # MUST BE In the Head and before CSS
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags unless response.cache_control[:public]
  %body{ style: (Rails.env.development? ? 'border-top: 5px solid yellow;' : '') }
    - unless response.cache_control[:public]
      - flash.each do |key, msg|
        .flash{class: key, data: {behavior: 'flash', type: key}}
          = msg.html_safe
    <!--[if lte IE 8]>
    - cache 'IE8 and less' do
      = render 'layouts/ie8_and_less_blocker'
    <![endif]-->

    = yield :header

    = yield :above_container
    = content_for?(:content) ? yield(:content) : yield

    - if Rails.env.development?
      = javascript_include_tag 'libs/jquery'
    - else
      = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'
    = javascript_include_tag "application"

    = yield :scripts
    = yield :layout_scripts
    = filepicker_js_include_tag
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false&language=fr&region=fr'
    = javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer.js'
    = javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' # HAVE TO BE LAST
    = javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/infobox/src/infobox_packed.js' # HAVE TO BE LAST

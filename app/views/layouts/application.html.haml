!!!
%html.no-js{lang: 'fr' }
  %head
    = render 'shared/meta_information'

    %link{href: 'http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', rel: 'stylesheet', type: 'text/css'}
    = yield :head
    = favicon_link_tag 'favicon.png'
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "modernizr" # MUST BE In the Head and after CSS
    = csrf_meta_tags unless response.cache_control[:public]
  %body
    - unless response.cache_control[:public]
      - flash.each do |key, msg|
        .flash{class: key, data: {behavior: 'flash', type: key}}
          = msg

    = yield :header

    = yield :above_container
    / .main-container{class: controller_path}
    /   = yield
    = content_for?(:content) ? yield(:content) : yield

    = render 'shared/footer'
    /= render 'shared/uservoice'

    = javascript_include_tag "application"
    = yield :scripts # Do not change name, needed for gmaps4rails
    = javascript_include_tag 'libs/richmarker'
    = render 'layouts/g_analytics' if Rails.env.production?

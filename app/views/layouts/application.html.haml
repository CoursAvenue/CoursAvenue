!!!
%html{lang: 'fr' }
  %head
    %title LeBonCours
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    - if (yield :meta_description).empty?
      %meta{property: "description", content: "Trouvez le bon cours au meilleurs prix."}
    - else
      %meta{ :name => 'description'        , :content => "#{yield :meta_description}"}
    %meta{property: "keywords", content: "cours,stage,cours-atelier,Cuisine,Danse,Langues,Professionnel,Technologies / Internet,Arts,Sports,Danse Fitness,Santé / Fitness,Relaxation / Gym douce,Chant,Relaxation,Yoga,Comédie / théâtre,Comédie musicale,Comédie,Chorale,Entraînement vocal,Musique,Solfège,Arts et Sciences,Culture artistique,Impro,Voix & scène,Ecriture,Dessin,Théâtre,Sport,Fitness,Art,Art martial,Atelier parents-nourrisson,Activité manuelle,Photo"}

    %meta{property: "og:title", content: "LeBonCours"}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:url", content: "http://leboncours.com"}
    %meta{property: "og:image", content: ""}
    %meta{property: "og:site_name", content: "LeBonCours"}
    %meta{property: "fb:admins", content: "100000023494269"}
    = favicon_link_tag 'favicon.png'
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "modernizr" # MUST BE In the Head and after CSS
    = csrf_meta_tags
  %body
    - flash.each do |key, msg|
      .flash{class: key, data: {behavior: 'flash', type: key}}
        = msg
    = render 'shared/header'

    = yield :above_container
    .main-container
      = yield

    = render 'shared/footer'
    = render 'shared/uservoice'

    = javascript_include_tag "application"
    = yield :scripts # Do not change name, needed for gmaps4rails
    = javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js'
    = analytics_init if Rails.env.production?

= content_for :header do
  = render partial: 'shared/headers/header', locals: { medium: true }

= content_for :content do
  = yield :above_content
  .main-container.main-container--medium
    .flexbox
      .flexbox__item.v-top.eight-twelfths.soft.palm-one-whole>
        = yield
      .flexbox__item.v-top.four-twelfths.soft.visuallyhidden--palm>
        = render 'blog/side_content'

  = render 'shared/footer'

= render :template => 'layouts/application'

= content_for :right_after_head do
  %link{ href: 'http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic', rel: 'stylesheet', type: 'text/css'}

= content_for :header do
  = render partial: 'shared/headers/header', locals: { medium: true, stick: true }

= content_for :content do
  = yield :above_content
  .main-container.main-container--medium.soft
    .visuallyhidden--palm.four-twelfths.soft--left.float--right{ class: (action_name == 'show' ? 'hidden' : '') }>
      = render 'blog/side_content'
    = yield

  = render 'shared/footer'

= render :template => 'layouts/application'

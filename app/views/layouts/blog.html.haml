= content_for :header do
  = render 'shared/headers/header'

= content_for :content do
  .home-screen-promotion-wrapper.soft.white.bg-cover.soft-black-text-shadow{ style: "background-image: url(#{asset_path 'pro/home_background5.jpg'})" }
    .main-container.soft
      %h1.flush
        = link_to "CoursAvenue, le blog", blog_articles_path, class: 'muted-link'
  - if content_for? :side_content do
    .main-container
      .flexbox
        .flexbox__item.v-top.eight-twelfths.soft.palm-one-whole>
          = yield
        .flexbox__item.v-top.four-twelfths.soft.visuallyhidden--palm>
          = yield :side_content
  - else
    = yield
  = render 'shared/footer'

= render :template => 'layouts/application'

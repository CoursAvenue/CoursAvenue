!!! Strict
%html{lang: 'fr'}
  %head
    %meta{content: 'text/html; charset=utf-8', 'httpequiv' => 'Content-Type'}/
    %link{ rel:'stylesheet', href: '/email.css'}
    - if content_for? :title
      %title= yield :title
    - elsif @_message and @_message.subject
      %title= @_message.subject
    - else
      %title Email de CoursAvenue

  %body.coursavenue-email-body{leftmargin: '0', marginheight: '0', marginwidth: '0', topmargin: '0'}
    %table.coursavenue-email-body{border: '0', cellpadding: '0', cellspacing: '0', width: '100%'}
      %tr.coursavenue-email-body
        %td.coursavenue-email-body{width: '100%'}
          %table{align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
            %tr
              %td{width: '600', style: 'width: 600px;'}
                %table{border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px;'}
                  %tr{valign: 'bottom'}
                    %td.email-title.text--center.logo-cell{width: '600', style: 'width: 600px;'}
                      - if content_for? :promo
                        = yield(:promo).gsub(/(<|&lt;)[^;<]*(>|&gt;)/, '').gsub('  ',' ').strip
                      - elsif content_for? :email_title
                        = yield(:email_title).gsub(/(<|&lt;)[^;<]*(>|&gt;)/, '').gsub('  ',' ').strip
                      - else
                        = truncate(yield, length: 80).gsub(/(<|&lt;)[^;<]*(>|&gt;)/, '').gsub('  ',' ').strip
                %table{border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px;'}
                  %tr{valign: 'bottom'}
                    %td.logo-cell{width: '300', style: 'width: 300px;'}
                      %img.hide{border: '0', height: '20', src: '', width: '1'}/
                      %br.hide
                      - if content_for? :email_logo
                        = link_to 'http://www.coursavenue.com', target: '_blank', class: 'block push-half--bottom' do
                          = yield :email_logo
                      - else
                        = link_to 'http://www.coursavenue.com', target: '_blank' do
                          = image_tag 'logo.png', height: '50', style: 'height: 50px; width: 250px;', width: '250'
                        %p.logo-subtitle
                          Les élèves recommandent leurs meilleurs cours
                    %td.v-bottom.soft-half--bottom.text--right{width: '300', style: 'width: 300px;'}
                      - if content_for? :header_links
                        = yield :header_links
                      - elsif @show_links
                        - if @structure
                          = link_to 'Connexion', dashboard_pro_structure_url(@structure, subdomain: 'pro')
                        %span.gray-light &#124;
                        = link_to 'Aide', pro_pages_questions_url(subdomain: 'pro')
                        %span.gray-light &#124;
                        - if @structure
                          = link_to 'Profil public', structure_url(@structure, subdomain: 'www')
                - if content_for? :promo
                  %table.promo-table{border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px;'}
                    %tr
                      %td.content-block.white-box{width: '600', style: 'width: 600px;'}
                        %table.promo-table{border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px;'}
                          %tr
                            - if content_for? :logo
                              %td.logo-cell{width: '100', valign: 'middle', align: 'center', style: 'padding-right: 0px;'}
                                = yield :logo
                            %td{width: (content_for?(:logo) ? '500' : '600'), valign: 'middle', style: 'padding: 15px'}
                              = yield :promo

          - unless content_for? :no_yield
            %br
            %table{align: 'center', border: '0', cellpadding: '15', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
              %tr
                %td.soft-half.content-block.white-box{width: '600', style: 'width: 600px;'}
                  = yield

          - if content_for? :under_content_no_box
            = yield :under_content_no_box
          - if content_for? :under_content
            %br
            %table.under-content{align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
              %tr
                %td.content-block.white-box{width: '600', style: 'width: 600px;'}
                  = yield :under_content

          - if content_for? :under_content_2
            %br
            %table.under-content{align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
              %tr
                %td.content-block.white-box{width: '600', style: 'width: 600px;'}
                  = yield :under_content_2

          - if content_for? :under_content_3
            %br
            %table.under-content{align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
              %tr
                %td.content-block.white-box{width: '600', style: 'width: 600px;'}
                  = yield :under_content_3

          - if content_for? :under_content_4
            %br
            %table.under-content{align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
              %tr
                %td.content-block.white-box{width: '600', style: 'width: 600px;'}
                  = yield :under_content_4

          %table{align: 'center', border: '0', cellpadding: '5', cellspacing: '0', width: '600', style: 'width: 600px; margin: auto;'}
            %tr
              %td.soft-half--ends.footer{width: '600', style: 'width: 600px;'}
                - if content_for? :footer
                  = yield :footer
                - elsif @structure and @structure.main_contact
                  %p
                    = link_to 'Gérer mes préférences de notifications e-mails.', notifications_pro_structure_admin_url(@structure, @structure.main_contact, subdomain: 'pro')
                - elsif @user
                  %p
                    = link_to 'Gérer mes préférences de notifications e-mails.', notifications_user_url(@user, subdomain: 'www')
                - else
                  %p
                    Vous recevez cet email car vous êtes inscrit sur CoursAvenue, le 1er moteur de recherche de cours en France.
                %br
                %br.hide


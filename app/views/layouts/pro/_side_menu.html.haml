- content_for :side_menu do
  %ul
    - if current_pro_admin and current_pro_admin.super_admin?
      = pro_side_menu_link 'Dashboard'            , pro_dashboard_path, current: current_tab, icon: 'fa fa-bar-chart'
      = pro_side_menu_link 'Derniers avis'        , pro_comments_path , current: current_tab, icon: 'fa fa-comments'
      = pro_side_menu_link 'Invitation élèves'    , pro_comment_notifications_path , current: current_tab, icon: 'fa fa-group'
      = pro_side_menu_link 'Users'                , pro_users_path    , current: current_tab, icon: 'fa fa-group'
      = pro_side_menu_link 'Profs'                , pro_admins_path   , current: current_tab, icon: 'fa fa-group'
      = pro_side_menu_link 'Profs stars'          , stars_pro_structures_path, current: current_tab, icon: 'fa fa-star'
      = pro_side_menu_link 'JPO'                  , pro_open_courses_path, current: current_tab, icon: 'fa fa-list'
      = pro_side_menu_link 'Invitations'          , pro_invited_users_path   , current: current_tab, icon: 'fa fa-group'
      = pro_side_menu_link 'Pages verticales'     , pro_subjects_path   , current: current_tab, icon: 'fa fa-arrow-up'
      = pro_side_menu_link 'Disciplines'          , all_pro_subjects_path   , current: current_tab, icon: 'fa fa-arrow-down'
      = pro_side_menu_link 'Nombre de click'      , pro_click_logs_path   , current: current_tab, icon: 'fa fa-hand-o-up'
      = pro_side_menu_link 'Derniers messages'    , pro_conversations_path   , current: current_tab, icon: 'fa fa-envelope'
      = pro_side_menu_link 'Demande de stickers'  , pro_sticker_demands_path, current: current_tab, icon: 'fa fa-envelope'
      %li &nbsp;

    - if @structure
      = pro_side_menu_link 'Tableau de bord', dashboard_pro_structure_path(@structure)  , current: current_tab, icon: 'fa fa-dashboard'
      = pro_side_menu_link 'Mes infos'      , (@structure.new_record? ? inscription_pro_structures_path : edit_pro_structure_path(@structure)) , current: current_tab,   icon: 'fa fa-user'
      = pro_side_menu_link 'Mes avis'                 , pro_structure_comments_path(@structure)   , current: current_tab, icon: 'fa fa-comments'
      = pro_side_menu_link 'Mes cours'      , pro_structure_courses_path(@structure)    , current: current_tab,   icon: 'fa fa-list'
      - if @structure.parisian?
        = pro_side_menu_link 'Journées Portes Ouvertes', pro_structure_course_opens_path(@structure)    , current: current_tab,   icon: 'fa fa-calendar'
      = pro_side_menu_link 'Mes photos & vidéos', pro_structure_medias_path(@structure) , current: current_tab,   icon: 'fa fa-youtube-play'
      - if current_pro_admin and current_pro_admin.super_admin?
        = pro_side_menu_link 'Mes élèves', pro_structure_user_profiles_path(@structure) , current: current_tab,   icon: 'fa fa-group'
      = pro_side_menu_link 'Mes messages', pro_structure_conversations_path(@structure) , current: current_tab,   icon: 'fa fa-envelope'
      = pro_side_menu_link 'Parrainer', new_pro_structure_invited_teacher_path(@structure)     , current: current_tab, icon: 'fa fa-gift', id: 'recommandation-side-menu'
      - if @structure.comments_count >= 5
        = pro_side_menu_link 'Communiquer', widget_pro_structure_path(@structure)     , current: current_tab, icon: 'fa fa-bullhorn'

= content_for :scripts do
  :javascript
    $(function(){
        $('#recommandation-side-menu a').click(function() {
            ga('send', 'event', 'Goto Recommander CoursAvenue', 'click');
        });
    });

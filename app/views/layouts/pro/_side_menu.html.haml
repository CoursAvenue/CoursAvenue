- content_for :side_menu do
  %ul
    - if current_pro_admin and current_pro_admin.super_admin?
      = pro_side_menu_link 'Dashboard'            , pro_dashboard_path, current: current_tab, icon: 'icon-bar-chart'
      = pro_side_menu_link 'Derniers avis'        , pro_comments_path , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Invitation élèves'               , pro_comment_notifications_path , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Users'                , pro_users_path    , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Profs'                , pro_admins_path   , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Profs stars'          , stars_pro_structures_path, current: current_tab, icon: 'icon-star'
      = pro_side_menu_link 'Invitations'          , pro_invited_teachers_path   , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Derniers messages'             , pro_messages_path   , current: current_tab, icon: 'icon-envelope'
      %li &nbsp;

    - if @structure
      = pro_side_menu_link 'Tableau de bord', dashboard_pro_structure_path(@structure)  , current: current_tab, icon: 'icon-dashboard'
      = pro_side_menu_link 'Mes infos'      , (@structure.new_record? ? inscription_pro_structures_path : edit_pro_structure_path(@structure)) , current: current_tab,   icon: 'icon-user'
      = pro_side_menu_link 'Mes avis'                 , pro_structure_comments_path(@structure)   , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Mes cours'      , pro_structure_courses_path(@structure)    , current: current_tab,   icon: 'icon-list'
      = pro_side_menu_link 'Mes photos & vidéos', pro_structure_medias_path(@structure) , current: current_tab,   icon: 'icon-youtube-play'
      = pro_side_menu_link 'Mes messages', pro_structure_conversations_path(@structure) , current: current_tab,   icon: 'icon-envelope'
      = pro_side_menu_link 'Parrainer un professeur', coursavenue_recommendations_pro_structure_path(@structure)     , current: current_tab, icon: 'icon-bullhorn', id: 'recommandation-side-menu'
      - if @structure.comments_count >= 5
        = pro_side_menu_link 'Communiquer', widget_pro_structure_path(@structure)     , current: current_tab, icon: 'icon-bullhorn'

= content_for :scripts do
  :javascript
      $(function(){
          $('#recommandation-side-menu a').click(function(){
              ga('send', 'event', 'Goto Recommander CoursAvenue', 'click')
          });
      });

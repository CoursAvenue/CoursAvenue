- content_for :side_menu do
  %ul
    - if current_pro_admin and current_pro_admin.super_admin?
      = pro_side_menu_link 'Dashboard'            , pro_dashboard_path, current: current_tab, icon: 'icon-bar-chart'
      = pro_side_menu_link 'Derniers commentaires', pro_comments_path , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Élèves'               , pro_students_path , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Users'                , pro_users_path    , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Admins'               , pro_admins_path   , current: current_tab, icon: 'icon-group'
      %li &nbsp;

    - if @structure
      = pro_side_menu_link 'Tableau de bord'.html_safe, dashboard_pro_structure_path(@structure)  , current: current_tab, icon: 'icon-dashboard'
      = pro_side_menu_link 'Profil'.html_safe      , (@structure.new_record? ? inscription_pro_structures_path : pro_structure_path(@structure)) , current: current_tab,   icon: 'icon-user'
      = pro_side_menu_link 'Mes avis'             , pro_structure_comments_path(@structure)        , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Mes paramètres'       , edit_pro_admin_path((current_pro_admin and !current_pro_admin.super_admin?) ? current_pro_admin : (@structure.admins.first || current_pro_admin))   , current: current_tab, icon: 'icon-cogs'

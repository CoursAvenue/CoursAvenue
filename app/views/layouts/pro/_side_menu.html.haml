- content_for :side_menu do
  %ul
    - if current_pro_admin and current_pro_admin.super_admin?
      = pro_side_menu_link 'Dashboard'            , pro_dashboard_path, current: current_tab, icon: 'icon-bar-chart'
      = pro_side_menu_link 'Derniers commentaires', pro_comments_path , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Élèves'               , pro_students_path , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Users'                , pro_users_path    , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Admins'               , pro_admins_path   , current: current_tab, icon: 'icon-group'
      = pro_side_menu_link 'Invitations'          , pro_invited_teachers_path   , current: current_tab, icon: 'icon-group'
      %li &nbsp;

    - if @structure
      = pro_side_menu_link 'Tableau de bord'.html_safe, dashboard_pro_structure_path(@structure)  , current: current_tab, icon: 'icon-dashboard'
      = pro_side_menu_link 'Mes infos'.html_safe      , (@structure.new_record? ? inscription_pro_structures_path : pro_structure_path(@structure)) , current: current_tab,   icon: 'icon-user'
      = pro_side_menu_link 'Mes cours'.html_safe      , pro_structure_courses_path(@structure) , current: current_tab,   icon: 'icon-list'
      = pro_side_menu_link 'Mes photos & vidéos'.html_safe, pro_structure_medias_path(@structure) , current: current_tab,   icon: 'icon-youtube-play'
      = pro_side_menu_link 'Mes avis'             , pro_structure_comments_path(@structure)        , current: current_tab, icon: 'icon-comments'
      = pro_side_menu_link 'Parrainer un professeur', coursavenue_recommendations_pro_structure_path(@structure)     , current: current_tab, icon: 'icon-bullhorn', id: 'recommandation-side-menu'
      -# = pro_side_menu_link 'Communiquer', widget_pro_structure_path(@structure)     , current: current_tab, icon: 'icon-bullhorn'

= content_for :scripts do
  :javascript
      $(function(){
          $('#recommandation-side-menu a').click(function(){
              ga('send', 'event', 'Goto Recommander CoursAvenue', 'click')
          });
      });

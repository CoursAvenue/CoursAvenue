= content_for :header do
  = render 'shared/header'

= content_for :content do
  - if current_user
    .white-box.main-container.push--top
      .flexbox.one-whole
        .flexbox__item.v-top{style: 'width: 11%;'}>
          - if current_user.has_avatar?
            = link_to edit_user_path(current_user) do
              = image_tag current_user.avatar_url(:thumb), class: 'block'
          - else
            .text--center
              = link_to edit_user_path(current_user), style: 'width: 130px; height: 130px; background-color: #555; padding-top: 40px; color: white; display: block;' do
                Ajouter
                %br
                ma photo
        .flexbox__item.v-top.eight-twelfths.soft-half>
          %h4.push-half--bottom
            %span.v-middle= current_user.full_name
            %span.v-middle.milli
              \—
              = link_to "Profil complété à #{current_user.profile_completion} %", dashboard_user_path(current_user), class: 'semi-muted-link'
          %div
            = link_to 'Partager', "https://www.facebook.com/sharer/sharer.php?u=http://www.coursavenue.com", class: 'btn btn--small btn--facebook', target: '_blank', onclick: "ga('send', 'event', 'User / Share on Facebook', 'click', 'From dashboard page')"
        .flexbox__item.v-middle.two-twelfths.soft-half.text--center>
          - if current_user.city and current_user.passions.any?
            = link_to current_user.around_courses_url, class: 'muted-link' do
              .beta #{current_user.around_courses_count} cours
              - if current_user.around_trial_courses_count > 0
                dont #{current_user.around_trial_courses_count} essais gratuits
              %strong devraient vous plaire
          = link_to 'Gérer mes passions', user_passions_path(current_user), class: "btn btn--blue #{(current_user.passions.any? ? 'btn--small' : '')}"


  .main-container.soft--ends{class: controller_path}
    .grid
      .grid__item.one-fifth.v-top>
        %nav.one.flexbox__item.v-top.side-menu.white-box
          = yield :user_side_menu
      .grid__item.four-fifths.v-top>
        = content_for?(:users_content) ? yield(:users_content) : yield

  - cache "page-footer_#{ENV["ETAG_VERSION_ID"]}" do
    = render 'shared/footer'

= render :template => 'layouts/application'

= content_for :header do
  = render 'shared/headers/header'

= content_for :content do
  - if @user
    = yield :user_top_menu
    .main-container.main-container--medium.soft--ends.push-half--top{ class: controller_path }
      = content_for?(:users_content) ? yield(:users_content) : yield
    - if content_for?(:under_container)
      = yield(:under_container)
  - else
    .main-container.soft--ends{ class: controller_path }
      = yield

  = render 'shared/footer'

= render :template => 'layouts/application'

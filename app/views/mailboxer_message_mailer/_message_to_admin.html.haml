- show_phone_number = true if show_phone_number.nil?
.gray-box.soft-half
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr{ valign: 'top' }
      %td.text--center.v-top.content-block{ width: 125 }
        = image_tag user.avatar_url(:thumb), class: 'message__avatar rounded--circle bordered', width: 50, height: 50, alt: "Photo de #{user.name}"
        .p.text--center.milli
          %strong= user.name
          %br
          = "#{l(message.created_at.to_date, format: :short)} Ã  #{l(message.created_at, format: :short)}"
          - if show_phone_number and user.phone_number.present?
            %br
            %strong= user.phone_number

      %td.soft-half--left.v-top.content-block{ width: 475 }
        = simple_format(message.body).gsub('<p>', '<div class="p">').gsub('</p>', '</div>').html_safe

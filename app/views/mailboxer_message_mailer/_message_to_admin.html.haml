.bg-gray-light.bordered--ends.soft-half
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr{ valign: 'top' }
      %td.text--center.v-top.content-block{ width: 125 }
        = image_tag user.avatar_url(:thumb), class: 'message__avatar rounded--circle bordered', width: 50, height: 50, alt: "Photo de #{user.name}"
        .p.text--center.milli.line-height-1-7
          %strong= user.name

      %td.soft-half--left.v-top.content-block{ width: 475 }
        = simple_format(message.body).gsub('<p>', '<div class="p">').gsub('</p>', '</div>').html_safe

.gray-box.soft-half
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
    %tr{ valign: 'top' }
      %td.text--center.v-top.content-block{ width: 125 }
        = link_to structure_url(structure, subdomain: 'www'), class: 'block' do
          = image_tag structure.logo.url(:thumb), class: 'message__avatar rounded--circle bordered', width: 50, height: 50, alt: "Logo de #{structure.name}"
        .p.text--center.milli.line-height-1-7
          %strong= structure.name
          %br
          = "#{l(message.created_at.to_date, format: :short)} Ã  #{l(local_time(message.created_at), format: :short)}"

      %td.soft-half--left.v-top.content-block{ width: 475 }
        .p
          %strong= message.conversation.subject
        = simple_format(message.body).gsub('<p>', '<div class="p">').gsub('</p>', '</div>').html_safe

- if @user.avatar.present?
  - content_for :logo do
    = image_tag @user.avatar.url(:thumb), style: '-ms-interpolation-mode:bicubic;', width: '75', height: '75'

- content_for :promo do
  %h4= t('mailboxer.message_mailer.subject_reply', sender: @user.name)

%p
  Bonjour #{@structure.name},
%p
  #{@user.name} vient de vous répondre sur CoursAvenue :

= simple_format @message.body

%p.action
  = link_to "Répondre au message", pro_structure_conversation_url(@structure, @message.conversation, subdomain: 'pro'), class: 'btn btn--blue'

%p
  L'équipe de CoursAvenue

- content_for :footer do
  %p Vous recevez ce message car #{@user.name} vous a envoyé un message privé sur CoursAvenue.com

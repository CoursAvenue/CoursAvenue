- lazy         = false unless lazy
- show_caption = true  unless show_caption == false
.media__item.one-half.very-soft{class: media.video? ? 'media__item--video relative' : ''}>
  %a.soft-half.block.break-all{rel: 'gallery', href: media.url, title: media.caption, data: {behavior: "fancy"}}
    - if media.video?
      = media.thumbnail_url_html lazy: lazy
      %i.fa.fa-youtube-play
    - else
      = media.url_html lazy: true
    - if show_caption
      %caption= media.caption
    %i.fa.fa-expand

- blocs.each do |bloc|
  - next if bloc.content.blank? and !bloc.image?
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
    %tr{ valign: 'top' }
      - if bloc.image?
        %td.text--center.content-block.soft-half--sides{ width: '600' }
          = image_tag bloc.image.url, alt: @newsletter.title, width: "600"
      - elsif bloc.content.present?
        %td.content-block.soft-half--sides{ width: '600' }
          = bloc.content.html_safe

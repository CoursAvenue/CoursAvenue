.home-screen-promotion-wrapper.soft.white.bg-cover.soft-black-text-shadow{ style: "background-image: url(#{asset_path 'https://coursavenue-public.s3.amazonaws.com/public_assets/pro/home_background7.jpg'})", 'data-stellar-background-ratio' => '0.6' }
  .main-container.soft
    %h1.flush Questions les plus fréquentes

.main-container.soft--ends
  .grid
    .grid__item.four-twelfths.soft--right>
      %nav.white-box.side-menu.one-whole
        %ul
          - @sections.each_with_index do |section, index|
            %li.omega.orange{ class: index == 0 ? 'active' : ''}
              = link_to section.title, "##{section.slug}", class: 'side-menu-link', data: { toggle: 'tab' }

    .grid__item.eight-twelfths.white-box.soft>
      - @sections.each_with_index do |section, index|
        %div.hide.tab-pane{ id: section.slug, class: index == 0 ? 'active' : '' }
          - section.questions.each do |sub_section|
            %h5.blue.toggleable-header{ data: { behavior: 'toggleable', el:'+ div' } }
              = sub_section.question
              %i.fa.fa-caret-left
            %div.hide.soft--sides
              = sub_section.answer.html_safe

  .delta.push--top.text--center
    Vous ne trouvez pas la réponse à votre question ?
    = link_to 'Contactez-nous', pages_contact_path

= content_for :scripts do
  :javascript
      $(function() {
          if (window.location.hash.length > 0 && window.location.hash != '#_=_') {
              $('[href=' + window.location.hash + ']').tab('show');
          }
      });

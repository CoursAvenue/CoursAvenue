%tr
  %td= t(price.libelle)
  - if price.amount == 0
    %td.text--center Gratuit
  - else
    - if price.amount.nil?
      %td.text--center Se renseigner
    - else
      %td.text--center
        - if price.promo_amount
          %span.line-through= "#{readable_amount(price.amount)}€"
          %span.green= "#{readable_amount(price.promo_amount)}€"
        - else
          = "#{readable_amount(price.amount)}€"

.page
  %h2 Changez votre mot de passe

  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|

    = f.error_notification

    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token

    .form-inputs
      = f.input :password, :label => "Nouveau mot de passe", :required => true, :autofocus => true
      = f.input :password_confirmation, :label => "Nouveau mot de passe (confirmation)", :required => true

    .form-actions
      = f.button :submit, "Valider", class: 'btn btn--green'

    .form-actions
      = render "pro/admins/shared/links"

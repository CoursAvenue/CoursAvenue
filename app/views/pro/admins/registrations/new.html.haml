- if @structure
  .text--center
    %h1= @structure.name
.text--center
  %p.alert--info.one-half
    Des questions ? Nous sommes joignables entre 9h30 et 18h30
    %br
    %b
      %i.icon-phone
      06 07 94 54 52

= simple_form_for [:pro, @admin], :url => pro_admin_registration_path, html: {class: 'half-form'} do |f|
  = f.error_notification
  .form-inputs
    %h4.form-header-group
      %i.icon-user
      Identifiants
    .form-white-box
      = f.input :name
      = f.input :phone_number, wrapper_html: {class: 'flush--bottom'}, placeholder: '01 23 03 04 12'
      %p.field-form-info= t('.phone_number_info')
      = f.input :email, :required => true, :autofocus => true, label: t('.email'), wrapper_html: {class: 'flush--bottom'}
      %p.field-form-info= t('.email_info')
      = f.input :password, :required => true
      = f.input :structure_id, as: :hidden, value: @structure.try(:id)

  .text--center
    = f.button :submit, t('.sign_up'), class: 'btn__success btn__large'



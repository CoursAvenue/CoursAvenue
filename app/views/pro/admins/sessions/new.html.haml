- @is_responsive = true
= content_for :above_container do
  .page.soft.main-container
    %h2.f-weight-normal.text--center= t('.log_in')

    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, :required => false, :autofocus => true
        = f.input :password, :required => false
        = f.input :remember_me, :as => :boolean, input_html: {class: 'flush--top'}

      .form-actions
        = f.button :submit, "Se connecter", class: 'btn--green'
        .push-half--top
          = render "pro/admins/shared/links"

= side_menu_currently_at 'call_reminders'

.panel
  .panel__header.soft
    %h3.flush Profs à rappeler
  .panel__body
    .soft
      %table.table--data.table--striped
        %thead
          %tr
            %th Nom
            %th Numéro
            %th Site
            %th
        %tbody
          - @call_reminders.not_archived.each do |call_reminder|
            %tr
              %td= call_reminder.name
              %td= call_reminder.phone_number
              %td= call_reminder.website
              %td.text--right
                = link_to 'Archiver', pro_call_reminder_path(call_reminder, call_reminder: { status: 'archived' }), class: 'btn btn--green btn--small', method: :patch
                = link_to pro_call_reminder_path(call_reminder, call_reminder: { status: 'archived' }), class: 'btn btn--red btn--small', data: { behavior: 'popover', content: 'Supprimer' }, method: :delete do
                  %i.fa.fa-trash-o
      %hr
      %h4 Rappel archivés
      %table.table--data.table--striped
        %thead
          %tr
            %th Nom
            %th Numéro
            %th Site
            %th
        %tbody
          - @call_reminders.archived.each do |call_reminder|
            %tr
              %td= call_reminder.name
              %td= call_reminder.phone_number
              %td= call_reminder.website
              %td.text--right
                = link_to 'Désarchiver', pro_call_reminder_path(call_reminder, call_reminder: { status: '' } ), class: 'btn btn--green btn--small', method: :patch
                = link_to pro_call_reminder_path(call_reminder, call_reminder: { status: '' } ), class: 'btn btn--red btn--small', data: { behavior: 'popover', content: 'Supprimer' }, method: :delete do
                  %i.fa.fa-trash-o

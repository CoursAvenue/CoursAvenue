= side_menu_currently_at 'Derniers avis'
.white-box.islet
  = simple_form_for [:pro, @comment] do |f|
    = f.input :author_name
    = f.input :email
    = f.input :course_name
    = f.input :title
    = f.input :content, input_html: {value: @comment.content_for_input}
    .form-actions
      = f.submit 'Enregistrer', class: 'btn btn--green'

- last_message = conversation.messages.last

- recipients                      = conversation.recipients.reject{|recipient| recipient == @admin }
- participation_request           = conversation_participation_request(conversation)
- participation_request_decorator = participation_request.decorate if participation_request
.bordered--top.push--top.soft--top
  = link_to pro_structure_conversation_path(@structure, conversation), class: "muted-link block flexbox" do
    .flexbox__item.v-top.v-middle.soft--right
      - if recipients.first
        = image_tag recipients.first.avatar_url(:thumb), class: 'block bordered rounded--circle', height: 65, width: 65
    .flexbox__item.v-top.v-middle.one-whole
      .float--right
        %strong.gray-light.epsilon= l(last_message.created_at.to_date, format: :short)
        %span{ data: { toggle: 'popover', placement: 'top', content: conversation_label_name(conversation) } }
          = conversation_label conversation
      %p.flush.line-height-1-7
        - if recipients.first
          %strong.epsilon= truncate((recipients.first.name || recipients.first.email), length: 18)
          = "(#{pluralize conversation.messages.count, 'message'})"
        - if recipients.length > 1
          %span.nowrap.milli{ title: recipients.map(&:name).join(', '), data: { behavior: 'tooltip' } }
            et #{pluralize(recipients.length - 1, 'autre')}
          %br
      %p.flush.line-height-1-7.f-weight-500
        %span
          = "#{conversation.subject} - "
          - if conversation_extra_infos(conversation).present?
            = "(#{conversation_extra_infos(conversation).map{ |extra_info| t("#{extra_info.name}_small") }.join(', ')})"

        %span.gray-light= truncate(last_message.body, length: 80)
      - if participation_request
        .line-height-1-7{ class: participation_request_decorator.color }
          %strong= participation_request_decorator.status_name
          - if !participation_request.canceled? and !participation_request.past?
            .btn.btn--small.btn--green.nowrap
              - if participation_request.pending? and participation_request.last_modified_by == 'User'
                RÃ©pondre maintenant
              - else
                Modifier / Annuler


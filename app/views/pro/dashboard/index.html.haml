= side_menu_currently_at 'Dashboard'

%h1.header-group
  %i.icon-dashboard
  Tableau de bord

%h3.header-group
  %i.icon-map-marker
  Profésseurs enregistrés / Avis laissés
.white-box.islet.text--center
  .gamma
    = Admin.normal.count
    profs
    \/
    = Comment.count
    avis

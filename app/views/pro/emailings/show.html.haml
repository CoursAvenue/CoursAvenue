= side_menu_currently_at 'emailings'

.panel
  .panel__header.soft.text--center
    %h3.flush Newsletter

  .panel_body.soft
    .text--center.margin-bottom
      = link_to 'Editer', edit_pro_emailing_path(@emailing), class: 'btn btn--green push-half--right'
      = link_to 'Previsualiser la Newsletter', preview_pro_emailing_path(@emailing), class: 'btn btn--green push-half--right fancybox.ajax', data: { behavior: 'modal', width: '700', padding: 0 }
      %a{ class: 'btn btn--green push-half--right', href: 'javascript:void(0)', data: { behavior: 'show' } }
        Envoyer la previsualisation
      = link_to 'Copier le code', code_pro_emailing_path(@emailing), class: 'btn btn--green push-half--right fancybox.ajax', data: { behavior: 'modal', width: '700', padding: 0 }

    .hidden.text--center.margin-bottom{ data: { behavior: 'hidden' } }
      %form{ action: send_preview_pro_emailing_path(@emailing), method: 'GET' }
        %input.input--large{ name: 'to', type: 'email', placeholder: 'contact@coursavenue.com' }
        %input{ type: 'submit', class: 'btn btn--green', data: { disable_with: "En cours d'envoi" } }

    %hr

    %p= @emailing.title

    = image_tag asset_path('/assets/logos/logo.png'), class: 'center-block'
    = image_tag @emailing.header_image.url, class: 'very-soft', alt: @emailing.alt if @emailing.header_image.present?
    - @emailing.body.split("\r\n\r\n").each do |paragraph|
      %p= paragraph

    %hr
    %div.text--center.grid--full
      .grid__item.one-third>
        = link_to '/search' do
          %i.fa.fa-search
          Rechercher un Cours

      .grid__item.one-third>
        = link_to mon_compte_path do
          %i.fa.fa-key
          Votre compte

      .grid__item.one-third>
        = link_to '' do
          %i.fa
          Se d√©sabonner
    %hr

    #emailings-region{ data: { type: 'emailings-root' } }

- content_for :scripts do
  :javascript
      window.coursavenue = window.coursavenue || {};
      window.coursavenue.bootstrap = {
          id: #{ @emailing.id },
          models: #{ @sections.to_json }
      };

      $(document).ready(function() {
          $('[data-behavior=show]').click(function() {
              $('[data-behavior=hidden]').slideDown();
          });
      });

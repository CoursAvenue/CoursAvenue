- @guides.each do |guide|
  .flexbox.push-half--bottom.hoverable.transition-all-300.soft
    = link_to edit_pro_guide_path(guide), class: 'flexbox__item v-middle muted-link' do
      %h4.push-half--bottom
        = guide.title
    .flexbox__item.v-middle.text--right
      = succeed ' ' do
        = link_to '#', class: 'btn', target: :_blank do
          %i.fa.fa-eye
          Voir
      = succeed ' ' do
        = link_to edit_pro_guide_path(guide), class: 'btn' do
          %i.fa.fa-pencil
          Modifier
      = succeed ' ' do
        = link_to pro_guide_path(guide), class: 'btn btn--red', method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce guide' } do
          %i.fa.fa-trash
          Supprimer

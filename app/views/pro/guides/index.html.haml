= side_menu_currently_at 'guides'

.flexbox.push--bottom
  .flexbox__item.v-middle
    %h1.flush Guides
  .flexbox__item.v-middle.text--right
    - if @guides.any?
      = link_to new_pro_guide_path, class: 'btn btn--green fancybox.ajax', data: { behavior: 'modal', width: '500', padding: '0' } do
        %i.fa.fa-plus
        Ajouter un guide

- if @guides.any?
  = render "guides_list"
- else
  = render "guides_empty"

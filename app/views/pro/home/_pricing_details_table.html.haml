%table.table--data.table--striped.table--white.push--top{ data: { behavior: 'wizard-helper', content: t('pro.structures.wizard_helper.go_premium')} }
  %thead
    %tr.border-none--bottom
      %td.no-stripe.four-twelfths.bordered--right.v-top.epsilon
        -# Tarifs :
      %td.text--center.four-twelfths.bordered--top.bordered--right.v-top.bordered--bottom
        %p.beta.push-half--bottom.soft--top
          %strong Basic
        %ul.nav.tabs--link.inline-block
          %li.active &nbsp;
        .delta Gratuit
        %p
          %i &nbsp;
          %br
          %strong.gamma &nbsp;
        - if @structure
          %p
            %span.gray Votre compte actuel
        - else
          = link_to 'Commencer', inscription_pro_structures_path, class: 'btn btn--yellow btn--full'
      %td.bordered--right.four-twelfths.text--center.bordered--top.v-top.bordered--bottom
        %p.beta.push-half--bottom.soft--top
          %strong Premium
        %ul.nav.tabs--link.inline-block
          %li.active
            %a{ href: '.price-annual', data: { toggle: 'tab' } } 12 mois
          %span.gray= '|'
          %li
            %a{ href: '.price-mensual', data: { toggle: 'tab' } } 1 mois

        .tab-content
          .tab-pane.hard.price-annual.active
            .delta 39€ TTC / mois
            %p
              %i Soit 468€ en un prélèvement unique
              %br
              %strong.green.gamma -11%
              %span.delta.green de réduction

            - if @structure
              = link_to 'Commencer', go_premium_pro_structure_path(@structure, premium_type: 'yearly'), class: 'btn btn--yellow btn--full'
            - else
              = link_to 'Commencer', inscription_pro_structures_path, class: 'btn btn--yellow btn--full'
          .tab-pane.hard.price-mensual
            .delta 44€ TTC / mois
            %p
              %i Facturation mensuelle
              %br
              %strong.gamma &nbsp;
            - if @structure
              = link_to 'Commencer', go_premium_pro_structure_path(@structure, premium_type: 'monthly'), class: 'btn btn--yellow btn--full'
            - else
              = link_to 'Commencer', inscription_pro_structures_path, class: 'btn btn--yellow btn--full'

  %tbody
    %tr
    %tr
      %td.bordered--right.no-stripe &nbsp;
      %td.bordered.text--center.soft-half{ colspan: 2 }
        %strong.delta Gagnez en visibilité
    %tr
      %td.bordered--right.no-stripe.text--right
        %p.epsilon.flush
          %strong Référencement CoursAvenue
          %br
          %span.milli Affichez votre profil sur le moteur de recherche géolocalisé CoursAvenue.
      %td.bordered--right.text--center
        %i.fa.fa-check.green.delta
      %td.bordered--right.text--center
        %i.fa.fa-check.green.delta
    %tr
      %td.bordered--right.no-stripe.text--right
        %p.epsilon.flush
          %strong Profil complet et personnalisé
          %br
          %span.milli Montez dans les résultats grâce à vos photos & vidéos, aux liens vers vos pages (site Internet & Facebook), et à une accroche personnalisée.
      %td.bordered--right.text--center
        Limité
      %td.bordered--right.text--center
        %i.fa.fa-check.green.delta
    %tr
      %td.bordered--right.no-stripe.text--right
        %p.epsilon.flush
          %strong Profils similaires
          %br
          %span.milli Apparaissez sur tous les autres profils qui proposent les mêmes types d'activités autour de vous.
      %td.bordered--right.text--center
      %td.bordered--right.text--center
        %i.fa.fa-check.green.delta
    %tr

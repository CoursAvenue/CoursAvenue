      %td.bordered--right.text--center
        Chat & e-mail
      %td.bordered--right.text--center
        Conseiller par téléphone
    %tr
      %td.bordered--right.no-stripe.text--right
      %td.bordered--right.text--center.soft-half
        - if @structure
          %span.gray.v-middle Votre compte actuel
        - else
          = link_to 'Commencer', inscription_pro_structures_path, class: 'btn btn--yellow btn--full'
      %td.bordered--right.text--center.soft-half
        - if @structure
          .tab-pane.hard.price-annual.active
            = link_to 'Commencer', go_premium_pro_structure_path(@structure, premium_type: 'yearly'), class: 'btn btn--yellow btn--full'
          .tab-pane.hard.price-mensual
            = link_to 'Commencer', go_premium_pro_structure_path(@structure, premium_type: 'monthly'), class: 'btn btn--yellow btn--full'
        - else
          = link_to 'Commencer', inscription_pro_structures_path, class: 'btn btn--yellow btn--full'
    %tr
      %td.bordered--right.no-stripe.text--right
      %td.bordered.text--left{ colspan: 2 }
        %p
          %strong Abonnement sans contrat

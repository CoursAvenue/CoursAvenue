      .flexbox__item.v-top.palm-block.palm-text--center.soft--left.palm-hard.visuallyhidden--palm
        = image_tag 'pro/homepage/icons/like.png', height: 150, width: 150, class: 'image-drop-shadow push-half--bottom', data: { src2x: asset_path('pro/homepage/icons/like@2x.png') }


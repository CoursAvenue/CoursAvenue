              %li.visuallyhidden--palm.soft--right
                = link_to 'Essayer gratuitement', inscription_pro_structures_path, class: 'muted-link white bordered border-color-white soft-half--ends soft--sides', data: { try: true }
        .grid.main-container.mega-soft--top
          .grid__item.v-bottom.one-half.visuallyhidden--palm.visuallyhidden--lap>
            = image_tag 'pro/homepage/computer.png', class: 'one-whole block'

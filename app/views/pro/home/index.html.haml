- content_for :scripts do
  :javascript
    $("register").addEvent("click", function(){
        var modal = new SimpleModal({
            width: 500,
            "onAppend": function() {
                $("simple-modal").fade("hide");
                setTimeout((function(){ $("simple-modal").fade("show")}), 200 );
                var tw = new Fx.Tween($("simple-modal"),{
                  duration: 800,
                  transition: Fx.Transitions.Cubic.easeOut,
                  link: 'cancel',
                  property: 'top'
                }).start(-400, 150);
                $('new_admin').addEvent('submit', function() {
                    if ($('admin_password').value.length < 6) {
                        $$('.input.password').addClass('red');
                        return false;
                    }
                });
            }
        });
        modal.show({
            "model":"modal",
            "title":"Inscription",
            "contents": $('registration-form').get('html')
        });
        new Request.JSON({
            url: Routes.click_loggers_path(),
            data: {
              click_logger: {
                name: 'Inscription gratuite - Accueil pro'
              }
            }
        }).post();
    });

#registration-form.hidden
  = render partial: 'pro/admins/quick_registration'

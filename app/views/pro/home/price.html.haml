= content_for :scripts do
  :javascript
    $(function() {
      var showTabWithHash;
      showTabWithHash = function(){
          var url = document.location.toString();
          if (url.match('#')) {
              $('.tabs a[href=#'+url.split('#')[1]+']').tab('show') ;
          }
      }
      $(window).on('hashchange', function() {
        showTabWithHash();
      });
      showTabWithHash();
    });

  = simple_form_for [@course, @price] do |f|
    = f.error_notification
    .input.inline-inputs
      = f.hidden_field :libelle, value: 'prices.training'
      = f.input :amount, label:  'Prix du stage :', placeholder: '45', input_html: {style: 'width: 5em'}

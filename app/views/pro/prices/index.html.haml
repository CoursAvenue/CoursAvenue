= side_menu_currently_at 'Mes cours'

%h2.header-group.flush--bottom Prix - #{@course.name} - #{@course.type_name}
= link_to structure_path(@structure) do
  %i.icon-double-angle-left
  Retour aux cours

= render "#{@course.underscore_name}_form"

- if @prices.any?
  %table.table--striped
    %thead
      %tr
        %th Type
        %th Montant
        %th
    %tbody
      - @prices.each do |price|
        %tr
          %td= t(price.libelle)
          %td= "#{price.readable_amount}€"
          %td
            = link_to edit_course_price_path(@course, price), title: 'Éditer' do
              %i.icon-edit
            = link_to course_price_path(@course, price), method: :delete, title: 'Supprimer' do
              %i.icon-trash

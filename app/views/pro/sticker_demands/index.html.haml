= side_menu_currently_at 'pro_dashboard'

.panel
  = render partial: 'pro/shared/dashboard_tabs', locals: { current: 'sticker_demands' }
  .panel__body.soft--ends
    %h3.soft.flush À envoyer
    %table.table--striped
      %thead
        %tr
          %th Structure
          %th Rond
          %th Carré
          %th Adresse
          %th Date de la demande
          %th
      %tbody
        - @sticker_demands.not_sent.each do |sticker_demand|
          = render partial: 'pro/sticker_demands/sticker_demand', locals: { sticker_demand: sticker_demand }

    %hr.push--ends

    %h3.soft.flush Envoyé
    %table.table--striped
      %thead
        %tr
          %th Structure
          %th Rond
          %th Carré
          %th Adresse
          %th Date de la demande
          %th
      %tbody
        - @sticker_demands.sent.each do |sticker_demand|
          = render partial: 'pro/sticker_demands/sticker_demand', locals: { sticker_demand: sticker_demand }

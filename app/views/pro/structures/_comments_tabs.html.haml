= content_for :top_menu do
  %ul.nav.flush
    %li{ class: current == 'comments' ? 'active' : '' }
      = link_to pro_structure_comments_path(@structure), class: 'muted-link epsilon f-weight-600 soft--sides soft-half--ends' do
        Avis
    %li{ class: current == 'recommandation' ? 'active' : '' }
      = link_to recommendations_pro_structure_path(@structure), class: 'muted-link epsilon f-weight-600 soft--sides soft-half--ends' do
        Demander des recommandations
    - if @structure.comment_notifications.any?
      %li{ class: current == 'comment_notification' ? 'active' : '' }
        = link_to pro_structure_comment_notifications_path(@structure), class: 'muted-link epsilon f-weight-600 soft--sides soft-half--ends' do
          Suivi des demandes

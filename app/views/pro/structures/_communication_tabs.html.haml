%ul.tabs.push--bottom
  %li{class: current == 'widget' ? 'active' : ''}
    = link_to widget_pro_structure_path(@structure) do
      %i.fa.fa-book
      Livre d'or
  %li{class: current == 'signature' ? 'active' : ''}
    = link_to signature_pro_structure_path(@structure) do
      %i.fa.fa-envelope
      Signature
  %li{class: current == 'flyer' ? 'active' : ''}
    = link_to flyer_pro_structure_path(@structure) do
      %i.fa.fa-bookmark
      Flyer
  - if @structure.comments_count >= 15
    %li{class: current == 'sticker' ? 'active' : ''}
      = link_to new_pro_structure_sticker_demand_path(@structure) do
        %i.fa.fa-gift
        Autocollant
    - if @structure.sticker_demands.any?
      %li{class: current == 'sticker-index' ? 'active' : ''}
        = link_to pro_structure_sticker_demands_path(@structure) do
          %i.fa.fa-gift
          Suivi de mes autocollants

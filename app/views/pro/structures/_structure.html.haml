.grid
  .grid__item.two-tenths>
    - if @structure.logo.present?
      = image_tag @structure.logo.url(:thumb)
    - else
      %p.text--center
        = link_to '', edit_pro_structure_path(@structure), style: 'width: 100px; height: 100px; background-color: #555; padding-top: 28px; color: white; display: block;', class: 'fa fa-picture-o fa-3x rounded'
  .grid__item.five-tenths.bordered--right.soft-half--right>
    %h5= @structure.name
    - if @structure.description.present?
      .read-more{data: {behavior: 'read-more'}}
        = simple_format @structure.description
    - else
      %p
        %i Pas de description
        %br
        = link_to 'Ajouter ma description', edit_pro_structure_path(@structure)

  .grid__item.three-tenths>
    %h5 Disciplines pratiqu√©es :
    = join_child_subjects @structure
    %p
    - if @structure.website.present?
      = link_to 'Site web', @structure.website, class: 'btn btn--yellow btn--small', target: '_blank', rel: 'nofollow'
    - if @structure.facebook_url.present?
      = link_to 'Facebook', @structure.facebook_url, class: 'btn btn--small btn--yellow', target: '_blank', rel: 'nofollow'

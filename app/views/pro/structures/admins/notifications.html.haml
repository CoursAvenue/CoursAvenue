= side_menu_currently_at 'presentation'
.panel
  = render partial: 'pro/structures/tabs', locals:{ current: 'notifications'}
  .panel__body.soft--ends
    = simple_form_for [:pro, @structure, @admin] do |f|
      %input{type: 'hidden', name: 'return_to', value: notifications_pro_structure_admin_url(@structure, @structure.main_contact, subdomain: 'pro')}
      = f.error_notification
      .soft--sides{ data: { behavior: 'wizard-helper', content: "<p><strong>Pas de spam</strong><br>Nous vous promettons de ne pas vous envoyer de spam. Cette option peut être désactivée à tout moment.</p>" } }
        .grid
          .grid__item.one-third>
            %strong.label--large Envoyez-moi des e-mails quand :
          .grid__item.two-thirds>
            .checkbox-at-left
              = f.input :newsletter_email_opt_in, as: :boolean, wrapper_html: { class: 'flush--top' }, label_html: { class: 'label--large' }, input_html: { class: 'input--large' }
            .checkbox-at-left
              = f.input :monday_email_opt_in, as: :boolean, label_html: { class: 'label--large' }, input_html: { class: 'input--large' }
            .checkbox-at-left
              = f.input :thursday_email_opt_in, as: :boolean, label_html: { class: 'label--large' }, input_html: { class: 'input--large' }
            .checkbox-at-left
              = f.input :jpo_email_opt_in, as: :boolean, label_html: { class: 'label--large' }, input_html: { class: 'input--large' }
      %hr.push--ends
      .soft--sides{ data: { behavior: 'wizard-helper', content: "<p><strong>Une meilleure expérience</strong><br>L'activation de ces rappels garantit la meilleure expérience possible aux professeurs comme aux élèves.</p>" } }
        .grid
          .grid__item.one-third>
            %strong.label--large Envoyez-moi un rappel quand :
          .grid__item.two-thirds>
            .checkbox-at-left= f.input :student_action_email_opt_in, as: :boolean, wrapper_html: { class: 'flush--top' }, label_html: { class: 'label--large' }, input_html: { class: 'input--large' }

        = f.submit 'Enregistrer', class: 'btn btn--green btn--full', data: { disable_with: "En cours d'enregistrement" }

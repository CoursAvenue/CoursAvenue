.input{ data: { behavior: 'date-range', 'start-date '=> '#start-date', 'end-date '=> '#end-date' }}
  %label.label--large.required.control-label Dates
  %input.input--large#start-date.datepicker-input{type: 'text', value: (@planning.start_date.nil? ? '' : l(@planning.start_date)), placeholder: '02/08/2013', name: 'planning[start_date]'}
  %label.label--large -
  %input.input--large#end-date.datepicker-input{type: 'text', value: (@planning.end_date.nil? ? '' : l(@planning.end_date)), placeholder: '04/08/2013', name: 'planning[end_date]'}
  - if f.object.errors.include? :end_date
    .alert.alert-error.flush= f.object.errors.messages[:end_date].to_sentence
  - if f.object.errors.include? :start_date
    .alert.alert-error.flush= f.object.errors.messages[:start_date].to_sentence

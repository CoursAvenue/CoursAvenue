= side_menu_currently_at 'courses'
.panel
  .panel__header.soft.text--center.bordered--bottom-on-stick{ style: 'height: 80px;', data: { behavior: 'sticky', offset_top: 45, z: 500 } }
    .grid
      .grid__item.two-twelfths.v-middle>
        %h4.flush Ajouter un :
      .grid__item.ten-twelfths.v-middle.text--center>
        = link_to 'Cours collectif', new_pro_structure_course_path(@structure, type: 'Course::Lesson'), class: 'btn btn--green btn--large fancybox.ajax', data: { behavior: 'modal', width: '750', padding: '0', close_click: 'false', action: 'new_course', course_type: 'lesson' }
        = link_to 'Cours particulier', new_pro_structure_course_path(@structure, type: 'Course::Private'), class: 'btn btn--green btn--large fancybox.ajax', data: { behavior: 'modal', width: '750', padding: '0', close_click: 'false', action: 'new_course', course_type: 'private' }

  .panel__body
    #lessons_header.soft.bg-white.bordered--bottom-on-stick{ data: { behavior: 'sticky', offset_top: 125, old_width: 'true', z: 300 } }
      %h3.flush Cours collectifs
    .soft--sides
      %p{ class: (@courses.lessons.empty? ? '' : 'hidden'), data: { empty: 'lesson'} }
        Vous n'avez pas de cours.
        = link_to 'Ajouter un cours', new_pro_structure_course_path(@structure, type: 'Course::Lesson'), class: 'fancybox.ajax', data: { behavior: 'modal', width: '750', padding: '0', close_click: 'false' }
      - price_groups = @structure.price_groups.for_lessons
      #lesson-list.block-list
        - @courses.lessons.each_with_index do |course, index|
          = render partial: 'pro/structures/courses/live_form', locals: { course: course, structure: @structure, price_groups: price_groups }

    %hr.push--top.flush--bottom

    .bg-white.soft.bg-white.bordered--bottom-on-stick{ data: { behavior: 'sticky', offset_top: 125, old_width: 'true', pushed: '#lessons_header', z: 400 } }
      %h3.flush Cours particuliers

    .soft--sides
      %p{ class: (@courses.privates.empty? ? '' : 'hidden'), data: { empty: 'private'} }
        Vous n'avez pas de cours particulier.
        = link_to 'Ajouter un cours particulier', new_pro_structure_course_path(@structure, type: 'Course::Private'), class: 'fancybox.ajax', data: { behavior: 'modal', width: '750', padding: '0', close_click: 'false' }
      - price_groups = @structure.price_groups.for_privates
      #private-list.block-list
        - @courses.privates.each_with_index do |course, index|
          = render partial: 'pro/structures/courses/live_form', locals: { course: course, structure: @structure, price_groups: price_groups }

= content_for :scripts do
  :javascript
    $(function() {
        $('body').on('change', 'select[data-type=price-group]', function(event) {
            $(this).closest('form').submit();
        });
    });

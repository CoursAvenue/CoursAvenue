        %table#progress-comments.push-half--right.flush--bottom
          %tbody
            %tr{style: 'background: #e7e1da;'}
              - @structure.comments.accepted.limit(15).order('created_at ASC').each do |comment|
                %td.text--center.hard{style: "width: 6.6%;"}

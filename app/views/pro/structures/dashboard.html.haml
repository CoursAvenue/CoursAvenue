                    %a{ href: 'javascript:void(0)' }
                      %i.fa-comment.white
              - if @structure.comments.count < 15
                - (15 -@structure.comments.accepted.count).times do |index|
                  %td.text--center.hard{style: "width: 6.6%;"}
                    &nbsp;
        %table.push-half--right
          %thead
            %tr

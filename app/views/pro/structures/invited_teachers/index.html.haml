= side_menu_currently_at 'share'

= render partial: 'pro/structures/invited_teachers/tabs', locals: { current: 'list' }

%table.table--data.table--striped
  %thead
    %tr
      %th Email
      %th S'est créé un compte
      - if current_pro_admin.super_admin?
        %th
  %tbody
    - @invited_teachers.each do |invited_teacher|
      %tr
        %td= invited_teacher.email
        %td
          - if invited_teacher.registered?
            %i.fa-check
        - if current_pro_admin.super_admin?
          %td.text--right
            = link_to pro_structure_invited_teacher_path(@structure, invited_teacher), method: :delete, class: 'btn btn--red btn--small' do
              %i.fa-trash-o
              Supprimer




= simple_form_for [:pro, @structure, @newsletter],
  url: mailing_list_create_pro_structure_newsletter_path(@structure, @newsletter) do |f|
  .panel.push--down
    .panel__body.soft
      .soft
        .one-whole
          %input{ type: 'radio', id: 'mailing_list_type_all', name: 'mailing_list_type', value: 'all', class: 'one-whole', data: { hide: { import: true } } }
          %label{ for: 'mailing_list_type_all' }
            Envoyer à tous les contacts du répertoire
        .one-whole
          %input{ type: 'radio', id: 'mailing_list_type_some', name: 'mailing_list_type', value: 'some', class: 'one-whole', data: { hide: { import: true } } }
          %label{for: 'mailing_list_type_some'}
            Envoyer uniquement aux contacts dont l'étiquette
            %select
              %option{ value: 'is' } est
              %option{ value: 'isnot' } n'est pas
              %option{ value: 'contains' } contient
              %option{ value: 'containsnot' } ne contient pas
            %select
              - @used_tags.each do |tag|
                %option{ value: tag }= tag
        .one-whole
          %input{ type: 'radio', id: 'mailing_list_type_new', name: 'mailing_list_type', value: 'new', class: 'one-whole', data: { show: { import: true } } }
          %label{for: 'mailing_list_type_new'}
            Importer une nouvelle liste de contacts

        %div.text--center.soft.hidden{ data: { import: true } }
          %p Attention : le ficher d'import doit étre un fichier Excel (format .xls, .xlsx ou .csv) et ne doit contenir qu'une colonne contenant toutes vos adresses emails.
          = link_to new_pro_structure_user_profile_import_path(@structure), class: 'btn btn--blue btn--large' do
            %i.fa.fa-plus
            Importer mon fichier de contact

    .text--center
      = f.submit 'Enregistrer et Continuer', class: 'btn btn--bigger btn--green'

      -# = link_to 'Enregistrer et Continuer', metadata_pro_structure_newsletter_path(@structure, @newsletter), class: 'btn btn--bigger btn--green'

= content_for :scripts do
  :javascript
    $('input[data-hide-import]').on('change', function() {
        if ($(this).is(':checked')) {
            $('[data-import]').slideUp();
        }
    });

    $('input[data-show-import]').on('change', function() {
        if ($(this).is(':checked')) {
            $('[data-import]').slideDown();
        }
    });

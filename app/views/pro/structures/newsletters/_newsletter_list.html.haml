%div
  %h2
    Newsletters précédentes

.soft--sides
  - @newsletters.each do |newsletter|
    .flexbox.push--bottom
      .flexbox__item.v-middle
        = link_to edit_pro_structure_newsletter_path(@structure, newsletter) do
          %h4.flush--bottom
            = newsletter.title
            %span.caps.bg-gray.white.smaller-print= newsletter.badge
        Liste de diffusion :
        %strong= newsletter.mailing_list
        %br
        Status :
        %strong= newsletter.status

      .flexbox__item.v-middle.text--right
        = link_to preview_newsletter_pro_structure_newsletter_path(@structure, newsletter), class: 'btn btn--bigger btn--green fancybox.ajax', data: { behavior: 'modal', width: '700', padding: 0 } do
          %i.fa.fa-eye
        = link_to edit_pro_structure_newsletter_path(@structure, newsletter), class: 'btn btn--bigger btn--green' do
          %i.fa.fa-pencil
        = link_to duplicate_pro_structure_newsletter_path(@structure, newsletter), class: 'btn btn--bigger btn--green' do
          %i.fa.fa-files-o
        = link_to pro_structure_newsletter_path(@structure, newsletter), class: 'btn btn--bigger btn--red', method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cette newsletter ?' } do
          %i.fa.fa-trash-o
      %hr

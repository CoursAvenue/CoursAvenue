.grid
  .grid__item.seven-tenths>
  .grid__item.three-tenths>
    %div
      %strong Facture n° #{@order.public_order_id}
    %div Date : #{l(@order.created_at.to_date)}
    %div
      Moyen de paiement :
      - if @order.subscription_plan.payed_through_paypal?
        Paypal
      - else
        carte bancaire
%div.three-tenths>
  %div CoursAvenue SAS
  %div 39 boulevard Auguste Blanqui
  %div 75013 Paris
  %div FRANCE

.grid
  .grid__item.seven-tenths>
  .grid__item.three-tenths>
    %div
      %strong Destinataire
    - if @structure.order_recipient.present?
      %div= simple_format @structure.order_recipient
    - else
      %div= @structure.name
      %div= @structure.street
      %div= "#{@structure.zip_code} #{@structure.city.name}"
      %div France
%p
  %strong
    Détails de la facture
%table.table--data.table--striped
  %thead
    %tr
      %th Type
      %th Description
      %th Qté
      %th TVA
      %th Prix Unit.
      %th.text--right Montant
  %tbody
    %tr.bordered--bottom
      %td Abonnement
      %td CoursAvenue Premium
      %td 1
      %td 20%
      %td= readable_amount(@order.amount_without_promo)
      %td.text--right= readable_amount(@order.amount_without_promo)
    %tr.no-stripe
      %td
      %td
      %td
      %td
      %td Remise
      %td.text--right
        - if @order.promotion_code
          = "-#{@order.promotion_code.promo_amount}€"
        - else
          0,00€
    %tr.no-stripe
      %td
      %td
      %td
      %td
      %td Total HT
      %td.text--right= readable_amount(@order.amount / 1.20)
    %tr.no-stripe
      %td
      %td
      %td
      %td
      %td TVA
      %td.text--right= readable_amount(@order.amount - @order.amount / 1.20)
    %tr.no-stripe.f-weight-bold
      %td
      %td
      %td
      %td
      %td Total TTC
      %td.text--right= readable_amount(@order.amount)
    %tr.no-stripe.f-weight-bold
      %td
      %td
      %td
      %td
      %td PAYÉ
      %td.text--right= readable_amount(@order.amount)


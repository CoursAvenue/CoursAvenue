= side_menu_currently_at 'premium'

.panel
  .panel__header.soft
    %h3.flush Historique des factures
  .panel__body.soft
    %table.table--striped.epsilon
      %thead
        %tr
          %th Offre
          %th Date
          %th Opération
          %th Payé
          %th # Facture
      %tbody
        - @orders.each do |order|
          %tr
            %td Premium
            %td= l(order.created_at, format: :date_short)
            %td Carte bancaire
            %td= "#{('%.2f' % order.amount).gsub('.', ',')}€"
            %td= order.order_id

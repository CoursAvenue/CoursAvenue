                        .grid__item.v-middle.two-twelfths>
                          = price_form.input :amount, placeholder: 'Ex. : 250', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'two-thirds flush inline-block v-middle' }, as: :string
                          .inline-block.v-middle.label--large €
                        .grid__item.v-middle.two-twelfths.premium-box.soft-half--ends.hard--sides.text--center>
                          = price_form.input :promo_amount, placeholder: 'Ex. : 200', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'two-thirds flush inline-block v-middle' }, as: :string
                          .inline-block.v-middle.label--large €
                        .grid__item.v-middle.five-twelfths>
                          = price_form.input :info, as: :string, placeholder: 'Ex. : 2 cours par semaine', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'flush v-middle' }
                      = price_form.input :type, as: :hidden
                .input.flush
                  %a#add-subscription{ href: 'javascript:void(0)', data: { trigger: true } }
                    %i.fa.fa-plus
                    Ajouter une ligne

      .soft--sides.push--top#per-registration-fee-form{ class: @registrations.select{ |price| price.persisted? or price.errors.any? }.any? ? '' : 'hidden', data: { behavior: 'form-group' } }
        .grid

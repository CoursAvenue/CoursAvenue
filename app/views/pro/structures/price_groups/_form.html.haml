                        .grid__item.v-middle.three-twelfths<>
                          = price_form.input :promo_amount, placeholder: 'Ex. : 20', label: false, input_html: { id: "premium_offer_#{i}_promo_amount", class: 'flush one-whole input--large' }, wrapper_html: { class: 'five-twelfths flush inline-block v-middle' }, as: :string

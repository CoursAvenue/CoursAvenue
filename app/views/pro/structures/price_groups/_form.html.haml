            %h5.flush.label--large Adhésion annuelle
          .grid__item.ten-twelfths.v-top>
            .registration-fees{ data: { behavior: 'show-more-on-demand' } }
              - @registrations.each_with_index do |item, i|
                - i += 600
                = f.simple_fields_for :prices, item, child_index: i do |registration_form|
                  .flush--top.registration-fee.push-half--bottom.relative{ data: { el: true, hidden: !registration_form.object.persisted? } }
                    %a.pointer.absolute{ href: 'javascript:void(0);', style: 'left: -1.3em; top: 0.8em;', data: { clear: true } }
                      %i.fa.fa-times
                    .grid
                      .grid__item.v-middle.one-quarter>
                        %select.input--large{ data: { behavior: 'disable-toggle-input', el: "#non_free_subscription_#{i}" } }
                          %option{ selected: item.amount == nil } Choisissez une option
                          %option{ value: 'hide', selected: item.free? } Gratuite
                          %option{ value: 'show', selected: (!item.free? and item.amount.present?) } Payante
                      .grid__item.v-middle.two-twelfths>
                        %div{ id: "non_free_subscription_#{i}" }>
                          = registration_form.input :amount, placeholder: 'Ex. : 15', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'flush two-thirds v-middle inline-block' }, as: :string
                          .inline-block.v-middle.label--large €
                      .grid__item.v-middle.two-twelfths>
                      .grid__item.v-middle.five-twelfths>
                        = registration_form.input :info, as: :string, placeholder: 'Ex. : Pour les enfants', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'flush--ends' }
                    = registration_form.input :type, as: :hidden
              .input.flush
                %a#add-registration-fee{ href: 'javascript:void(0)', data: { trigger: true } }
                  %i.fa.fa-plus
                  Ajouter une ligne
      %hr.push--ends
      .grid.soft-half
        .grid__item.v-middle.one-quarter.text--right>
          %h5.flush Ajouter un tarif découverte
        .grid__item.v-middle.three-quarters>
          - unless @price_group.for_training?
            %a.btn.btn--green{ data: { behavior: 'show-price-group-form', el: '#trial-course-form' } } Cours d'essai
          %a.btn.btn--green{ data: { behavior: 'show-price-group-form', el: '#premium-prices-form' } } Offre spéciale
          %a.btn.btn--green{ data: { behavior: 'show-price-group-form', el: '#discounts-form' } } Tarif réduit

      %hr.push--top.flush--bottom
      .premium-box
        - if @trial and !@price_group.for_training?
          .soft#trial-course-form{ class: (@trial.persisted? or @trial.errors.any? ? '' : 'hidden' )}
            .grid
              .grid__item.two-twelfths.v-top>
                %h5.flush.label--large Cours d'essai
              .grid__item.ten-twelfths.v-top>
                = f.simple_fields_for :prices, @trial, child_index: 300 do |registration_form|
                  .grid
                    .grid__item.v-middle.one-quarter>
                      %select.input--large{ data: { behavior: 'disable-toggle-input', el: '#trial_amount' } }
                        %option{ selected: @trial.amount == nil } Choisissez une option
                        %option{ value: 'hide', selected: @trial.free? } Gratuit
                        %option{ value: 'show', selected: (!@trial.free? and @trial.amount.present?) } Payant
                    .grid__item.v-middle.two-twelfths>
                      #trial_amount
                        = registration_form.input :amount, placeholder: 'Ex. : 15', label: false, input_html: { class: 'one-whole input--large' }, wrapper_html: { class: 'flush two-thirds inline-block v-middle' }, as: :string
                        .inline-block.v-middle.label--large €
                    .grid__item.v-middle.two-twelfths>
                    .grid__item.v-middle.five-twelfths>
                      = registration_form.input :info, as: :string, placeholder: 'Ex. : Infos. Ex. : valable en septembre', label: false, input_html: { class: 'one-whole input--large'}, wrapper_html: { class: 'flush--ends' }
                  = registration_form.input :type, as: :hidden
        .soft--sides.soft-half--ends#premium-prices-form{ class: @premium_offers.select{ |price| price.persisted? or price.errors.any? }.any? ? '' : 'hidden', data: { behavior: 'form-group' } }
          .grid
            .grid__item.two-twelfths.v-top>
              %h5.flush.label--large Offres spéciales
            .grid__item.ten-twelfths.v-top>
              .discounts{ data: { behavior: 'show-more-on-demand' } }
                - @premium_offers.each_with_index do |item, i|
                  - i += 400
                  = f.simple_fields_for :prices, item, child_index: i do |price_form|

<% if @price_group.persisted? %>
    <% if @price_group.for_lesson? %>
        var $element = $("#lessons-table tbody");
    <% else %>
        var $element = $("#trainings-table tbody");
    <% end %>
    $element.append('<%= escape_javascript(render partial: "pro/structures/price_groups/price_group_row", locals: { price_group: @price_group }) %>')
    GLOBAL.flash("Grille tarifaire enregistr√©e", 'success');
    $.fancybox.close();
    setTimeout(function() { $element.yellowFade(); }, 400);
    <% if @price_group.for_lesson? %>
        var $course_to_affect_table = $('#lessons-table');
        var $message_to_hide        = $('#lessons-empty-message');
    <% else %>
        var $course_to_affect_table = $('#trainings-table');
        var $message_to_hide        = $('#trainings-empty-message');
    <% end %>
    $course_to_affect_table.removeClass('hidden');
    $message_to_hide.addClass('hidden')
<% else %>
    $.fancybox("<%= escape_javascript(render partial: 'pro/structures/price_groups/form') %>", { width: 1100, maxWidth: 1100, padding: 0 });
<% end %>
initPriceGroupDragAndDrop();



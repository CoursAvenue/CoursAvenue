<% else %>
    var $course_to_affect_container = $('#trainings-to-affect')
<% end %>
$course_to_affect_container.html('<%= escape_javascript(render partial: "pro/structures/price_groups/courses_to_affect", locals: { courses: @courses }) %>')

$course_to_affect_container.yellowFade();
$('#price-group-<%= @price_group.id %>').yellowFade();
initPriceGroupDragAndDrop();

<% if @price_group.errors.empty? %>
    <% if @course %>
        var $element = $("#course-<%= @course.id %>").replaceWith('<%= escape_javascript(render partial: "pro/structures/courses/live_form", locals: { course: @course, structure: @structure }) %>')
        COURSAVENUE.helperMethods.flash("Grille tarifaire enregistrée", 'success');
        $.fancybox.close();
        $element.yellowFade({ delay: 400 });
    <% else %>
      $('#price-group-<%= @price_group.id %>').replaceWith('<%= escape_javascript(render partial: "pro/structures/price_groups/price_group", locals: { price_group: @price_group }) %>')
      COURSAVENUE.helperMethods.flash("Grille tarifaire enregistrée", 'success');
      $.fancybox.close();
      $('#price-group-<%= @price_group.id %>').yellowFade({ delay: 400 });
    <% end %>
<% else %>
    $.fancybox("<%= escape_javascript(render partial: 'pro/structures/price_groups/form') %>", { width: 1100, maxWidth: 1100, padding: 0 });
<% end %>

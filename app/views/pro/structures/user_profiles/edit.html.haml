= simple_form_for [:pro, @structure, @user_profile], remote: true do |f|
  .panel
    .panel__header.soft
      %h4.push-half--bottom= @user_profile.full_name
      %p.flush
        = @user_profile.email
      %div
        - @user_profile.tags.each do |tag|
          .lbl.lbl--small= tag.name
    .panel__body.soft
      = f.input :phone
      = f.input :mobile_phone
      = f.input :address, as: :text
      = f.input :notes, as: :text
      .grid
        .grid__item.one-fifth>
          %a.btn.btn--gray.btn--full{ onclick: '$.fancybox.close()' } Annuler
        .grid__item.four-fifths>
          = f.submit 'Enregistrer', class: "btn btn--green btn--full", data: { disable_with: "En cours d'enregistrement" }

= side_menu_currently_at 'Pages verticales'

= image_tag 'pro/vertical-help.png'
- if @subject.image.present?
  = image_tag @subject.image.url

.form-white-box
  = simple_form_for [:pro, @subject] do |f|
    = f.input :name
    = f.input :image
    = f.input :title
    = f.input :subtitle
    = f.input :description, input_html: { data: { behavior: 'autoresize'} }
    = f.input :good_to_know, input_html: { data: { behavior: 'autoresize'} }
    = f.input :needed_meterial, input_html: { data: { behavior: 'autoresize'} }
    = f.input :tips, input_html: { data: { behavior: 'autoresize'} }
    .form-actions
      = f.submit 'Mettre Ã  jour', class: 'btn btn--green'


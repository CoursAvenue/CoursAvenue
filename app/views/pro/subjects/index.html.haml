%table
  %thead
    %tr
      %th Nom
      %th Image
      %th
  %tbody
    - @subjects.each do |subject|
      %tr
        %td
          - if subject.parent
            = "#{subject.parent.name} - #{subject.name}"
          - else
            = subject.name
        %td
          - if subject.image.present?
            %i.icon-check
        %td= link_to 'Editer', edit_pro_subject_path(subject)


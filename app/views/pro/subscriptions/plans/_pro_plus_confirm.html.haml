.panel
  .panel__header.soft--sides.soft-half--ends
    .delta.flush.inline-block.soft-half--right
      OFFRE
      %strong= plan.public_name.upcase
    .inline-block
      Passer à l'offre
      = link_to 'Modules', confirm_choice_pro_structure_subscriptions_path(@structure, plan_id: plan.other_plan), class: 'fancybox.ajax', data: { behavior: 'modal', width: 800, padding: 0 }

  .panel__body.soft
    = render partial: 'pro/subscriptions/plans/confirm_header_panel', locals: { text: "Equipez votre site Internet des meilleurs outils pour booster vos inscriptions", plan: plan }

  .panel__header.soft--sides.soft-half--ends.bordered--top
    %h4.flush INCLUS DANS L'OFFRE
  .panel__body.soft
    .grid
      .grid__item.one-third>
        .text--center.line-height-1-5.v-middle.soft-half--bottom>
          .f-weight-bold.delta Annonce sur CoursAvenue
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.orange.soft-half--bottom>
          Profil complet
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.orange.soft-half--bottom>
          Inscriptions en ligne
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.orange>
          Avis & Livre d'Or
      .grid__item.one-third>
        .text--center.v-middle.soft-half--bottom>
          .line-height-1-3.f-weight-bold.delta Tout inclus dans un site web
        .text--center.epsilon.line-height-1-5.v-middle.green.soft-half--bottom>
          .epsilon.f-weight-bold Site web & mobile
          %div spécialement dédié aux loisirs
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.green.soft-half--bottom>
          .epsilon.f-weight-bold Nom de domaine & hébergement
        .text--center.epsilon.line-height-1-5.v-middle.green.soft-half--bottom>
          .epsilon.f-weight-bold Page planning
          %div optimisée mobiles & tablettes
        .text--center.line-height-1-5.v-middle.green.soft-half--bottom>
          .epsilon.f-weight-bold Inscriptions en ligne 24h/24
          %div avec ou sans paiement en ligne
        .text--center.epsilon.line-height-1-5.v-middle.green.soft-half--bottom>
          .epsilon.f-weight-bold Bons cadeaux
          %div pour que vos activités soient offertes
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.green>
          Livre d'Or
      .grid__item.one-third>
        .text--center.v-middle.soft-half--bottom>
          .line-height-1-3.f-weight-bold.delta Outils de gestion
        .text--center.epsilon.line-height-1-5.v-middle.dark-blue.soft-half--bottom>
          .epsilon.f-weight-bold Centralisation de vos inscriptions
          %div notification par e-mail / SMS pour chaque nouvel inscrit
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.dark-blue.soft-half--bottom>
          Newsletters
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.dark-blue.soft-half--bottom>
          Multi-postage sur les réseaux sociaux
        .text--center.epsilon.line-height-1-5.v-middle.f-weight-bold.dark-blue.soft-half--bottom>
          Statistiques de trafic

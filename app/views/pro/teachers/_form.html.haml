= simple_form_for [:pro, @structure, @teacher] do |f|
  .form-white-box
    = f.error_notification
    = f.input :name
    = f.input :description, input_html: {'data-behavior' => 'autoresize'}
    .form-actions
      - if @teacher.new_record?
        = f.submit 'Valider', class: 'btn btn--success'
      - else
        = f.submit 'Modifier', class: 'btn btn--primary'

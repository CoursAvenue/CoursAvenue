%header.header
  .main-container.grid--full
    .grid__item.one-half.palm--one-half>
      = link_to root_path, class: 'logo', target: '_blank' do
        - if request.subdomain == 'pro'
          = image_tag 'logo_pro.png', width: 200, alt: 'Tous les cours et stages autour de vous | CoursAvenue.com'
        - else
          = image_tag 'logo.png', width: 200, alt: 'Tous les cours et stages autour de vous | CoursAvenue.com'
    .grid__item.one-half.v-middle.text--right.visuallyhidden--palm
      %div
        %i.icon-phone-sign.orange{style: 'font-size: 22px;'}
        = image_tag 'pages/phone_number.png', height: 15
      %div
        = image_tag 'pages/email_contact.png', height: 10

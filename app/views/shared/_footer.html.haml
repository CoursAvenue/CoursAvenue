          .grid__item.one-quarter.lap-one-half.palm-one-whole>
            %h5.blue Partenaires
            %ul.discrete-list.milli
              %li= link_to 'Référencez vos cours !', 'http://pro.coursavenue.com'
              %li= link_to 'Nos convictions',     pro_pages_convictions_url(subdomain: 'pro'), title: 'Nos convictions'

%footer.main-footer.relative.print--hidden
  .main-container.soft--ends
    .grid
      .grid__item.one-quarter.palm-one-whole>
        %p.push-half--bottom
          %strong Utilisateurs pratiquants
        %ul.no-bullet-list.line-height-1-7
          %li= link_to 'Pourquoi CoursAvenue ?',           pages_why_url(subdomain: 'www'), rel: :nofollow, title: 'Pourquoi CoursAvenue ?'
          %li= link_to 'Comment ça marche ?',              pages_how_it_works_url(subdomain: 'www'), rel: :nofollow, title: 'Comment ça marche ?'
          %li= link_to 'Foire aux questions Utilisateurs', pages_faq_users_url(subdomain: 'www'), rel: :nofollow, title: 'Foire aux questions Utilisateurs'
          %li= link_to 'Mentions légales Utilisateurs',    pages_mentions_partners_url(subdomain: 'www'), rel: :nofollow, title: 'Mentions légales Utilisateurs'

      .grid__item.one-quarter.palm-one-whole>
        %p.push-half--bottom
          %strong Partenaires
        %ul.no-bullet-list.line-height-1-7
          %li= link_to 'Référencez vos cours !', 'http://pro.coursavenue.com'
          %li= link_to 'Nos convictions',     pro_pages_why_be_recommended_url(subdomain: 'pro'), title: 'Nos convictions'
          %li= link_to 'Présentation',        pro_pages_presentation_url(subdomain: 'pro'), title: 'Présentation'
          %li= link_to 'Recommandations',     pro_pages_why_be_recommended_url(subdomain: 'pro'), title: 'Recommandations'
          %li= link_to 'Offres & Tarifs',     pro_pages_price_url(subdomain: 'pro'), title: 'Offres & Tarifs'
          %li= link_to 'Questions les plus fréquentes', pro_pages_questions_url(subdomain: 'pro'), rel: :nofollow, title: 'Questions les plus fréquentes'
          %li= link_to 'Conditions générales de vente', pages_terms_and_conditions_url(subdomain: 'pro'), rel: :nofollow

      .grid__item.one-quarter.palm-one-whole>
        %p.push-half--bottom
          %strong CoursAvenue
        %ul.no-bullet-list.line-height-1-7
          %li= link_to 'Qui sommes-nous ?', pages_who_are_we_url(subdomain: 'www'), rel: :nofollow
          %li= link_to 'Contact',           pages_contact_url(subdomain: 'www'), rel: :nofollow, title: 'Contact'
          %li= link_to 'Journées Portes Ouvertes',  pages_jpo_url(subdomain: 'www'), rel: :nofollow, title: 'Contact'
          %li= link_to 'Service client',    pages_customer_service_url(subdomain: 'www'), rel: :nofollow, title: 'Service client'
          %li= link_to 'Presse',            pages_press_url(subdomain: 'www'), rel: :nofollow, title: 'Presse'
          %li= link_to 'Blog !',            'http://coursavenue.com/blog', target: '_blank', rel: :nofollow, title: 'Blog'
          %li= link_to 'Jobs',              pages_jobs_url(subdomain: 'www'), rel: :nofollow, title: 'Jobs'

      .grid__item.one-quarter.palm-one-whole>
        %p.push-half--bottom
          %strong Disciplines
        %ul.no-bullet-list.line-height-1-7
          %li= link_to 'Danse'  , subject_structures_url('danse'  , subdomain: 'www')
          %li= link_to 'Théâtre', subject_structures_url('theatre', subdomain: 'www')
          %li= link_to 'Cuisine', subject_structures_url('cuisine', subdomain: 'www')
          %li= link_to 'Zumba'  , subject_structures_url('zumba'  , subdomain: 'www')
          %li= link_to 'Yoga'   , subject_structures_url('yoga'   , subdomain: 'www')
          %li= link_to 'Musique', subject_structures_url('musique', subdomain: 'www')

  .text--center
    %p.push-half--bottom
      %strong Suivez-nous
    %p
      = link_to 'Facebook', 'https://www.facebook.com/CoursAvenue', class: 'push-half--right'
      = link_to 'Twitter', 'http://twitter.com/CoursAvenue'
    %p.push-half--bottom.gray-very-light
      © CoursAvenue

  - if @structure
    .main-container.text--center.visuallyhidden
      = link_to "Tous les cours à #{@structure.city.name}", city_url(@structure.city, subdomain: 'www'), class: 'semi-muted-link', target: :_blank
      - @structure.subjects.uniq.each_with_index do |subject, index|
        - if index > 0
          ,
        = link_to "Cours de #{subject.name} à #{@structure.city.name}", vertical_page_url_for(subject, @structure.city), class: 'semi-muted-link', target: :_blank

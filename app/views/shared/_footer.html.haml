%footer.main-footer
  .main-container
    .flexbox
      .flexbox__item
        = image_tag 'logo.png', class: 'ten-twelfths', alt: 'Le Bon Cours'
        %h5.orange À propos
        %p <b class="green">LeBonCours</b> est la première plateforme de réservation en temps réel des cours et stages aux meilleurs prix. Pour tout public, tout âge, toute discipline, pour des activités de loisirs, mais aussi des formations professionnelles, qualifiantes et diplômantes.

      .flexbox__item.nine-twelfths.palm-one-whole.column-links
        .ilb-wrapper
          .one-quarter.palm-one-half
            %h5.green Utilisateurs pratiquants
            %ul.discrete-list.milli
              %li= link_to 'Pourquoi LeBonCours ?',            pages_why_path
              %li= link_to 'Comment ça marche ?',              pages_how_it_works_path
              %li= link_to 'Foire aux questions Utilisateurs', pages_faq_users_path
              %li= link_to 'Mentions légales Utilisateurs',    pages_mentions_partners_path

          .one-quarter.palm-one-half
            %h5.green Partenaires
            %ul.discrete-list.milli
              %li= link_to 'Référencez vos cours !', 'mailto:referencement@leboncours.com?subject=Référencement de mes cours'
              %li= link_to 'Louez vos salles', 'mailto:referencement@leboncours.com?subject=Location de mes espaces'
              %li= link_to 'Trouvez une salle', pages_find_a_place_path
              %li= link_to 'Foire aux questions Partenaires', pages_faq_partners_path
              %li= link_to 'Conditions générales de vente', pages_terms_and_conditions_path

          .one-quarter.palm-one-half
            %h5.green LeBonCours
            %ul.discrete-list.milli
              %li= link_to 'Qui sommes-nous ?', pages_who_are_we_path
              %li= link_to 'Contact',           pages_contact_path
              %li= link_to 'Service client',    pages_customer_service_path
              %li= link_to 'Presse',            pages_press_path
              %li= link_to 'Blog !',            'http://blog.leboncours.com/', target: '_blank'
              %li= link_to 'Jobs',              pages_jobs_path

          .one-quarter.palm-one-half
            %h5.green Disciplines
            %ul.discrete-list.milli
              %li= link_to 'Danse'  , subject_courses_path('danse')
              %li= link_to 'Théâtre', subject_courses_path('theatre')
              %li= link_to 'Cuisine', subject_courses_path('cuisine')
              %li= link_to 'Zumba'  , subject_courses_path('zumba')
              %li= link_to 'Yoga'   , subject_courses_path('yoga')
              %li= link_to 'Musique', subject_courses_path('musique')

- expanded = false unless expanded.present?
%header.header
  .very-soft.grid--full{class: expanded ? '' : 'main-container'}
    .grid__item.one-third.palm-one-half.v-middle>
      = link_to root_path, class: 'v-middle logo', title: 'CoursAvenue' do
        = image_tag 'logo.png', width: 200, alt: 'CoursAvenue | Tous les cours autour de vous'
    %nav.text--right.grid__item.two-thirds.visuallyhidden--palm.v-middle
      - if current_user
        = render partial: 'shared/help_dropdown', locals: { button_class: 'btn btn--small' }
        #drop-down-el.drop-down__wrapper.grid__item.width-auto.v-middle.hard--left{data: {behavior: 'drop-down', el: '> .drop-down__el', position: 'right'}}
          = link_to dashboard_user_path(current_user) do
            - if current_user.fb_avatar or current_user.avatar.present?
              .grid
                .grid__item.v-middle.width-auto>
                  %b= current_user.first_name
                .grid__item.v-middle.width-auto.soft-half--left
                  - if current_user.avatar.present?
                    = image_tag current_user.avatar.url(:mini), height: 40, class: 'image'
                  - elsif current_user.fb_avatar
                    = image_tag current_user.fb_avatar, height: 40, class: 'image'
            - else
              = current_user.first_name
          %ul.drop-down__el.text--left
            %li.nowrap
              = link_to dashboard_user_path(current_user) do
                %i.fa.fa-user
                Mon profil
            %li.nowrap
              = link_to user_comments_path(current_user) do
                %i.fa.fa-comments
                Mes avis
            %li.nowrap
              = link_to user_conversations_path(current_user) do
                %i.fa.fa-envelope
                Mes messages
            %li.nowrap
              = link_to destroy_user_session_path, method: :delete do
                %i.fa.fa-signout
                Se déconnecter
      - else
        .inline-block
          #connection-registration-buttons
            .inline-block.drop-down__wrapper.soft-half--sides{data: {behavior: 'drop-down', el: '> .drop-down__el', position: 'center'}}
              %a{href: 'javascript:void(0)'} Inscription
              %ul.drop-down__el.text--left
                %li.nowrap
                  = link_to 'Profs, associations, écoles', root_url(subdomain: 'pro'), onclick: "_gaq.push(['_trackEvent', 'Référencer mes cours', 'click','Inscrit'])"
                %li.nowrap
                  = link_to "Élèves", new_user_registration_path, data: {behavior: 'modal', title: 'Connexion', width: 300}, class: 'fancybox.ajax', onclick: "_gaq.push(['_trackEvent', 'Se créer un compte', 'click','Inscrit'])"
            .inline-block.drop-down__wrapper.soft-half--sides{data: {behavior: 'drop-down', el: '> .drop-down__el', position: 'center'}}
              %a{href: 'javascript:void(0)'} Connexion
              %ul.drop-down__el.text--left
                %li.nowrap
                  = link_to "Profs, associations, écoles", new_pro_admin_session_url(subdomain: 'pro')
                %li.nowrap
                  = link_to "Élèves", new_user_session_path, data: {behavior: 'modal', title: 'Connexion', width: 300}, class: 'fancybox.ajax', id: 'connection'
            = render 'shared/help_dropdown'
            .inline-block.soft-half--sides
              = link_to 'Publiez vos cours', root_url(subdomain: 'pro'), onclick: "_gaq.push(['_trackEvent', 'Publier vos cours', 'click','Inscrit'])", class: 'btn btn--green'


= content_for :scripts do
  :javascript
    // ---------------- Comments slideshow
    $(function() {
      if (window.location.hash == '#connection') {
          $('#connection').click();
      }
    });

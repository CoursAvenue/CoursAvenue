%header.header.header--pro
  .main-container.grid--full.hard
    %h1.accessibility
      CoursAvenue
    .grid__item.one-half.v-middle>
      = link_to root_path, class: 'logo' do
        = image_tag 'logo_pro.png', width: 200, alt: 'Tous les cours et stages autour de vous | CoursAvenue.com'

    .grid__item.one-half.v-middle.text--right.visuallyhidden--palm
      %div
        %i.icon-phone-sign.orange.icon-2x
        = image_tag 'pages/phone_number.png', height: 19
      %div
        = image_tag 'pages/email_contact.png', height: 10
      %ul.nav
        %li= link_to 'Accéder à CoursAvenue.com', root_url(subdomain: 'www'), class: 'btn btn--small'
        %li
          = link_to pro_pages_questions_path, class: 'btn btn--blue btn--small', target: '_blank' do
            %i.icon-question-sign
            &nbsp;Des questions ?

        - if current_pro_admin
          - if current_pro_admin.super_admin?
            %li= link_to 'Espace super admin', pro_dashboard_path, class: 'btn btn--green btn--small'
          - elsif current_pro_admin.structure.present?
            %li= link_to 'Tableau de bord', dashboard_pro_structure_path(current_pro_admin.structure), class: 'btn btn--green btn--small'
          %li= link_to 'Se déconnecter', destroy_pro_admin_session_path, class: 'header-link', method: :delete
        - else
          %li
            = link_to new_pro_admin_session_path, class: 'header-link' do
              %i.icon-signin
              Se connecter

%nav.nav-links-wrapper.main-container.page-menu
  = yield :main_navigation

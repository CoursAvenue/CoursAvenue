- params[:start_date] ||= l(Date.today)
- params[:end_date]   ||= l(Date.today + 6.months)

/.header-search-bar.main-container
.header-search-bar
  %div.search-input-wrapper
    %input#search-input{class: 'search-input', placeholder: 'Quoi', type: 'search', name: 'name', value: params[:name], autofocus: true, list: 'subject-list', autocomplete: 'off'}
    .aListCon
      %datalist#subject-list
      <!--[if IE 9]><select disabled><![endif]-->
      - Subject.all.each do |subject|
        %option{value: subject.name}
      <!--[if IE 9]></select><![endif]-->
    = content_for :scripts do
      :javascript
        (function(window, document, undefined) {
          "use strict";
          var myAutocomplete = new Autocomplete("search-input", {
            useNativeInterface : false,
            srcType : "dom"
          });

        })(this, this.document);
  %div.search-input-wrapper
    .input-with-icon
      %input#location-input{class: 'search-input', placeholder: 'OÃ¹', type: 'text', name: 'city', value: @city.try(:name), list: 'location-list', 'data-slug' => @city.try(:slug), autocomplete: 'off'}

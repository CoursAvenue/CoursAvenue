%meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}/
%meta{name: 'viewport',               content: 'width=device-width, initial-scale=1.0' }
%meta{property: 'og:site_name',       content: 'CoursAvenue'}
%meta{property: 'fb:admins',          content: '100000023494269'}
%meta{property: 'og:type',            content: 'website'}
%meta{property: 'og:url',             content: 'http://www.coursavenue.com'}

- #----------------------- TITLE
- if content_for? :title
  %title= yield :title
  %meta{property: "og:title", content: yield(:title)}
- else
  - if @city
    %meta{property: "og:title", content: "Tous les cours et stages à #{@city.name} | CoursAvenue.com"}
    %title= "Tous les cours et stages à #{@city.name} | CoursAvenue.com"
  - else
    %meta{property: "og:title", content: "Tous les cours et stages autour de vous | CoursAvenue.com"}
    %title Tous les cours et stages autour de vous | CoursAvenue.com

- #----------------------- Description
- if content_for? :meta_description
  %meta{ :name => 'description', :content => "#{yield :meta_description}"}
- else
  %meta{property: "description", content: "Trouvez le bon cours au meilleurs prix."}

- #----------------------- Image

%meta{property: "og:image", content: image_path('logo.png')}
- if content_for? :meta_image
  %meta{property: "og:image", content: yield(:meta_image)}

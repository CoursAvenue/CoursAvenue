- expanded = false unless expanded.present?
.print--visible
  = image_tag 'logo.png', width: 250, height: 50
%header.header.print--hidden
  .very-soft.flexbox{class: expanded ? '' : 'main-container'}
    .flexbox__item.palm-one-whole.v-middle>
      = link_to '', root_path, class: 'v-middle coursavenue-header-logo', title: 'CoursAvenue | Tous les cours autour de vous'
    - if Date.today < Date.parse('2014/04/07')
      .flexbox__item.v-middle.text--center.visuallyhidden--palm>
        = link_to open_courses_url(subdomain: 'www'), class: 'v-middle inline-block', title: 'CoursAvenue' do
          = image_tag 'jpo_2014/logo_1_line_orange_small.png', width: 141, height: 40, alt: 'Portes Ouvertes des cours de loisirs', class: 'block'
        = link_to open_courses_url(subdomain: 'www'), class: 'v-middle ff-open-sans line-height-1 push-half--left inline-block visuallyhidden--lap visuallyhidden--palm' do
          %span.f-weight-600 5 000 cours GRATUITS
          %br
          %span.f-weight-300.milli 5-6 avril en Île-de-France
        = link_to 'Participer', open_courses_url(subdomain: 'www'), class: 'btn btn--yellow v-middle push-half--left soft--sides', onclick: "ga('send', 'event', 'Participer', 'click', 'header')"
    %nav.text--right.flexbox__item.v-middle.nowrap.visuallyhidden--palm.print--hidden>
      - if current_pro_admin
        = render partial: 'shared/headers/admin_nav'
      - elsif current_user
        = render partial: 'shared/headers/user_nav'
      - else
        .inline-block
          #connection-registration-buttons
            .inline-block.drop-down__wrapper
              = link_to "Inscription", new_user_registration_path, data: {behavior: 'modal', title: 'Connexion', width: 600}, class: 'fancybox.ajax', onclick: "ga('send', 'event', 'Se créer un compte', 'click','Inscrit')"
            .inline-block.drop-down__wrapper.soft--sides
              = link_to "Connexion", new_user_session_path, data: {behavior: 'modal', title: 'Connexion', width: 600}, class: 'fancybox.ajax', id: 'connection'
            .inline-block
              = link_to 'Publiez vos cours', root_url(subdomain: 'pro'), onclick: "ga('send', 'event', 'Publier vos cours', 'click','Inscrit')", class: 'btn btn--green'
            = render 'shared/help_dropdown'


= content_for :scripts do
  :javascript
    // ---------------- Comments slideshow
    $(function() {
      if (window.location.hash == '#connection') {
          $('#connection').click();
      }
    });

- expanded = false unless expanded.present?
%header.header
  .very-soft.flexbox{class: expanded ? '' : 'main-container'}
    .flexbox__item.palm-one-half.v-middle>
      = link_to root_path, class: 'v-middle logo', title: 'CoursAvenue' do
        = image_tag 'logo.png', width: 200, alt: 'CoursAvenue | Tous les cours autour de vous'
    .flexbox__item.palm-one-half.v-middle.text--center>
      = link_to open_courses_url(subdomain: 'www'), class: 'v-middle inline-block', title: 'CoursAvenue' do
        = image_tag 'jpo_2014/logo_1_line_orange_small.png', width: 141, height: 40, alt: 'Portes Ouvertes des cours de loisirs', class: 'block'
      = link_to open_courses_url(subdomain: 'www'), class: 'v-middle ff-open-sans line-height-1 push-half--left inline-block visuallyhidden--lap visuallyhidden--palm' do
        %span.f-weight-600 5 000 cours GRATUITS
        %br
        %span.f-weight-300.milli 5-6 avril en Île-de-France
      = link_to 'Participer', open_courses_url(subdomain: 'www'), class: 'btn btn--yellow v-middle push-half--left soft--sides'
    %nav.text--right.flexbox__item.v-middle.nowrap>
      - if current_pro_admin
        = render partial: 'shared/headers/admin_nav'
      - elsif current_user
        = render partial: 'shared/headers/user_nav'
      - else
        .inline-block
          #connection-registration-buttons
            .inline-block.drop-down__wrapper.soft-half--sides
              = link_to "Inscription", new_user_registration_path, data: {behavior: 'modal', title: 'Connexion', width: 300}, class: 'fancybox.ajax', onclick: "ga('send', 'event', 'Se créer un compte', 'click','Inscrit')"
            .inline-block.drop-down__wrapper.soft-half--sides
              = link_to "Connexion", new_user_session_path, data: {behavior: 'modal', title: 'Connexion', width: 300}, class: 'fancybox.ajax', id: 'connection'
            = render 'shared/help_dropdown'
            .inline-block.soft-half--sides
              = link_to 'Publiez vos cours', root_url(subdomain: 'pro'), onclick: "ga('send', 'event', 'Publier vos cours', 'click','Inscrit')", class: 'btn btn--green'


= content_for :scripts do
  :javascript
    // ---------------- Comments slideshow
    $(function() {
      if (window.location.hash == '#connection') {
          $('#connection').click();
      }
    });

%header.header.header--pro.soft-half--sides
  .grid--full
    .grid__item.one-third.v-middle>
      .grid
        = link_to root_path, class: 'logo grid__item inline-block v-middle' do
          = image_tag 'logo_pro.png', width: 200, alt: 'Tous les cours et stages autour de vous | CoursAvenue.com'
    %nav.grid__item.two-thirds.text--right.v-middle
      %ul.nav
        %li= link_to 'CoursAvenue.com', root_url(subdomain: 'www'), class: 'btn btn--small'
        %li= render 'shared/question_dropdown_menu'

        - if current_pro_admin
          %li.drop-down__wrapper{data: {behavior: 'drop-down', el: '> .drop-down__el', position: 'right'}}
            - if current_pro_admin.super_admin?
              = link_to 'Espace super admin', pro_dashboard_path, class: 'btn btn--green btn--small'
            - else
              = link_to 'Mon profil', dashboard_pro_structure_path(current_pro_admin.structure), class: 'btn btn--green btn--small'
            %ul.drop-down__el
              %li.nowrap
                = link_to destroy_pro_admin_session_path, method: :delete do
                  DÃ©connexion
                  %i.fa.fa-sign-out

        - else
          %li
            = link_to new_pro_admin_session_path, class: 'header-link' do
              %i.fa.fa-sign-in
              Se connecter


  .grid__item.ten-twelfths.v-top>
    %h1.push-half--bottom= @structure.name
    -# Structure type
    - if @structure.structure_type
      %p.flush.inline-block.v-middle.epsilon
        - if @structure.structure_type.present?
          %strong #{t(@structure.structure_type)}
        - else
          Structure
        proposant des
        = @structure_decorator.given_course_types
      - if @structure.premium?
        .epsilon.v-middle.push-half--left.inline-block.lbl.lbl--green Offres dÃ©couvertes
      .inline-block{ data: { type: "filter-breadcrumbs" } }
  .grid__item.two-twelfths.v-bottom>
    .inline-bock.text--right
      %a.inline-block.f-decoration-not-underlined.text--center{ href: '#avis' }
        %strong.beta= structure.comments_count
        %br
        recommandations
        .visuallyhidden{itemprop: 'aggregateRating', itemscope: true, itemtype: 'http://data-vocabulary.org/review-aggregate'}
          %meta{property: 'v:rating', itemprop: 'rating', content: 5}
          %meta{itemprop: 'count', content: structure.comments_count}
          %meta{itemprop: 'itemreviewed', content: structure.name}
          %meta{itemprop: 'name', content: structure.name}
          %meta{itemprop: 'street-address', content: structure.street}
          %meta{itemprop: 'postal-code', content: structure.zip_code}
          - if @city
            %meta{itemprop: 'locality', content: @city.name}

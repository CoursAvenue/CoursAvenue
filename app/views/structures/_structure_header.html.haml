#structure-profile-menu.one-whole.west.fixed.on-top-of-the-world{ style: 'top: -100px;' }
  - cache [@structure, 'structure/show/sticker_header'] do
    .bg-site-background.soft-half--ends.bordered--bottom
      .main-container.soft--sides
        .flexbox
          .flexbox__item.v-middle.nowrap>
            .flexbox.top-page-menu
              .flexbox__item.one-twelfth.nowrap.soft-half--right
                %strong= truncate @structure.name, lenght: 25
              - unless @is_sleeping
                .flexbox__item
                  %ul.nav.flush.v-middle.inline-block
                    %li.soft-half--sides
                      %a.muted-link.orange{ href: '#photos-videos', data: { behavior: 'scroll-to', offset_top: '-55' } } Photos
                    %li.soft-half--sides
                      %a.muted-link.orange{ href: '#presentation', data: { behavior: 'scroll-to', offset_top: '-55' } } Présentation
                    - if @structure.plannings.trainings_future.any?
                      %li.soft-half--sides
                        %a.muted-link.orange{ href: '#stages-ateliers ', data: { behavior: 'scroll-to', offset_top: '-55' } } Stages & ateliers
                    - if @structure.courses.lessons.any?
                      %li.soft-half--sides
                        %a.muted-link.orange{ href: '#cours-collectifs', data: { behavior: 'scroll-to', offset_top: '-55' } } Cours réguliers
                    - if @structure.courses.privates.any?
                      %li.soft-half--sides
                        %a.muted-link.orange{ href: '#cours-particuliers', data: { behavior: 'scroll-to', offset_top: '-55' } } Cours particuliers
                    %li.soft-half--sides
                      %a.muted-link.orange{ href: '#avis', data: { behavior: 'scroll-to' } } Avis

              - if @structure.has_trial_courses?
                %a.v-middle.muted-link.cursor-pointer{ data: { behavior: 'show-contact-panel' } }
                  .lbl.lbl--yellow.nowrap.v-middle.push-half--left{ data: { toggle: 'popover', content: @structure_decorator.trial_courses_popover, trigger: 'hover', html: 'true', placement: 'bottom' } }
                    %i.fa.fa-ticket
                    Essai gratuit
                    = t("structures.trial_courses_policy.#{@structure.trial_courses_policy}_nb")

              - if @structure.has_promotion?
                = link_to '#cours-collectifs', data: { behavior: 'scroll-to', offset_top: '-55' }, class: 'muted-link inline v-middle' do
                  .lbl.lbl--yellow.nowrap.v-middle.push-half--left{ data: { toggle: 'popover', content: @structure_decorator.promotion_popover, trigger: 'hover', html: 'true', placement: 'bottom' } }
                    %i.fa-star
                    Promotions
          .flexbox__item.v-middle.nowrap.text--right>
            %a.contact-button.btn.btn--green.nowrap{ data: { behavior: 'show-contact-panel' } }
              Contacter
              = I18n.t("structures.structure_type_contact.#{(@structure.structure_type.present? ? @structure.structure_type : 'structures.other')}")

= content_for :scripts do
  :javascript
      $(function() {
          $('body').addClass('relative').scrollspy({ target: '#structure-profile-menu .top-page-menu', offset: 85 })
      });

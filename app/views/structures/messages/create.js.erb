<% if @conversation and @conversation.persisted? %>
    <% if current_user or @user.active? %>
        $.fancybox("<%= escape_javascript(render partial: 'structures/messages/message_sent') %>", { width: 600, minWidth: 600, maxWidth: 600, padding: 0 });
    <% else %>
        var $panel = $('.new_message').closest('.panel__body').last();
        $panel.fadeOut();
        setTimeout(function() {
            $panel.html("<%= escape_javascript(render partial: 'structures/messages/sign_in_to_send_message') %>");
        }, 400)
        $panel.fadeIn();
    <% end %>
<% else %>
    GLOBAL.flash("Vous n'avez pas remplis toutes les informations");
<% end %>

.white-box.islet
  .grid
    .grid__item.one-fifth>
      - if teacher.image?
        = image_tag teacher.image.url(:normal), class: 'block'
      - elsif can? :manage, teacher
        = link_to edit_pro_structure_teacher_path(@structure, teacher), title: 'Modifier ce professeur', class: 'fancybox.ajax btn btn--small btn--blue', data: {behavior: 'modal', width: 700} do
          %i.fa.fa-picture-o
          Ajouter une photo
    .grid__item.four-fifths>
      - if can? :manage, teacher
        .float--right
          = link_to edit_pro_structure_teacher_path(@structure, teacher), title: 'Modifier ce professeur', class: 'fancybox.ajax btn btn--small btn--orange', data: {behavior: 'modal', width: 700} do
            %i.fa.fa-pencil
            Modifier
          &nbsp;
          = link_to pro_structure_teacher_path(@structure, teacher), method: :delete, title: 'Supprimer ce professeur', data: {confirm: 'ÃŠtes-vous sur de supprimer ce professeur ? Cette action sera irreversible.'}, class: 'btn btn--small btn--red' do
            %i.fa.fa-trash-o
            Supprimer
      %p
        %b= teacher.name
      = simple_format teacher.description

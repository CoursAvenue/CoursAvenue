- content_for :email_title do
  C'est votre dernier jour pour recommander #{@structure.name}

- content_for :logo do
  = link_to structure_url(@structure, subdomain: 'www'), target: '_blank' do
    = image_tag @structure.logo.url(:thumb), style: 'width: 125px; height: 125px;', class: 'block'

- content_for :promo do
  .title
    C'est votre dernier jour pour recommander #{@structure.name}

  .p Bonjour !

  .p
    #{@structure.name} vous a récemment demandé votre avis sur son profil public CoursAvenue : c'est votre dernier jour pour déposer votre recommandation. C'est simple, très rapide, et #{@structure.name} vous en remerciera !

  .p.action
    = link_to 'Déposer ma recommandation', new_structure_comment_url(@structure, email: @email, utm_source: 'email', utm_campaign: 'recommandation', utm_medium: 'stage_3'), class: 'btn btn--green'

  - content_for :under_content_no_box do
    %hr
    = render 'recommandations_form'

  = render 'shared/mailers/footer'

= content_for :footer do
  .p
    Vous recevez cet email car #{@structure.name} est inscrit sur CoursAvenue et vous demande de lui rédiger une recommandation sur ses cours.
    = link_to 'Ne plus recevoir ces emails', unsubscribe_users_url(@user.access_token, subdomain: 'www')

- content_for :email_title do
  %title= @emailing.title

- content_for :under_content_no_box do
  %table.promo-table{ border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
    %tr
      %td.content-block
        = image_tag @emailing.header_image.url, alt: @emailing.header_image_alt, width: 600, height: 244

- content_for :under_content_no_box do
  %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
    %tr{ valign: 'top' }
      %td.soft.v-middle.content-block{ width: 600 }
        = @emailing.body.gsub('<p>', '<div class="p">').gsub('</p>', '</div>').html_safe
        - if @emailing.call_to_action_text.present? and @emailing.call_to_action_url.present?
          .p.action.hard--bottom
            = link_to @emailing.call_to_action_text, URI.encode(@emailing.call_to_action_url), class: 'btn btn--green'

- content_for :under_content_no_box_2 do
  - @emailing.emailing_sections.each do |section|
    - if section.title.present?
      %hr
    %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
      - if section.title.present?
        %tr{ valign: 'top' }
          %td.soft--top.content-block{ colspan: '2', width: '600', style: 'padding-bottom: 0' }
            .title.text--center= section.title

      %tr{ valign: 'top' }
        %td.content-block{ colspan: '2', width: '600', style: 'padding-bottom: 0; padding-left: 7px; padding-right: 7px;' }
          %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '100%' }
            %tr{ valign: 'top' }
              - section.structures.each do |structure|
                %td.content-block{ width: '50%', style: 'padding-bottom: 0;' }
                  = link_to structure_url(structure, subdomain: CoursAvenue::Application::WWW_SUBDOMAIN), target: :_blank, class: 'block' do
                    .text--center
                      - bridge = section.bridge_with_structure(structure)
                      - media_url = bridge.media_url
                      - if media_url.blank?
                        = image_tag structure.logo.url(:thumb), width: 280, height: 210, alt: "Cours de #{bridge.subject_name}"
                      - else media_url
                        = image_tag media_url, width: 280, height: 210, alt: "Cours de #{bridge.subject_name}"
                      .title.hard= bridge.subject_name
                      .p.hard
                        %i= "\"#{bridge.review_text}\" (#{structure.comments.count} avis)"
                        %br
                        = @emailing.call_action(@emailing.section_metadata_two, structure)
                      .p
                        %a{ href: '#' } M'inscrire gratuitement

      - if section.link_name.present? and section.link.present?
        %tr{ valign: 'top' }
          %td.content-block{ colspan: '2', width: '600', style: 'padding-bottom: 0' }
            .p.soft--left= link_to section.link_name, URI.encode(section.link), target: :_blank

  - if @emailing.call_to_action_text.present? and @emailing.call_to_action_url.present?
    %table{ align: 'center', border: '0', cellpadding: '0', cellspacing: '0', width: '600' }
      %tr{ valign: 'top' }
        %td.soft.v-middle.content-block{ width: 600 }
          .p.action.hard--bottom
            = link_to @emailing.call_to_action_text, URI.encode(@emailing.call_to_action_url), class: 'btn btn--green'

- content_for :under_content_gray do
  .title À propos
  .p CoursAvenue est le premier moteur de recherche de cours de loisirs qui permet de relier chacun de nous aux meilleurs professeurs, associations et écoles qui nous entourent.
  .title En savoir plus
  .p.hard--bottom
    = link_to 'Accueil'          , root_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN)             , target: :_blank, class: 'soft--right'
    = link_to 'Qui sommes-nous ?', pages_who_are_we_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN) , target: :_blank, class: 'soft--right'
    = link_to 'Blog'             , blog_articles_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN)    , target: :_blank, class: 'soft--right'
    = link_to 'Contact'          , pages_contact_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN)    , target: :_blank, class: 'soft--right'
    = link_to 'Aide'             , pages_faq_users_url(subdomain: CoursAvenue::Application::WWW_SUBDOMAIN)  , target: :_blank, class: 'soft--right'

= content_for :footer do
  = link_to 'UNSUB_PLACEHOLDER', target: :_blank, class: 'fix-class' do
    Me désinscrire

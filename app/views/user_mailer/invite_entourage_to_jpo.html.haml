- if @structure and @structure.logo?
  - content_for :logo do
    = link_to structure_url(@structure, subdomain: 'www'), target: '_blank' do
      = image_tag @structure.logo.url(:thumb), style: '-ms-interpolation-mode:bicubic;', width: '100', height: '100'

- content_for :promo do
  %h4
    - if @structure
      #{@user_name} vous offre un cours gratuit proposé par #{@structure.name} les 5-6 avril
    - else
      #{@user_name} vous offre un cours gratuit pendant les Journées Portes Ouvertes CoursAvenue

- if @email_text
  = @email_text.html_safe

%p.action
  - if @structure
    = link_to "Participer aux Portes Ouvertes", structure_url(@structure, subdomain: 'www'), class: 'btn btn--green'
  - else
    = link_to "Participer aux Portes Ouvertes", root_url(subdomain: 'www'), class: 'btn btn--green'
%p
  À très bientôt !
%p= @user_name

- content_for :footer do
  %p Vous recevez cet email car #{@user_name} vous invite à Participer aux Portes Ouvertes CoursAvenue.

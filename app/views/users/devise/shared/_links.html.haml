- if controller_name != 'sessions'
  = link_to "J'ai déjà un compte, me connecter", new_session_path(resource_name)
  %br
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Je n'ai pas encore de compte", new_registration_path(resource_name)
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "J'ai oublié mon mot de passe", new_password_path(resource_name)

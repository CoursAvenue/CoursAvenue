- if current_user.invited_users.any?
  %ul.tabs.push--bottom
    %li{class: (current == 'new' ? 'active' : '')}
      = link_to new_user_invited_user_path(current_user) do
        %i.fa.fa-bullhorn
        Parrainage
    %li{class: (current == 'list' ? 'active' : '')}
      = link_to user_invited_users_path(current_user) do
        %i.fa.fa-group
        Suivi des invitations

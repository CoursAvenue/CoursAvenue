= user_menu_currently_at 'Mes cours'

= render partial: 'users/participations/tabs', locals: { current: 'invite-jpo-list' }

- if @invited_users.any?
  %h2 Invitations
  %table.table--striped.table--data.white-box
    %thead
      %tr
        %th Email
        %th S'est créé un compte
    %tbody
      - @invited_users.each do |invited_user|
        %tr
          %td= invited_user.email
          %td
            - if invited_user.registered?
              %i.fa.fa-check

- else
  %h2.text--center Vous n'avez pas encore invité vos proches à l'événement
  .text--center
    = link_to 'Invitez mon entourage', jpo_new_user_invited_users_path(current_user), class: 'btn btn--large btn--blue'

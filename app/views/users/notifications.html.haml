= user_menu_currently_at 'Mes infos'

= render partial: 'tabs', locals: { current: 'notifications' }

%h4 Mes notifications e-mail et téléphone portable (SMS)

.white-box.islet
  = simple_form_for @user do |f|
    %input{type: 'hidden', name: 'return_to', value: notifications_user_path(current_user)}
    .grid
      .grid__item.one-third>
        %strong Envoyez-moi des e-mails quand :
        %p.blue
          %i Nous vous promettons de ne pas vous envoyer de spam. Cette option peut être désactivée à tout moment.
      .grid__item.two-thirds.check_boxes>
        .checkbox-at-left
          = f.input :email_promo_opt_in, wrapper_html: { class: 'flush' }
          = f.input :email_newsletter_opt_in, wrapper_html: { class: 'flush' }
          = f.input :email_passions_opt_in, wrapper_html: { class: 'flush' }

    %hr.push-half--ends
    .grid
      .grid__item.one-third>
        %strong Notifications mobiles/SMS
        %p.blue
          %i Recevez des notifications sur téléphone portable par SMS.
      .grid__item.two-thirds>
        .checkbox-at-left= f.input :sms_opt_in
    = f.submit 'Enregistrer', class: 'btn btn--green btn--full'


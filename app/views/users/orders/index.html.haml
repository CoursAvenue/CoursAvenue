= user_menu_currently_at 'discovery_pass'

.flexbox
  .flexbox__item.one-fifth.v-top.soft-half--left>
    = render partial: 'users/discovery_passes/side_menu', locals: { current: 'my-account' }
  .flexbox__item.four-fifths.v-top.soft-h
    .panel
      .panel__header.soft
        %h3.flush Mes factures
      .panel__body.soft
        %table.table--striped.epsilon
          %thead
            %tr
              %th Offre
              %th Date
              %th Opération
              %th Payé
              %th # Facture
              %th
          %tbody
            - @orders.each do |order|
              %tr
                %td Pass découverte
                %td= l(order.created_at, format: :date_short)
                %td Carte bancaire
                %td= "#{('%.2f' % order.amount).gsub('.', ',')}€"
                %td= order.order_id
                %td= link_to 'Afficher', user_order_path(@user, order)

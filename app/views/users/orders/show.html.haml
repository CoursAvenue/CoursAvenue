= user_menu_currently_at 'discovery_pass'

.flexbox
  .flexbox__item.one-fifth.v-top.soft-half--left.print--hidden>
    = render partial: 'users/discovery_passes/side_menu', locals: { current: 'my-account' }
  .flexbox__item.four-fifths.v-top.soft-h
    .panel
      .panel__header.soft.print--hidden
        %h3.flush Historique des factures
      .panel__body.soft
        = image_tag 'logos/logo@2x.png', width: 200
        .grid
          .grid__item.seven-tenths>
          .grid__item.three-tenths>
            %div
              %strong Facture n° #{@order.order_id}
            %div Date : #{l(@order.created_at)}
            %div
              Moyen de paiement :
              Carte bancaire
        %div.three-tenths>
          %div CoursAvenue SAS
          %div 39 boulevard Auguste Blanqui
          %div 75013 Paris
          %div FRANCE

        .grid
          .grid__item.seven-tenths>
          .grid__item.three-tenths>
            %div
              %strong Destinataire
            %div= @user.name
            %div France
        %p
          %strong
            Détails de la facture
        %table.table--data.table--striped
          %thead
            %tr
              %th Type
              %th Description
              %th Qté
              %th TVA
              %th Prix Unit.
              %th.text--right Montant
          %tbody
            %tr.bordered--bottom
              %td Pass Découverte
              %td Pass Découverte
              %td 1
              %td 20%
              %td= readable_amount(@order.amount)
              %td.text--right= readable_amount(@order.amount)
            %tr.no-stripe
              %td
              %td
              %td
              %td
              %td Total HT
              %td.text--right= readable_amount(@order.amount / 1.20)
            %tr.no-stripe
              %td
              %td
              %td
              %td
              %td TVA
              %td.text--right= readable_amount(@order.amount - @order.amount / 1.20)
            %tr.no-stripe.f-weight-bold
              %td
              %td
              %td
              %td
              %td Total TTC
              %td.text--right= readable_amount(@order.amount)
            %tr.no-stripe.f-weight-bold
              %td
              %td
              %td
              %td
              %td PAYÉ
              %td.text--right= readable_amount(@order.amount)

        %div Siret : 79009610100015 - APE 6201Z - 790 096 101 R.C.S. Paris
        %div N° TVA intracommunautaire FR01790096101
        %div CoursAvenue - SAS au capital de 18948 euros

        .text--center.print--hidden
          = link_to 'Imprimer', 'javascript:window.print()', class: 'btn btn--green soft--sides'

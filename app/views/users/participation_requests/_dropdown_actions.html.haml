.drop-down-el.drop-down__wrapper
  %a.nowrap{ href: '#' }
    Actions
    %i.fa-chevron-down
  .drop-down__el
    %ul.drop-down__el-inner-box.text--left
      - if !participation_request.canceled?
        %li.nowrap
          - if participation_request.pending? and participation_request.last_modified_by == 'Structure'
            = link_to "Accepter le nouveau cr√©neau", accept_participation_request_path(participation_request), method: :patch, class: 'green nowrap'
        %li.nowrap
          = link_to 'Proposer une autre date', edit_structure_participation_request_path(@structure, participation_request, return_to: user_participation_requests_path(@user)), class: 'orange nowrap fancybox.ajax', data: { behavior: 'modal', width: 800, padding: 0 }
      - if !participation_request.canceled?
        %li.nowrap
        = link_to "Annuler l'inscription", cancel_form_structure_participation_request_path(@structure, participation_request, return_to: user_participation_requests_path(@user)), class: 'red nowrap fancybox.ajax', data: { behavior: 'modal', width: 800, padding: 0 }

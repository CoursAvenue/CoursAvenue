= user_menu_currently_at 'inscriptions'
= render 'shared/include_addthisevent'

.panel
  .panel__header.soft
    %h4.line-height-normal.flush Mes inscriptions
  .panel__body.soft
    - if @user.participation_requests.upcoming.any?
      %table.table--data.table--striped
        %thead
          %tr
            %th Statut
            %th Cours et date
            %th Adresse
            %th Professeur
            %th.nowrap
              Ajouter à votre calendrier
        %tbody
          - @user.participation_requests.upcoming.each do |participation_request|
            = render partial: 'users/participation_requests/participation_request', locals: { participation_request: participation_request}
    - else
      %p Vous n'avez pas d'inscription en cours.
      = link_to "Réserver mes cours d'essai", root_search_page_without_subject_path('paris'), class: 'btn btn--green'

    - if @user.participation_requests.past.any?
      %hr.push--ends
        %p.flush
          = link_to "Voir l'historique des inscriptions", '#', data: { behavior: 'show-long-version', 'long-version' => '#previous-subscriptions'}
      .hidden#previous-subscriptions
        %table.table--data.table--striped
          %thead
            %tr
              %th Statut
              %th Cours et date
              %th Adresse
              %th Professeur
          %tbody
            - @user.participation_requests.past.each do |participation_request|
              = render partial: 'users/participation_requests/participation_request', locals: { participation_request: participation_request, calendar: false }

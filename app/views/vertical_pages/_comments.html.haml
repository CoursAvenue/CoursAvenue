- comments.in_groups_of(2, false).each do |review_group|
  .grid.push--bottom
    - review_group.each do |review|
      .grid__item.one-half.palm-one-whole.lap-one-half>
        - cache [review, 'vertical_page/show'] do
          .grid.push--bottom
            .grid__item.soft--left.v-top.text--center.visuallyhidden--palm.three-twelfths>
              = link_to structure_url(review.structure, subdomain: 'www'), class: 'block media-photo', target: :_blank, class: 'muted-link' do
                = (review.user || User.with_avatar.order("RANDOM()").first).decorate.avatar(80)
              .soft-half--top.nowrap
                %strong.line-height-1-5= review.author_name
            .grid__item.soft--sides.v-top.palm-one-whole.nine-twelfths>
              %p.epsilon.push-half--bottom
                %strong= review.title
              %p.line-height-1-3
                = truncate(review.content, length: 500)
              %p.text--right.flush
                %i
                  Ã€ propos de
                  = link_to structure_url(review.structure, subdomain: 'www'), target: :_blank do
                    = "#{review.structure.name} | #{review.course_name}"


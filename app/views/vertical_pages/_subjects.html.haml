.main-container
  .text--center.hard.push--bottom>
  - subjects.each do |subject|
    - subject.vertical_pages.each do |vertical_page|
      .inline-block.one-quarter.very-soft.palm-one-half>
        - if vertical_page.image.present?
          - image = vertical_page.image.url(:thumb)
        - else
          - image = subject_image(subject)
        .relative.bg-cover{style: "background-image: url('#{image}'); height: 150px; "}>
          - cache [subject, vertical_page, 'vertical_page/show/subjects/v1', @city] do
            - if @city
              - url = vertical_page_with_city_path(subject.root, vertical_page, @city)
            - else
              - url = vertical_page_path(subject.root, vertical_page)
            = link_to url, class: 'block show-on-hover__wrapper show-on-hover__wrapper--black-curtain', title: "Cours de #{subject.name}" do
              .home-screen-gallery__title.text--center
                %h6.f-weight-normal.delta.push-half--bottom= vertical_page.subject_name
                .show-on-hover__child.milli Voir le guide
